<div x-data="categoryEditData" x-init="init()" class="min-h-screen bg-[#f9fafb] pb-20">
    <!-- Premium Header -->
    <div class="bg-white/70 backdrop-blur-xl border-b border-gray-100 mb-12">
        <div class="max-w-[1400px] mx-auto px-8 py-10">
            <div
                class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-8 animate__animated animate__fadeIn">
                <div>
                    <div class="flex items-center gap-3 mb-4">
                        <a href="/categories"
                            class="px-3 py-1 bg-gray-100 text-gray-500 text-[10px] font-black rounded-full tracking-wider uppercase hover:bg-gray-200 transition-colors">
                            <i class="fas fa-arrow-left mr-2"></i>Exit to Taxonomy
                        </a>
                        <div class="w-1 h-1 rounded-full bg-gray-300"></div>
                        <span
                            class="text-[10px] font-bold text-gray-400 uppercase tracking-widest text-opacity-80">Category
                            Management</span>
                    </div>
                    <h1 class="text-4xl font-bold text-gray-900 tracking-tight mb-2">Edit Category</h1>
                    <p class="text-gray-400 text-lg font-medium">Update the category name, description, and
                        specification template.</p>
                </div>

                <button @click="saveCategory()" :disabled="saving"
                    class="px-10 py-5 bg-gray-900 text-white rounded-[24px] text-[11px] font-black uppercase tracking-[0.2em] shadow-2xl shadow-gray-200 hover:bg-black active:scale-95 transition-all disabled:opacity-50 flex items-center justify-center gap-4">
                    <i :class="saving ? 'fas fa-spinner fa-spin' : 'fas fa-sync-alt'" class="text-[10px]"></i>
                    <span x-text="saving ? 'Saving...' : 'Update Category'"></span>
                </button>
            </div>
        </div>
    </div>

    <!-- Loading State -->
    <div x-show="loading" class="text-center py-32 animate__animated animate__fadeIn">
        <div class="relative w-20 h-20 mx-auto mb-8">
            <div class="absolute inset-0 border-4 border-gray-100 rounded-full"></div>
            <div class="absolute inset-0 border-4 border-gray-900 rounded-full border-t-transparent animate-spin"></div>
        </div>
        <p class="text-[10px] font-bold text-gray-400 uppercase tracking-[0.3em]">Loading Category...</p>
    </div>

    <!-- Main Canvas -->
    <div x-show="!loading" class="max-w-[1400px] mx-auto px-8">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 animate__animated animate__fadeInUp">
            <!-- Basic Configuration -->
            <div class="lg:col-span-4 space-y-12">
                <div class="bg-white border border-gray-100 rounded-[40px] p-10 shadow-sm">
                    <div class="flex items-center gap-4 mb-10">
                        <div
                            class="w-12 h-12 bg-blue-50 rounded-[18px] flex items-center justify-center text-blue-600 shadow-xl shadow-blue-50">
                            <i class="fas fa-info-circle text-lg"></i>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 tracking-tight">Basic Info</h3>
                    </div>

                    <div class="space-y-8">
                        <div class="space-y-3">
                            <label class="text-[10px] font-bold text-gray-400 uppercase tracking-widest ml-1">Category
                                Name <span class="text-red-500">*</span></label>
                            <input type="text" x-model="formData.name" required placeholder="e.g. Laptops"
                                class="block w-full px-6 py-4 bg-gray-50 border border-transparent rounded-[22px] text-gray-900 font-bold focus:ring-4 focus:ring-blue-50 focus:bg-white focus:border-blue-100 outline-none transition-all">
                        </div>
                        <div class="space-y-3">
                            <label
                                class="text-[10px] font-bold text-gray-400 uppercase tracking-widest ml-1">Description</label>
                            <textarea x-model="formData.description" rows="6"
                                placeholder="Brief functional description..."
                                class="block w-full px-6 py-4 bg-gray-50 border border-transparent rounded-[22px] text-gray-900 font-bold focus:ring-4 focus:ring-blue-50 focus:bg-white focus:border-blue-100 outline-none transition-all resize-none text-sm"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Schema Architecture -->
            <div class="lg:col-span-8">
                <div class="bg-white border border-gray-100 rounded-[40px] p-10 shadow-sm">
                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-12">
                        <div class="flex items-center gap-4">
                            <div
                                class="w-12 h-12 bg-indigo-50 rounded-[18px] flex items-center justify-center text-indigo-600 shadow-xl shadow-indigo-50">
                                <i class="fas fa-star text-lg"></i>
                            </div>
                            <div>
                                <h3 class="text-2xl font-bold text-gray-900 tracking-tight">Specification Template</h3>
                                <p class="text-gray-400 font-medium text-xs mt-1 uppercase tracking-wider">Define the
                                    attributes for this category</p>
                            </div>
                        </div>
                        <button @click.prevent="addSpecField()" type="button"
                            class="px-8 py-4 bg-gray-900 text-white rounded-full text-[10px] font-black uppercase tracking-widest hover:bg-black transition-all flex items-center shadow-xl shadow-gray-200">
                            <i class="fas fa-plus mr-3"></i> Add Field
                        </button>
                    </div>

                    <div class="space-y-6" id="specifications-container">
                        <template x-for="(field, index) in formData.specificationsTemplate" :key="index">
                            <div
                                class="bg-gray-50/50 border border-gray-100 rounded-[32px] p-8 transition-all hover:bg-white hover:shadow-xl hover:shadow-gray-100/50 group animate__animated animate__fadeIn">
                                <div class="flex flex-col xl:flex-row gap-8 items-start">
                                    <div
                                        class="pt-4 cursor-move handle text-gray-300 group-hover:text-gray-900 transition-colors">
                                        <i class="fas fa-grip-vertical text-xl"></i>
                                    </div>

                                    <div class="flex-1 w-full space-y-4">
                                        <label
                                            class="text-[10px] font-bold text-gray-400 uppercase tracking-widest ml-1">Field
                                            Name</label>
                                        <input type="text" x-model="field.fieldName" placeholder="e.g. Memory Capacity"
                                            class="block w-full px-6 py-4 bg-white border border-transparent rounded-[22px] text-gray-900 font-bold focus:ring-4 focus:ring-indigo-50 focus:border-indigo-100 outline-none transition-all shadow-sm">
                                    </div>

                                    <div class="w-full xl:w-48 space-y-4">
                                        <label
                                            class="text-[10px] font-bold text-gray-400 uppercase tracking-widest ml-1">Field
                                            Type</label>
                                        <select x-model="field.fieldType"
                                            class="block w-full px-6 py-4 bg-white border border-transparent rounded-[22px] text-gray-900 font-bold focus:ring-4 focus:ring-indigo-50 focus:border-indigo-100 outline-none transition-all appearance-none cursor-pointer shadow-sm">
                                            <option value="text">Input Field</option>
                                            <option value="number">Number</option>
                                            <option value="select">Dropdown Menu</option>
                                            <option value="textarea">Large Text</option>
                                        </select>
                                    </div>

                                    <div class="flex items-center pt-8 gap-4">
                                        <label class="flex items-center gap-3 cursor-pointer select-none">
                                            <div class="relative">
                                                <input type="checkbox" x-model="field.required" class="sr-only peer">
                                                <div
                                                    class="w-12 h-6 bg-gray-200 rounded-full peer peer-checked:bg-indigo-600 transition-all after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:after:translate-x-6">
                                                </div>
                                            </div>
                                            <span
                                                class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Required</span>
                                        </label>

                                        <button @click.prevent="removeSpecField(index)" type="button"
                                            class="w-12 h-12 flex items-center justify-center bg-white text-gray-300 hover:text-red-500 hover:bg-red-50 rounded-full transition-all border border-gray-100 shadow-sm"
                                            title="Delete Field">
                                            <i class="fas fa-trash-alt text-sm"></i>
                                        </button>
                                    </div>
                                </div>

                                <!-- Detailed Protocol Builder for Select Type -->
                                <div x-show="field.fieldType === 'select'" class="mt-8 pt-8 border-t border-gray-100"
                                    x-transition:enter="transition ease-out duration-300"
                                    x-transition:enter-start="opacity-0 -translate-y-4"
                                    x-transition:enter-end="opacity-100 translate-y-0">

                                    <div class="flex items-center justify-between mb-8">
                                        <label
                                            class="text-[10px] font-bold text-indigo-900 uppercase tracking-[0.2em] bg-indigo-50 px-4 py-2 rounded-full">Option
                                            Configuration</label>
                                        <button @click.prevent="addOption(index)" type="button"
                                            class="text-[10px] font-black text-indigo-600 hover:text-indigo-800 uppercase tracking-widest flex items-center gap-2">
                                            <i class="fas fa-plus-circle"></i> Add Option
                                        </button>
                                    </div>

                                    <div class="space-y-4 options-container" x-init="initOptionsSortable($el, index)">
                                        <template x-for="(option, optIndex) in field.options" :key="optIndex">
                                            <div
                                                class="bg-white p-6 rounded-[28px] border border-gray-100 shadow-sm space-y-6">
                                                <!-- Main Entry -->
                                                <div class="flex items-center gap-4">
                                                    <div
                                                        class="cursor-move option-handle text-gray-200 hover:text-indigo-400">
                                                        <i class="fas fa-grip-lines-vertical text-lg"></i>
                                                    </div>
                                                    <div class="w-8 h-8 rounded-full bg-gray-900 text-white flex items-center justify-center text-[10px] font-bold tracking-tighter shadow-lg shadow-gray-200"
                                                        x-text="optIndex + 1"></div>
                                                    <input type="text" x-model="option.value"
                                                        placeholder="Option Name (e.g. 8GB RAM)"
                                                        class="flex-1 px-5 py-3 bg-gray-50 border border-transparent rounded-[18px] text-sm font-bold focus:ring-4 focus:ring-indigo-50 focus:bg-white focus:border-indigo-100 outline-none transition-all">
                                                    <button @click.prevent="removeOption(index, optIndex)" type="button"
                                                        class="w-10 h-10 flex items-center justify-center text-gray-300 hover:text-red-500 transition-colors">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>

                                                <!-- Linked Protocols Architecture -->
                                                <div class="ml-10 border-l-2 border-indigo-50 pl-8 space-y-6">
                                                    <div class="flex items-center justify-between">
                                                        <label
                                                            class="text-[10px] font-bold text-indigo-400 uppercase tracking-widest">Linked
                                                            Sub-Fields</label>
                                                        <button @click.prevent="addLinkedField(option)" type="button"
                                                            class="px-4 py-2 bg-indigo-50 text-indigo-600 rounded-full text-[9px] font-black uppercase tracking-widest hover:bg-indigo-100 transition-all">
                                                            <i class="fas fa-plus mr-2"></i>Link Sub-Field
                                                        </button>
                                                    </div>

                                                    <div class="space-y-4">
                                                        <template
                                                            x-for="(linked, linkIndex) in option.linkedFields || []"
                                                            :key="linkIndex">
                                                            <div
                                                                class="bg-gray-50/50 p-6 rounded-[22px] border border-gray-100 flex gap-6 items-start relative animate__animated animate__fadeIn">
                                                                <div class="flex-1 space-y-6">
                                                                    <div class="space-y-2">
                                                                        <label
                                                                            class="text-[9px] font-bold text-gray-400 uppercase tracking-widest ml-1">Sub-Field
                                                                            Name</label>
                                                                        <input type="text" x-model="linked.fieldName"
                                                                            placeholder="Field Name (e.g. Generation)"
                                                                            class="w-full px-4 py-3 bg-white border border-transparent rounded-xl text-xs font-bold focus:ring-2 focus:ring-indigo-100 focus:border-indigo-100 outline-none transition-all shadow-sm">
                                                                    </div>

                                                                    <div class="grid grid-cols-2 gap-4">
                                                                        <div class="space-y-2">
                                                                            <label
                                                                                class="text-[9px] font-bold text-gray-400 uppercase tracking-widest ml-1">Type</label>
                                                                            <select x-model="linked.fieldType"
                                                                                class="w-full px-4 py-3 bg-white border border-transparent rounded-xl text-xs font-bold focus:ring-2 focus:ring-indigo-100 focus:border-indigo-100 outline-none transition-all appearance-none cursor-pointer shadow-sm">
                                                                                <option value="text">String</option>
                                                                                <option value="number">Numeric</option>
                                                                                <option value="select">Dropdown</option>
                                                                            </select>
                                                                        </div>
                                                                        <div class="flex items-end pb-3">
                                                                            <label
                                                                                class="flex items-center gap-2 cursor-pointer select-none">
                                                                                <input type="checkbox"
                                                                                    x-model="linked.required"
                                                                                    class="rounded text-indigo-600 focus:ring-indigo-500">
                                                                                <span
                                                                                    class="text-[9px] font-bold text-gray-400 uppercase tracking-widest">Required</span>
                                                                            </label>
                                                                        </div>
                                                                    </div>

                                                                    <div x-show="linked.fieldType === 'select'"
                                                                        class="space-y-2">
                                                                        <label
                                                                            class="text-[9px] font-bold text-indigo-400 uppercase tracking-widest ml-1">Dropdown
                                                                            Options (Comma separated)</label>
                                                                        <input type="text" x-model="linked._tempOptions"
                                                                            @blur="processLinkedOptions(linked)"
                                                                            placeholder="e.g. 1st Gen, 2nd Gen, 3rd Gen"
                                                                            class="w-full px-4 py-3 bg-white border border-transparent rounded-xl text-xs font-bold focus:ring-2 focus:ring-indigo-100 focus:border-indigo-100 outline-none shadow-sm">
                                                                    </div>
                                                                </div>
                                                                <button
                                                                    @click.prevent="option.linkedFields.splice(linkIndex, 1)"
                                                                    type="button"
                                                                    class="w-8 h-8 flex items-center justify-center text-gray-300 hover:text-red-500 transition-colors mt-2">
                                                                    <i class="fas fa-trash-alt text-xs"></i>
                                                                </button>
                                                            </div>
                                                        </template>
                                                        <div x-show="!option.linkedFields || option.linkedFields.length === 0"
                                                            class="text-[10px] text-gray-400 font-medium italic text-center py-4 bg-gray-50/30 rounded-xl border border-dashed border-gray-100">
                                                            Sequential schema response logic undefined
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </template>
                                    </div>
                                </div>
                            </div>
                        </template>

                        <template x-if="formData.specificationsTemplate.length === 0">
                            <div
                                class="text-center py-24 border-2 border-dashed border-gray-100 rounded-[40px] bg-gray-50/50">
                                <div
                                    class="w-20 h-20 bg-white rounded-3xl flex items-center justify-center text-gray-200 mx-auto mb-8 shadow-sm">
                                    <i class="fas fa-project-diagram text-3xl"></i>
                                </div>
                                <h4 class="text-xl font-black text-gray-900 tracking-tight mb-2">Schema Architecture
                                    Empty</h4>
                                <p class="text-gray-400 text-sm font-medium mb-8">Define structural fields to initialize
                                    this taxonomy class</p>
                                <button @click.prevent="addSpecField()" type="button"
                                    class="px-8 py-4 bg-gray-900 text-white rounded-full text-[10px] font-black uppercase tracking-widest hover:bg-black transition-all shadow-xl shadow-gray-200">
                                    Start Logic Integration
                                </button>
                            </div>
                        </template>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.15.0/Sortable.min.js"></script>
    <script src="/js/pages/categories-edit.js"></script>