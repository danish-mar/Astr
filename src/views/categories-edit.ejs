<div x-data="categoryEditData" x-init="init()" class="min-h-screen pb-12">
    <!-- SHARP MINIMAL HEADER -->
    <div class="bg-white border-b border-slate-200 mb-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between py-6 gap-4">
                <div>
                    <div class="flex items-center gap-3 mb-2">
                        <a href="/categories"
                            class="inline-flex items-center px-3 py-1.5 bg-slate-100 text-slate-600 text-[9px] font-black rounded-lg uppercase tracking-widest hover:bg-slate-200 transition-all">
                            <i class="fas fa-arrow-left mr-2 text-[8px]"></i>Back
                        </a>
                    </div>
                    <h1 class="text-2xl font-bold text-slate-900 tracking-tight uppercase">Edit Category</h1>
                    <p class="text-[9px] font-black text-slate-400 mt-1 uppercase tracking-widest">
                        Update Classification Settings
                    </p>
                </div>

                <button @click="saveCategory()" :disabled="saving"
                    class="inline-flex items-center px-6 py-2 bg-primary-600 text-white text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-primary-700 shadow-xl shadow-primary-200 transition-all disabled:opacity-50 active:scale-95 gap-2">
                    <i :class="saving ? 'fas fa-spinner fa-spin' : 'fas fa-sync-alt'" class="text-xs"></i>
                    <span x-text="saving ? 'Saving...' : 'Update Category'"></span>
                </button>
            </div>
        </div>
    </div>

    <!-- Loading State -->
    <div x-show="loading" class="text-center py-32">
        <div class="relative w-16 h-16 mx-auto mb-6">
            <div class="absolute inset-0 border-4 border-slate-100 rounded-lg"></div>
            <div class="absolute inset-0 border-4 border-primary-600 rounded-lg border-t-transparent animate-spin">
            </div>
        </div>
        <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Loading Category...</p>
    </div>

    <!-- Main Content -->
    <div x-show="!loading" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
            <!-- Basic Info -->
            <div class="lg:col-span-4 space-y-8">
                <div class="bg-white border border-slate-200 rounded-[24px] p-6 shadow-sm">
                    <div class="flex items-center gap-3 mb-6">
                        <div
                            class="w-10 h-10 bg-slate-50 rounded-lg flex items-center justify-center text-slate-600">
                            <i class="fas fa-info-circle text-sm"></i>
                        </div>
                        <h3 class="text-base font-bold text-slate-900 uppercase tracking-tight">Basic Info</h3>
                    </div>

                    <div class="space-y-6">
                        <div class="space-y-2">
                            <label class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Category
                                Name <span class="text-rose-500">*</span></label>
                            <input type="text" x-model="formData.name" required placeholder="e.g. Laptops"
                                class="block w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 font-medium text-sm focus:ring-2 focus:ring-primary-200 focus:bg-white focus:border-primary-300 outline-none transition-all">
                        </div>
                        <div class="space-y-2">
                            <label
                                class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Description</label>
                            <textarea x-model="formData.description" rows="5"
                                placeholder="Brief description..."
                                class="block w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 font-medium text-sm focus:ring-2 focus:ring-primary-200 focus:bg-white focus:border-primary-300 outline-none transition-all resize-none"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Specification Template -->
            <div class="lg:col-span-8">
                <div class="bg-white border border-slate-200 rounded-[24px] p-6 shadow-sm">
                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-6">
                        <div class="flex items-center gap-3">
                            <div
                                class="w-10 h-10 bg-primary-50 rounded-lg flex items-center justify-center text-primary-600">
                                <i class="fas fa-star text-sm"></i>
                            </div>
                            <div>
                                <h3 class="text-base font-bold text-slate-900 uppercase tracking-tight">Specification Template</h3>
                                <p class="text-[8px] font-black text-slate-400 uppercase tracking-widest mt-0.5">Define attributes</p>
                            </div>
                        </div>
                        <button @click.prevent="addSpecField()" type="button"
                            class="inline-flex items-center px-5 py-2 bg-slate-900 text-white rounded-lg text-[9px] font-black uppercase tracking-widest hover:bg-slate-800 transition-all shadow-lg gap-2">
                            <i class="fas fa-plus text-[8px]"></i> Add Field
                        </button>
                    </div>

                    <div class="space-y-4" id="specifications-container">
                        <template x-for="(field, index) in formData.specificationsTemplate" :key="index">
                            <div
                                class="bg-slate-50 border border-slate-200 rounded-xl p-6 transition-all hover:bg-white hover:shadow-lg group">
                                <div class="flex flex-col xl:flex-row gap-6 items-start">
                                    <div
                                        class="pt-3 cursor-move handle text-slate-300 group-hover:text-slate-600 transition-colors">
                                        <i class="fas fa-grip-vertical text-lg"></i>
                                    </div>

                                    <div class="flex-1 w-full space-y-3">
                                        <label
                                            class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Field
                                            Name</label>
                                        <input type="text" x-model="field.fieldName" placeholder="e.g. Memory Capacity"
                                            class="block w-full px-4 py-3 bg-white border border-slate-200 rounded-lg text-slate-900 font-medium text-sm focus:ring-2 focus:ring-primary-200 focus:border-primary-300 outline-none transition-all">
                                    </div>

                                    <div class="w-full xl:w-44 space-y-3">
                                        <label
                                            class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Field
                                            Type</label>
                                        <select x-model="field.fieldType"
                                            class="block w-full px-4 py-3 bg-white border border-slate-200 rounded-lg text-slate-900 font-medium text-sm focus:ring-2 focus:ring-primary-200 focus:border-primary-300 outline-none transition-all appearance-none cursor-pointer">
                                            <option value="text">Text</option>
                                            <option value="number">Number</option>
                                            <option value="select">Dropdown</option>
                                            <option value="textarea">Large Text</option>
                                        </select>
                                    </div>

                                    <div class="flex items-center pt-7 gap-3">
                                        <label class="flex items-center gap-2 cursor-pointer select-none">
                                            <div class="relative">
                                                <input type="checkbox" x-model="field.required" class="sr-only peer">
                                                <div
                                                    class="w-11 h-6 bg-slate-200 rounded-full peer peer-checked:bg-primary-600 transition-all after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:after:translate-x-5">
                                                </div>
                                            </div>
                                            <span
                                                class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Required</span>
                                        </label>

                                        <button @click.prevent="removeSpecField(index)" type="button"
                                            class="w-9 h-9 flex items-center justify-center bg-white border border-slate-200 text-slate-400 hover:text-rose-600 hover:bg-rose-50 hover:border-rose-200 rounded-lg transition-all"
                                            title="Delete Field">
                                            <i class="fas fa-trash-alt text-xs"></i>
                                        </button>
                                    </div>
                                </div>

                                <!-- Options for Select Type -->
                                <div x-show="field.fieldType === 'select'" class="mt-6 pt-6 border-t border-slate-200"
                                    x-transition:enter="transition ease-out duration-200"
                                    x-transition:enter-start="opacity-0 -translate-y-2"
                                    x-transition:enter-end="opacity-100 translate-y-0">

                                    <div class="flex items-center justify-between mb-6">
                                        <label
                                            class="text-[9px] font-black text-primary-600 uppercase tracking-widest bg-primary-50 px-3 py-1.5 rounded-lg">Options</label>
                                        <button @click.prevent="addOption(index)" type="button"
                                            class="text-[9px] font-black text-primary-600 hover:text-primary-700 uppercase tracking-widest flex items-center gap-2">
                                            <i class="fas fa-plus-circle"></i> Add Option
                                        </button>
                                    </div>

                                    <div class="space-y-3 options-container" x-init="initOptionsSortable($el, index)">
                                        <template x-for="(option, optIndex) in field.options" :key="optIndex">
                                            <div
                                                class="bg-white p-5 rounded-xl border border-slate-200 shadow-sm space-y-5">
                                                <!-- Main Entry -->
                                                <div class="flex items-center gap-3">
                                                    <div
                                                        class="cursor-move option-handle text-slate-200 hover:text-primary-400">
                                                        <i class="fas fa-grip-lines-vertical text-base"></i>
                                                    </div>
                                                    <div class="w-7 h-7 rounded-lg bg-slate-900 text-white flex items-center justify-center text-[9px] font-black shadow-lg"
                                                        x-text="optIndex + 1"></div>
                                                    <input type="text" x-model="option.value"
                                                        placeholder="Option Name (e.g. 8GB RAM)"
                                                        class="flex-1 px-4 py-2.5 bg-slate-50 border border-slate-200 rounded-lg text-sm font-medium focus:ring-2 focus:ring-primary-200 focus:bg-white focus:border-primary-300 outline-none transition-all">
                                                    <button @click.prevent="removeOption(index, optIndex)" type="button"
                                                        class="w-9 h-9 flex items-center justify-center text-slate-300 hover:text-rose-500 transition-colors">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>

                                                <!-- Linked Sub-Fields -->
                                                <div class="ml-9 border-l-2 border-primary-100 pl-6 space-y-5">
                                                    <div class="flex items-center justify-between">
                                                        <label
                                                            class="text-[8px] font-black text-primary-400 uppercase tracking-widest">Linked
                                                            Sub-Fields</label>
                                                        <button @click.prevent="addLinkedField(option)" type="button"
                                                            class="px-3 py-1.5 bg-primary-50 text-primary-600 rounded-lg text-[8px] font-black uppercase tracking-widest hover:bg-primary-100 transition-all">
                                                            <i class="fas fa-plus mr-1.5"></i>Link Sub-Field
                                                        </button>
                                                    </div>

                                                    <div class="space-y-3">
                                                        <template
                                                            x-for="(linked, linkIndex) in option.linkedFields || []"
                                                            :key="linkIndex">
                                                            <div
                                                                class="bg-slate-50 p-5 rounded-lg border border-slate-200 flex gap-5 items-start relative">
                                                                <div class="flex-1 space-y-5">
                                                                    <div class="space-y-2">
                                                                        <label
                                                                            class="text-[8px] font-black text-slate-400 uppercase tracking-widest">Sub-Field
                                                                            Name</label>
                                                                        <input type="text" x-model="linked.fieldName"
                                                                            placeholder="Field Name (e.g. Generation)"
                                                                            class="w-full px-3 py-2.5 bg-white border border-slate-200 rounded-lg text-xs font-medium focus:ring-2 focus:ring-primary-100 focus:border-primary-200 outline-none transition-all">
                                                                    </div>

                                                                    <div class="grid grid-cols-2 gap-3">
                                                                        <div class="space-y-2">
                                                                            <label
                                                                                class="text-[8px] font-black text-slate-400 uppercase tracking-widest">Type</label>
                                                                            <select x-model="linked.fieldType"
                                                                                class="w-full px-3 py-2.5 bg-white border border-slate-200 rounded-lg text-xs font-medium focus:ring-2 focus:ring-primary-100 focus:border-primary-200 outline-none transition-all appearance-none cursor-pointer">
                                                                                <option value="text">Text</option>
                                                                                <option value="number">Number</option>
                                                                                <option value="select">Dropdown</option>
                                                                            </select>
                                                                        </div>
                                                                        <div class="flex items-end pb-2.5">
                                                                            <label
                                                                                class="flex items-center gap-2 cursor-pointer select-none">
                                                                                <input type="checkbox"
                                                                                    x-model="linked.required"
                                                                                    class="rounded text-primary-600 focus:ring-primary-500">
                                                                                <span
                                                                                    class="text-[8px] font-black text-slate-400 uppercase tracking-widest">Required</span>
                                                                            </label>
                                                                        </div>
                                                                    </div>

                                                                    <div x-show="linked.fieldType === 'select'"
                                                                        class="space-y-2">
                                                                        <label
                                                                            class="text-[8px] font-black text-primary-400 uppercase tracking-widest">Dropdown
                                                                            Options (Comma separated)</label>
                                                                        <input type="text" x-model="linked._tempOptions"
                                                                            @blur="processLinkedOptions(linked)"
                                                                            placeholder="e.g. 1st Gen, 2nd Gen, 3rd Gen"
                                                                            class="w-full px-3 py-2.5 bg-white border border-slate-200 rounded-lg text-xs font-medium focus:ring-2 focus:ring-primary-100 focus:border-primary-200 outline-none">
                                                                    </div>
                                                                </div>
                                                                <button
                                                                    @click.prevent="option.linkedFields.splice(linkIndex, 1)"
                                                                    type="button"
                                                                    class="w-7 h-7 flex items-center justify-center text-slate-300 hover:text-rose-500 transition-colors mt-2">
                                                                    <i class="fas fa-trash-alt text-xs"></i>
                                                                </button>
                                                            </div>
                                                        </template>
                                                        <div x-show="!option.linkedFields || option.linkedFields.length === 0"
                                                            class="text-[9px] text-slate-400 font-medium italic text-center py-3 bg-slate-50 rounded-lg border border-dashed border-slate-200">
                                                            No linked sub-fields
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </template>
                                    </div>
                                </div>
                            </div>
                        </template>

                        <template x-if="formData.specificationsTemplate.length === 0">
                            <div
                                class="text-center py-20 border-2 border-dashed border-slate-200 rounded-xl bg-slate-50">
                                <div
                                    class="w-16 h-16 bg-white rounded-xl flex items-center justify-center text-slate-200 mx-auto mb-6 shadow-sm">
                                    <i class="fas fa-project-diagram text-2xl"></i>
                                </div>
                                <h4 class="text-lg font-bold text-slate-900 tracking-tight mb-2 uppercase">No Fields</h4>
                                <p class="text-slate-500 text-xs font-medium mb-6">Add specification fields to start.</p>
                                <button @click.prevent="addSpecField()" type="button"
                                    class="px-6 py-3 bg-slate-900 text-white rounded-lg text-[9px] font-black uppercase tracking-widest hover:bg-slate-800 transition-all shadow-lg">
                                    Add First Field
                                </button>
                            </div>
                        </template>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.15.0/Sortable.min.js"></script>
    <script src="/js/pages/categories-edit.js"></script>
</div>