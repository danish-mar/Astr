<div x-data="settingsData" x-init="init()">
    <!-- Page Header -->
    <div class="mb-8 animate__animated animate__fadeInDown">
        <h1 class="text-3xl font-bold text-gray-900 tracking-tight mb-2">Settings</h1>
        <p class="text-gray-500">Manage your application preferences and team</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        <!-- Sidebar Navigation -->
        <div class="lg:col-span-3">
            <div class="glass rounded-[2rem] p-4 shadow-ios animate__animated animate__fadeInLeft">
                <nav class="space-y-2">
                    <button @click="activeTab = 'general'"
                        class="w-full flex items-center space-x-3 px-4 py-3 rounded-2xl transition-all duration-200"
                        :class="activeTab === 'general' ? 'bg-primary-50 text-primary-600 shadow-sm' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'">
                        <div class="w-8 h-8 rounded-xl flex items-center justify-center"
                            :class="activeTab === 'general' ? 'bg-white text-primary-500' : 'bg-gray-100 text-gray-400'">
                            <i class="fas fa-sliders-h text-sm"></i>
                        </div>
                        <span class="font-semibold">General</span>
                    </button>

                    <button @click="activeTab = 'users'"
                        class="w-full flex items-center space-x-3 px-4 py-3 rounded-2xl transition-all duration-200"
                        :class="activeTab === 'users' ? 'bg-primary-50 text-primary-600 shadow-sm' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'">
                        <div class="w-8 h-8 rounded-xl flex items-center justify-center"
                            :class="activeTab === 'users' ? 'bg-white text-primary-500' : 'bg-gray-100 text-gray-400'">
                            <i class="fas fa-users-cog text-sm"></i>
                        </div>
                        <span class="font-semibold">Team Members</span>
                    </button>

                    <button @click="activeTab = 'ai'"
                        class="w-full flex items-center space-x-3 px-4 py-3 rounded-2xl transition-all duration-200"
                        :class="activeTab === 'ai' ? 'bg-primary-50 text-primary-600 shadow-sm' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'">
                        <div class="w-8 h-8 rounded-xl flex items-center justify-center"
                            :class="activeTab === 'ai' ? 'bg-white text-primary-500' : 'bg-gray-100 text-gray-400'">
                            <i class="fas fa-robot text-sm"></i>
                        </div>
                        <span class="font-semibold">AI Settings</span>
                    </button>
                </nav>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="lg:col-span-9">
            <!-- General Settings Tab -->
            <div x-show="activeTab === 'general'" class="space-y-6 animate__animated animate__fadeIn">
                <div class="glass rounded-[2rem] p-8 shadow-ios">
                    <div class="flex items-center justify-between mb-8">
                        <div>
                            <h2 class="text-xl font-bold text-gray-900">Store Information</h2>
                            <p class="text-gray-500 text-sm mt-1">Update your shop details and branding</p>
                        </div>
                        <div
                            class="w-12 h-12 bg-primary-50 rounded-2xl flex items-center justify-center text-primary-500">
                            <i class="fas fa-store text-xl"></i>
                        </div>
                    </div>

                    <form @submit.prevent="saveSettings()" class="space-y-8">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="space-y-2">
                                <label class="text-sm font-semibold text-gray-700 ml-1">Shop Name</label>
                                <input type="text" x-model="settings.shopName" required
                                    class="block w-full px-4 py-3 bg-gray-50 border-none rounded-xl text-gray-900 placeholder-gray-400 focus:ring-2 focus:ring-primary-500/50 focus:bg-white transition-all">
                            </div>

                            <div class="space-y-2">
                                <label class="text-sm font-semibold text-gray-700 ml-1">Theme Color</label>
                                <div class="flex items-center space-x-3 p-1 bg-gray-50 rounded-xl">
                                    <input type="color" x-model="settings.themeColor"
                                        class="h-10 w-14 rounded-lg border-none cursor-pointer bg-transparent">
                                    <span class="text-sm font-medium text-gray-600 font-mono"
                                        x-text="settings.themeColor"></span>
                                </div>
                            </div>

                            <div class="space-y-2">
                                <label class="text-sm font-semibold text-gray-700 ml-1">Phone Number</label>
                                <input type="tel" x-model="settings.phone"
                                    class="block w-full px-4 py-3 bg-gray-50 border-none rounded-xl text-gray-900 placeholder-gray-400 focus:ring-2 focus:ring-primary-500/50 focus:bg-white transition-all">
                            </div>

                            <div class="space-y-2">
                                <label class="text-sm font-semibold text-gray-700 ml-1">Email Address</label>
                                <input type="email" x-model="settings.email"
                                    class="block w-full px-4 py-3 bg-gray-50 border-none rounded-xl text-gray-900 placeholder-gray-400 focus:ring-2 focus:ring-primary-500/50 focus:bg-white transition-all">
                            </div>

                            <div class="md:col-span-2 space-y-2">
                                <label class="text-sm font-semibold text-gray-700 ml-1">Address</label>
                                <textarea x-model="settings.address" rows="3"
                                    class="block w-full px-4 py-3 bg-gray-50 border-none rounded-xl text-gray-900 placeholder-gray-400 focus:ring-2 focus:ring-primary-500/50 focus:bg-white transition-all"></textarea>
                            </div>
                        </div>

                        <div class="flex justify-end pt-4 border-t border-gray-100">
                            <button type="submit" :disabled="saving"
                                class="px-8 py-3 bg-primary-500 text-white rounded-xl font-semibold shadow-lg shadow-primary-500/30 hover:shadow-primary-500/40 hover:bg-primary-600 active:scale-95 transition-all disabled:opacity-50 disabled:cursor-not-allowed flex items-center">
                                <i :class="saving ? 'fas fa-circle-notch fa-spin' : 'fas fa-save'" class="mr-2"></i>
                                <span x-text="saving ? 'Saving Changes...' : 'Save Changes'"></span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- User Management Tab -->
            <div x-show="activeTab === 'users'" class="space-y-6 animate__animated animate__fadeIn">
                <div class="glass rounded-[2rem] shadow-ios overflow-hidden">
                    <div
                        class="p-8 border-b border-gray-100 flex flex-col md:flex-row md:items-center justify-between gap-4">
                        <div>
                            <h2 class="text-xl font-bold text-gray-900">Team Members</h2>
                            <p class="text-gray-500 text-sm mt-1">Manage access and roles</p>
                        </div>
                        <button @click="openUserModal()"
                            class="px-6 py-3 bg-gray-900 text-white rounded-xl font-semibold shadow-lg hover:bg-gray-800 active:scale-95 transition-all flex items-center justify-center">
                            <i class="fas fa-plus mr-2"></i>
                            Add Member
                        </button>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="w-full text-left">
                            <thead>
                                <tr class="bg-gray-50/50 border-b border-gray-100">
                                    <th class="px-8 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">User
                                    </th>
                                    <th class="px-8 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Role
                                    </th>
                                    <th class="px-8 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">
                                        Status</th>
                                    <th
                                        class="px-8 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">
                                        Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                                <template x-for="user in users" :key="user._id">
                                    <tr class="hover:bg-gray-50/50 transition-colors group">
                                        <td class="px-8 py-4">
                                            <div class="flex items-center gap-4">
                                                <div
                                                    class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary-100 to-blue-100 flex items-center justify-center text-primary-600 font-bold text-lg shadow-sm">
                                                    <span x-text="user.name.charAt(0)"></span>
                                                </div>
                                                <div>
                                                    <p class="font-bold text-gray-900" x-text="user.name"></p>
                                                    <p class="text-xs text-gray-500"
                                                        x-text="user.email || user.username"></p>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-8 py-4">
                                            <span
                                                class="px-3 py-1 rounded-full text-xs font-semibold bg-gray-100 text-gray-600"
                                                x-text="user.position"></span>
                                        </td>
                                        <td class="px-8 py-4">
                                            <span class="px-3 py-1 rounded-full text-xs font-semibold"
                                                :class="user.isActive ? 'bg-green-100 text-green-600' : 'bg-red-100 text-red-600'"
                                                x-text="user.isActive ? 'Active' : 'Inactive'">
                                            </span>
                                        </td>
                                        <td class="px-8 py-4 text-right">
                                            <div
                                                class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                                <button @click="editUser(user)"
                                                    class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center text-gray-500 hover:bg-primary-50 hover:text-primary-600 transition-colors">
                                                    <i class="fas fa-pen text-xs"></i>
                                                </button>
                                                <button @click="toggleUserStatus(user)"
                                                    class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center transition-colors"
                                                    :class="user.isActive ? 'text-gray-500 hover:bg-red-50 hover:text-red-500' : 'text-gray-500 hover:bg-green-50 hover:text-green-500'">
                                                    <i
                                                        :class="user.isActive ? 'fas fa-ban text-xs' : 'fas fa-check text-xs'"></i>
                                                </button>
                                                <button @click="deleteUser(user)"
                                                    class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center text-gray-500 hover:bg-red-50 hover:text-red-500 transition-colors">
                                                    <i class="fas fa-trash text-xs"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                </template>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- AI Settings Tab -->
            <div x-show="activeTab === 'ai'" class="space-y-6 animate__animated animate__fadeIn">
                <div class="glass rounded-[2rem] p-8 shadow-ios">
                    <div class="flex items-center justify-between mb-8">
                        <div>
                            <h2 class="text-xl font-bold text-gray-900">AI Configuration</h2>
                            <p class="text-gray-500 text-sm mt-1">Configure AI provider for smart features</p>
                        </div>
                        <div
                            class="w-12 h-12 bg-purple-50 rounded-2xl flex items-center justify-center text-purple-500">
                            <i class="fas fa-robot text-xl"></i>
                        </div>
                    </div>

                    <form @submit.prevent="saveSettings()" class="space-y-8">
                        <!-- Enable AI Toggle -->
                        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-xl">
                            <div>
                                <h3 class="font-semibold text-gray-900">Enable AI Features</h3>
                                <p class="text-sm text-gray-500 mt-1">Turn on AI-powered marketing and automation</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" x-model="settings.aiEnabled" class="sr-only peer">
                                <div
                                    class="w-14 h-7 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:left-[4px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:bg-primary-500">
                                </div>
                            </label>
                        </div>

                        <!-- AI Provider Selection -->
                        <div class="space-y-2">
                            <label class="text-sm font-semibold text-gray-700 ml-1">AI Provider</label>
                            <select x-model="settings.aiProvider" required
                                class="block w-full px-4 py-3 bg-gray-50 border-none rounded-xl text-gray-900 focus:ring-2 focus:ring-primary-500/50 focus:bg-white transition-all">
                                <option value="none">None (Disabled)</option>
                                <option value="gemini">Google Gemini (Recommended - Free Tier)</option>
                                <option value="openai">OpenAI GPT (Paid)</option>
                            </select>
                            <p class="text-xs text-gray-500 ml-1 mt-1">
                                <i class="fas fa-info-circle mr-1"></i>
                                Gemini offers a generous free tier, perfect for getting started
                            </p>
                        </div>

                        <!-- API Key Input -->
                        <div class="space-y-2" x-show="settings.aiProvider !== 'none'">
                            <label class="text-sm font-semibold text-gray-700 ml-1">API Key</label>
                            <div class="relative">
                                <input :type="showApiKey ? 'text' : 'password'" x-model="settings.aiApiKey"
                                    :required="settings.aiProvider !== 'none'" placeholder="Enter your API key"
                                    class="block w-full px-4 py-3 pr-12 bg-gray-50 border-none rounded-xl text-gray-900 placeholder-gray-400 focus:ring-2 focus:ring-primary-500/50 focus:bg-white transition-all">
                                <button type="button" @click="showApiKey = !showApiKey"
                                    class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600">
                                    <i :class="showApiKey ? 'fas fa-eye-slash' : 'fas fa-eye'"></i>
                                </button>
                            </div>
                            <div class="flex items-start space-x-2 mt-2">
                                <i class="fas fa-lightbulb text-yellow-500 mt-0.5"></i>
                                <div class="text-xs text-gray-600">
                                    <p class="font-semibold mb-1">How to get your API key:</p>
                                    <ul class="list-disc list-inside space-y-1 ml-2">
                                        <li x-show="settings.aiProvider === 'gemini'">
                                            Visit <a href="https://makersuite.google.com/app/apikey" target="_blank"
                                                class="text-primary-600 hover:underline">Google AI Studio</a> and create
                                            a free API key
                                        </li>
                                        <li x-show="settings.aiProvider === 'openai'">
                                            Visit <a href="https://platform.openai.com/api-keys" target="_blank"
                                                class="text-primary-600 hover:underline">OpenAI Platform</a> and create
                                            an API key
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Test Connection Button -->
                        <div x-show="settings.aiProvider !== 'none' && settings.aiApiKey"
                            class="pt-4 border-t border-gray-100">
                            <button type="button" @click="testAIConnection()" :disabled="testingConnection"
                                class="w-full px-6 py-3 bg-gray-100 text-gray-700 rounded-xl font-semibold hover:bg-gray-200 active:scale-95 transition-all disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center">
                                <i :class="testingConnection ? 'fas fa-circle-notch fa-spin' : 'fas fa-plug'"
                                    class="mr-2"></i>
                                <span x-text="testingConnection ? 'Testing Connection...' : 'Test Connection'"></span>
                            </button>
                            <div x-show="connectionTestResult" class="mt-3 p-3 rounded-xl"
                                :class="connectionTestSuccess ? 'bg-green-50 text-green-700' : 'bg-red-50 text-red-700'">
                                <i :class="connectionTestSuccess ? 'fas fa-check-circle' : 'fas fa-exclamation-circle'"
                                    class="mr-2"></i>
                                <span x-text="connectionTestMessage"></span>
                            </div>
                        </div>

                        <!-- Save Button -->
                        <div class="flex justify-end pt-4 border-t border-gray-100">
                            <button type="submit" :disabled="saving"
                                class="px-8 py-3 bg-primary-500 text-white rounded-xl font-semibold shadow-lg shadow-primary-500/30 hover:shadow-primary-500/40 hover:bg-primary-600 active:scale-95 transition-all disabled:opacity-50 disabled:cursor-not-allowed flex items-center">
                                <i :class="saving ? 'fas fa-circle-notch fa-spin' : 'fas fa-save'" class="mr-2"></i>
                                <span x-text="saving ? 'Saving Changes...' : 'Save Changes'"></span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- User Modal -->
    <div x-show="showUserModal" style="display: none;" class="fixed inset-0 z-50 flex items-center justify-center px-4">
        <!-- Backdrop -->
        <div x-show="showUserModal" x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
            x-transition:leave="transition ease-in duration-200" x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0" class="absolute inset-0 bg-black/30 backdrop-blur-sm"
            @click="closeUserModal()"></div>

        <!-- Modal Content -->
        <div x-show="showUserModal" x-transition:enter="transition cubic-bezier(0.16, 1, 0.3, 1) duration-300"
            x-transition:enter-start="opacity-0 scale-95 translate-y-8"
            x-transition:enter-end="opacity-100 scale-100 translate-y-0"
            x-transition:leave="transition cubic-bezier(0.16, 1, 0.3, 1) duration-200"
            x-transition:leave-start="opacity-100 scale-100 translate-y-0"
            x-transition:leave-end="opacity-0 scale-95 translate-y-8"
            class="relative w-full max-w-lg glass bg-white/90 rounded-[2rem] shadow-2xl overflow-hidden">

            <div class="px-8 py-6 border-b border-gray-100 flex items-center justify-between">
                <h3 class="text-xl font-bold text-gray-900" x-text="editMode ? 'Edit User' : 'Add New User'"></h3>
                <button @click="closeUserModal()"
                    class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center text-gray-500 hover:bg-gray-200 transition-colors">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form @submit.prevent="saveUser()" class="p-8 space-y-6">
                <div class="space-y-2">
                    <label class="text-sm font-semibold text-gray-700 ml-1">Full Name</label>
                    <input type="text" x-model="userForm.name" required
                        class="block w-full px-4 py-3 bg-gray-50 border-none rounded-xl text-gray-900 placeholder-gray-400 focus:ring-2 focus:ring-primary-500/50 focus:bg-white transition-all">
                </div>

                <div class="space-y-2">
                    <label class="text-sm font-semibold text-gray-700 ml-1">Username</label>
                    <input type="text" x-model="userForm.username" required :disabled="editMode"
                        class="block w-full px-4 py-3 bg-gray-50 border-none rounded-xl text-gray-900 placeholder-gray-400 focus:ring-2 focus:ring-primary-500/50 focus:bg-white transition-all disabled:opacity-60 disabled:cursor-not-allowed">
                </div>

                <div x-show="!editMode" class="space-y-2">
                    <label class="text-sm font-semibold text-gray-700 ml-1">Password</label>
                    <input type="password" x-model="userForm.password" :required="!editMode"
                        class="block w-full px-4 py-3 bg-gray-50 border-none rounded-xl text-gray-900 placeholder-gray-400 focus:ring-2 focus:ring-primary-500/50 focus:bg-white transition-all">
                </div>

                <div class="space-y-2">
                    <label class="text-sm font-semibold text-gray-700 ml-1">Role</label>
                    <select x-model="userForm.position" required
                        class="block w-full px-4 py-3 bg-gray-50 border-none rounded-xl text-gray-900 focus:ring-2 focus:ring-primary-500/50 focus:bg-white transition-all">
                        <option value="Staff">Staff</option>
                        <option value="Technician">Technician</option>
                        <option value="Sales">Sales</option>
                        <option value="Manager">Manager</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>

                <div class="space-y-2">
                    <label class="text-sm font-semibold text-gray-700 ml-1">Email (Optional)</label>
                    <input type="email" x-model="userForm.email"
                        class="block w-full px-4 py-3 bg-gray-50 border-none rounded-xl text-gray-900 placeholder-gray-400 focus:ring-2 focus:ring-primary-500/50 focus:bg-white transition-all">
                </div>

                <div class="flex justify-end pt-4 gap-3">
                    <button type="button" @click="closeUserModal()"
                        class="px-6 py-3 rounded-xl text-gray-600 font-medium hover:bg-gray-100 transition-colors">Cancel</button>
                    <button type="submit" :disabled="saving"
                        class="px-6 py-3 bg-primary-500 text-white rounded-xl font-semibold shadow-lg shadow-primary-500/30 hover:bg-primary-600 active:scale-95 transition-all disabled:opacity-50">
                        <span x-text="saving ? 'Saving...' : 'Save User'"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/pages/settings.js"></script>