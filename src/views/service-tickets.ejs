<div x-data="serviceTicketsData" x-init="init()" class="space-y-6">
    
    <!-- Header with Gradient Card -->
    <div class="bg-gradient-to-br from-primary-600 to-primary-700 rounded-xl p-6 shadow-lg">
        <div class="flex items-center justify-between">
            <div class="text-white">
                <div class="flex items-center gap-3 mb-2">
                    <div class="w-10 h-10 bg-white/20 rounded-lg flex items-center justify-center backdrop-blur-sm">
                        <i class="fas fa-wrench text-white text-lg"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold">Repairs</h1>
                        <p class="text-primary-100 text-sm" x-text="`${pagination.total} active tickets`"></p>
                    </div>
                </div>
            </div>
            <a href="/service-tickets/add"
                class="bg-white text-primary-600 px-5 py-2.5 rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all flex items-center gap-2 hover:scale-105">
                <i class="fas fa-plus text-sm"></i>
                <span>New Ticket</span>
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white border border-slate-200 rounded-xl p-5 shadow-sm space-y-4">
        <div class="flex gap-3">
            <div class="flex-1 relative group">
                <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 group-focus-within:text-primary-500 transition-colors"></i>
                <input type="text" x-model="filters.search" @input.debounce.300ms="loadTickets()"
                    placeholder="Search tickets..."
                    class="w-full pl-11 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary-100 focus:bg-white focus:border-primary-300 outline-none transition-all text-sm">
            </div>
            <div class="flex items-center gap-2 bg-slate-100 p-1.5 rounded-lg">
                <button @click="viewMode = 'grid'"
                    :class="viewMode === 'grid' ? 'bg-white text-primary-600 shadow-sm' : 'text-slate-500'"
                    class="w-10 h-10 rounded-md flex items-center justify-center transition-all hover:text-primary-600">
                    <i class="fas fa-th"></i>
                </button>
                <button @click="viewMode = 'list'"
                    :class="viewMode === 'list' ? 'bg-white text-primary-600 shadow-sm' : 'text-slate-500'"
                    class="w-10 h-10 rounded-md flex items-center justify-center transition-all hover:text-primary-600">
                    <i class="fas fa-list"></i>
                </button>
            </div>
        </div>

        <div class="flex items-center gap-2 overflow-x-auto pb-1">
            <template x-for="status in ['All', 'Pending', 'In Progress', 'Completed', 'Delivered', 'Cancelled']" :key="status">
                <button @click="filters.status = status; loadTickets()"
                    :class="filters.status === status ? 'bg-primary-600 text-white shadow-md' : 'bg-slate-50 text-slate-600 hover:bg-slate-100'"
                    class="px-4 py-2 rounded-lg text-xs font-semibold transition-all whitespace-nowrap"
                    x-text="status">
                </button>
            </template>
        </div>
    </div>

    <!-- Loading -->
    <div x-show="loading" class="flex flex-col items-center justify-center py-20">
        <div class="w-12 h-12 border-4 border-slate-200 border-t-primary-600 rounded-full animate-spin mb-4"></div>
        <p class="text-sm text-slate-500 font-medium">Loading tickets...</p>
    </div>

    <!-- Empty State -->
    <div x-show="!loading && tickets.length === 0" class="bg-gradient-to-br from-slate-50 to-white border border-slate-200 rounded-xl p-16 text-center shadow-sm">
        <div class="w-16 h-16 bg-gradient-to-br from-primary-100 to-primary-50 rounded-xl flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-wrench text-primary-600 text-2xl"></i>
        </div>
        <h3 class="text-lg font-bold text-slate-900 mb-2">No Tickets Found</h3>
        <p class="text-sm text-slate-500 mb-6">Start by creating your first repair ticket</p>
        <a href="/service-tickets/add"
            class="inline-flex items-center gap-2 px-6 py-3 bg-primary-600 text-white rounded-lg font-semibold shadow-lg hover:shadow-xl hover:bg-primary-700 transition-all hover:scale-105">
            <i class="fas fa-plus"></i>
            <span>Create Ticket</span>
        </a>
    </div>

    <!-- Content -->
    <div x-show="!loading && tickets.length > 0">
        
        <!-- Grid View -->
        <div x-show="viewMode === 'grid'" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-5">
            <template x-for="ticket in tickets" :key="ticket._id">
                <div class="bg-white border border-slate-200 rounded-xl p-6 shadow-sm hover:shadow-lg hover:border-primary-200 transition-all group cursor-pointer">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-lg flex items-center justify-center transition-all"
                                :class="{
                                    'bg-amber-100 text-amber-600': ticket.status === 'Pending',
                                    'bg-blue-100 text-blue-600': ticket.status === 'In Progress',
                                    'bg-emerald-100 text-emerald-600': ticket.status === 'Completed',
                                    'bg-slate-900 text-white': ticket.status === 'Delivered',
                                    'bg-red-100 text-red-600': ticket.status === 'Cancelled'
                                }">
                                <i class="fas fa-wrench text-sm"></i>
                            </div>
                            <div>
                                <p class="text-xs text-slate-500 font-medium" x-text="'#' + ticket.ticketNumber"></p>
                                <h3 class="text-sm font-bold text-slate-900" x-text="ticket.customer?.name || 'Customer'"></h3>
                            </div>
                        </div>
                        <span class="px-2.5 py-1 rounded-lg text-[10px] font-bold uppercase"
                            :class="{
                                'bg-amber-100 text-amber-700': ticket.status === 'Pending',
                                'bg-blue-100 text-blue-700': ticket.status === 'In Progress',
                                'bg-emerald-100 text-emerald-700': ticket.status === 'Completed',
                                'bg-slate-900 text-white': ticket.status === 'Delivered',
                                'bg-red-100 text-red-700': ticket.status === 'Cancelled'
                            }" x-text="ticket.status"></span>
                    </div>

                    <p class="text-sm text-slate-600 mb-4 line-clamp-2 min-h-[40px]" x-text="ticket.deviceDetails"></p>

                    <div class="flex items-center justify-between pt-4 border-t border-slate-100">
                        <div class="flex items-center gap-2 text-xs text-slate-500">
                            <i class="fas fa-calendar text-slate-400"></i>
                            <span x-text="new Date(ticket.createdAt).toLocaleDateString('en-IN', { month: 'short', day: 'numeric' })"></span>
                        </div>
                        <div class="flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <a :href="`/service-tickets/${ticket._id}`"
                                class="w-8 h-8 rounded-lg bg-primary-50 hover:bg-primary-100 text-primary-600 flex items-center justify-center transition-all">
                                <i class="fas fa-eye text-xs"></i>
                            </a>
                            <button @click="editTicket(ticket)"
                                class="w-8 h-8 rounded-lg bg-slate-100 hover:bg-slate-200 text-slate-600 flex items-center justify-center transition-all">
                                <i class="fas fa-edit text-xs"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </template>
        </div>

        <!-- List View -->
        <div x-show="viewMode === 'list'" class="bg-white border border-slate-200 rounded-xl overflow-hidden shadow-sm">
            <table class="w-full">
                <thead>
                    <tr class="bg-gradient-to-r from-slate-50 to-slate-100/50 border-b border-slate-200">
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-600 uppercase tracking-wider">Ticket</th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-600 uppercase tracking-wider">Customer</th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-600 uppercase tracking-wider hidden lg:table-cell">Device</th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-600 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-4 text-right text-xs font-bold text-slate-600 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    <template x-for="ticket in tickets" :key="ticket._id">
                        <tr class="hover:bg-slate-50 transition-colors group">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-lg flex items-center justify-center"
                                        :class="{
                                            'bg-amber-100 text-amber-600': ticket.status === 'Pending',
                                            'bg-blue-100 text-blue-600': ticket.status === 'In Progress',
                                            'bg-emerald-100 text-emerald-600': ticket.status === 'Completed',
                                            'bg-slate-900 text-white': ticket.status === 'Delivered',
                                            'bg-red-100 text-red-600': ticket.status === 'Cancelled'
                                        }">
                                        <i class="fas fa-wrench text-xs"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm font-bold text-slate-900" x-text="'#' + ticket.ticketNumber"></p>
                                        <p class="text-xs text-slate-500" x-text="new Date(ticket.createdAt).toLocaleDateString('en-IN')"></p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <p class="text-sm font-semibold text-slate-900" x-text="ticket.customer?.name || 'Customer'"></p>
                                <p class="text-xs text-slate-500" x-text="ticket.customer?.phone || '-'"></p>
                            </td>
                            <td class="px-6 py-4 hidden lg:table-cell">
                                <p class="text-sm text-slate-600 truncate max-w-md" x-text="ticket.deviceDetails"></p>
                            </td>
                            <td class="px-6 py-4">
                                <span class="px-3 py-1.5 rounded-lg text-[10px] font-bold uppercase inline-flex items-center gap-1.5"
                                    :class="{
                                        'bg-amber-100 text-amber-700': ticket.status === 'Pending',
                                        'bg-blue-100 text-blue-700': ticket.status === 'In Progress',
                                        'bg-emerald-100 text-emerald-700': ticket.status === 'Completed',
                                        'bg-slate-900 text-white': ticket.status === 'Delivered',
                                        'bg-red-100 text-red-700': ticket.status === 'Cancelled'
                                    }">
                                    <div class="w-1.5 h-1.5 rounded-full bg-current"></div>
                                    <span x-text="ticket.status"></span>
                                </span>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex items-center justify-end gap-2">
                                    <a :href="`/service-tickets/${ticket._id}`"
                                        class="w-8 h-8 rounded-lg bg-primary-50 hover:bg-primary-100 text-primary-600 flex items-center justify-center transition-all">
                                        <i class="fas fa-eye text-xs"></i>
                                    </a>
                                    <button @click="editTicket(ticket)"
                                        class="w-8 h-8 rounded-lg bg-slate-100 hover:bg-slate-200 text-slate-600 flex items-center justify-center transition-all">
                                        <i class="fas fa-edit text-xs"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </template>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div x-show="pagination.total > 0" class="bg-white border border-slate-200 rounded-xl px-6 py-4 shadow-sm">
            <div class="flex items-center justify-between">
                <p class="text-sm text-slate-600">
                    <span class="font-bold text-slate-900" x-text="(pagination.page - 1) * pagination.limit + 1"></span>-<span class="font-bold text-slate-900" x-text="Math.min(pagination.page * pagination.limit, pagination.total)"></span>
                    of <span class="font-bold text-slate-900" x-text="pagination.total"></span> tickets
                </p>
                <div class="flex gap-2">
                    <button @click="changePage(pagination.page - 1)" :disabled="pagination.page === 1"
                        class="px-5 py-2.5 bg-slate-100 text-slate-700 rounded-lg text-sm font-semibold hover:bg-slate-200 disabled:opacity-40 disabled:cursor-not-allowed transition-all">
                        Previous
                    </button>
                    <button @click="changePage(pagination.page + 1)" :disabled="pagination.page * pagination.limit >= pagination.total"
                        class="px-5 py-2.5 bg-primary-600 text-white rounded-lg text-sm font-semibold hover:bg-primary-700 shadow-md disabled:opacity-40 disabled:cursor-not-allowed transition-all">
                        Next
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div x-show="showModal" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100" x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0"
        class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm z-50 flex items-center justify-center p-4"
        @click.self="closeModal()" style="display: none;">

        <div x-show="showModal" x-transition:enter="transition ease-out duration-200 transform"
            x-transition:enter-start="opacity-0 scale-95" x-transition:enter-end="opacity-100 scale-100"
            class="bg-white rounded-xl shadow-2xl w-full max-w-3xl max-h-[85vh] overflow-hidden flex flex-col">

            <div class="px-6 py-5 border-b border-slate-200 flex items-center justify-between bg-gradient-to-r from-slate-50 to-white">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-wrench text-primary-600"></i>
                    </div>
                    <h3 class="text-lg font-bold text-slate-900" x-text="editMode ? 'Edit Ticket' : 'New Ticket'"></h3>
                </div>
                <button @click="closeModal()" class="text-slate-400 hover:text-slate-600 transition-colors">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>

            <div class="p-6 overflow-y-auto flex-1">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                    <div class="md:col-span-2">
                        <label class="block text-xs font-bold text-slate-700 mb-2 uppercase tracking-wider">Customer</label>
                        <div x-data="{ searchQuery: '', showResults: false }">
                            <div x-show="selectedCustomer" class="flex items-center justify-between p-4 bg-gradient-to-r from-primary-50 to-primary-100/50 border border-primary-200 rounded-lg">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-full bg-primary-600 flex items-center justify-center text-white font-bold shadow-md">
                                        <span x-text="selectedCustomer?.name?.charAt(0)"></span>
                                    </div>
                                    <div>
                                        <p class="text-sm font-bold text-slate-900" x-text="selectedCustomer?.name"></p>
                                        <p class="text-xs text-slate-600" x-text="selectedCustomer?.phone"></p>
                                    </div>
                                </div>
                                <button @click="clearCustomerSelection()" class="text-slate-400 hover:text-red-500 transition-colors">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>

                            <div x-show="!selectedCustomer" class="relative">
                                <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                                <input type="text" x-model="searchQuery" @input="searchContactsInModal(searchQuery)"
                                    @focus="showResults = true" placeholder="Search customer..."
                                    class="w-full pl-11 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary-100 focus:border-primary-300 outline-none transition-all">
                                
                                <div x-show="showResults && searchResults.length > 0" @click.away="showResults = false"
                                    class="absolute top-full left-0 right-0 mt-2 bg-white rounded-lg shadow-xl border border-slate-200 overflow-hidden z-10 max-h-48 overflow-y-auto">
                                    <template x-for="contact in searchResults" :key="contact._id">
                                        <div @click="selectCustomerInModal(contact); showResults = false"
                                            class="px-4 py-3 hover:bg-primary-50 cursor-pointer flex items-center gap-3 transition-colors">
                                            <div class="w-8 h-8 rounded-full bg-slate-100 flex items-center justify-center text-slate-600 text-xs font-bold">
                                                <span x-text="contact.name.charAt(0)"></span>
                                            </div>
                                            <div>
                                                <p class="text-sm font-semibold text-slate-900" x-text="contact.name"></p>
                                                <p class="text-xs text-slate-500" x-text="contact.phone"></p>
                                            </div>
                                        </div>
                                    </template>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="md:col-span-2">
                        <label class="block text-xs font-bold text-slate-700 mb-2 uppercase tracking-wider">Device Details</label>
                        <textarea x-model="formData.deviceDetails" placeholder="Device model, issue description..."
                            class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary-100 focus:border-primary-300 outline-none transition-all min-h-[90px] resize-none"></textarea>
                    </div>

                    <div>
                        <label class="block text-xs font-bold text-slate-700 mb-2 uppercase tracking-wider">Date Received</label>
                        <input type="date" x-model="formData.receivedDate"
                            class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary-100 focus:border-primary-300 outline-none transition-all">
                    </div>

                    <div>
                        <label class="block text-xs font-bold text-slate-700 mb-2 uppercase tracking-wider">Status</label>
                        <select x-model="formData.status"
                            class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary-100 focus:border-primary-300 outline-none transition-all">
                            <option value="Pending">Pending</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Completed">Completed</option>
                            <option value="Delivered">Delivered</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-xs font-bold text-slate-700 mb-2 uppercase tracking-wider">Technician</label>
                        <select x-model="formData.assignedTechnician"
                            class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary-100 focus:border-primary-300 outline-none transition-all">
                            <option value="">Not assigned</option>
                            <template x-for="tech in technicians" :key="tech._id">
                                <option :value="tech._id || tech" x-text="tech.name || tech"></option>
                            </template>
                        </select>
                    </div>

                    <div>
                        <label class="block text-xs font-bold text-slate-700 mb-2 uppercase tracking-wider">Service Charge</label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-500 font-bold">â‚¹</span>
                            <input type="number" x-model="formData.serviceCharge"
                                class="w-full pl-9 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary-100 focus:border-primary-300 outline-none transition-all font-semibold">
                        </div>
                    </div>

                    <div class="md:col-span-2">
                        <label class="block text-xs font-bold text-slate-700 mb-2 uppercase tracking-wider">Notes</label>
                        <textarea x-model="formData.notes" placeholder="Internal notes..."
                            class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary-100 focus:border-primary-300 outline-none transition-all min-h-[70px] resize-none"></textarea>
                    </div>
                </div>
            </div>

            <div class="px-6 py-4 bg-slate-50 border-t border-slate-200 flex items-center justify-end gap-3">
                <button @click="closeModal()"
                    class="px-6 py-2.5 text-slate-600 hover:text-slate-900 font-semibold transition-colors">
                    Cancel
                </button>
                <button @click="saveTicket()" :disabled="saving"
                    class="px-6 py-2.5 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 shadow-lg hover:shadow-xl transition-all disabled:opacity-50 flex items-center gap-2">
                    <i :class="saving ? 'fas fa-spinner fa-spin' : (editMode ? 'fas fa-save' : 'fas fa-plus')"></i>
                    <span x-text="editMode ? 'Save Changes' : 'Create Ticket'"></span>
                </button>
            </div>
        </div>
    </div>
</div>

<script src="/js/pages/service-tickets.js"></script>