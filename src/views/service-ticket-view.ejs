<div x-data="serviceTicketViewData" x-init="init()" class="min-h-screen bg-slate-50 pb-20">
    <!-- SHARP MINIMAL HEADER -->
    <div class="fixed top-0 left-0 right-0 z-[60] bg-white border-b border-slate-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row md:items-center justify-between py-6 gap-4">
                <!-- Left: Title & Status -->
                <div class="flex items-center gap-6">
                    <a href="/service-tickets"
                        class="w-10 h-10 rounded-lg bg-slate-50 border border-slate-200 flex items-center justify-center text-slate-400 hover:text-slate-900 hover:bg-white hover:shadow-sm transition-all group">
                        <i class="fas fa-arrow-left text-sm group-hover:-translate-x-1 transition-transform"></i>
                    </a>
                    <div>
                        <div class="flex items-center gap-3 mb-1">
                            <span
                                class="px-3 py-1 rounded-lg text-[9px] font-black uppercase tracking-widest shadow-sm"
                                :class="{
                                'bg-amber-500 text-white': ticket?.status === 'Pending',
                                'bg-blue-500 text-white': ticket?.status === 'In Progress',
                                'bg-green-500 text-white': ticket?.status === 'Completed',
                                'bg-slate-900 text-white': ticket?.status === 'Delivered',
                                'bg-rose-500 text-white': ticket?.status === 'Cancelled',
                                'bg-purple-600 text-white': ticket?.status === 'Reopened'
                            }" x-text="ticket?.status || 'Loading'"></span>
                            <div class="w-1.5 h-1.5 rounded-full bg-slate-200"></div>
                            <span
                                class="text-[9px] font-black text-primary-600 uppercase tracking-widest bg-primary-50 px-3 py-1 rounded-lg"
                                x-text="`TAG #${ticket?.ticketNumber || '...'}`"></span>
                        </div>
                        <h1 class="text-3xl font-bold text-slate-900 tracking-tight uppercase"
                            x-text="ticket?.customer?.name || 'Service Report'"></h1>
                    </div>
                </div>

                <!-- Right: Actions -->
                <div class="flex items-center gap-3">
                    <button @click="window.print()"
                        class="px-6 py-3 bg-white border border-slate-200 text-slate-900 rounded-xl text-[9px] font-black uppercase tracking-widest shadow-sm hover:shadow-lg transition-all active:scale-95 flex items-center gap-2">
                        <i class="fas fa-print opacity-50"></i>
                        <span>Print</span>
                    </button>
                    <button @click="editTicket()"
                        class="px-8 py-3 bg-slate-900 text-white rounded-xl text-[9px] font-black uppercase tracking-widest shadow-lg hover:bg-slate-800 transition-all active:scale-95 flex items-center gap-2">
                        <i class="fas fa-pen text-[10px]"></i>
                        <span>Edit</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32">
        <div x-show="loading" class="flex flex-col items-center justify-center py-32">
            <div class="w-16 h-16 border-4 border-slate-100 border-t-primary-600 rounded-full animate-spin mb-6"></div>
            <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Loading Ticket</p>
        </div>

        <div x-show="!loading && ticket" class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Column: Details -->
            <div class="lg:col-span-2 space-y-8">
                <!-- Device & Issue -->
                <div class="bg-white border border-slate-200 rounded-[24px] p-6 shadow-sm">
                    <div class="flex items-center gap-3 mb-6 pb-4 border-b border-slate-100">
                        <div class="w-10 h-10 rounded-lg bg-primary-50 text-primary-600 flex items-center justify-center">
                            <i class="fas fa-laptop-medical"></i>
                        </div>
                        <h2 class="text-lg font-bold text-slate-900 tracking-tight uppercase">Device Details</h2>
                    </div>

                    <div class="space-y-6">
                        <div>
                            <label class="block text-[9px] font-black text-slate-400 uppercase tracking-widest mb-3">Device Identification</label>
                            <p class="text-xl font-bold text-slate-900 leading-tight" x-text="ticket?.deviceDetails"></p>
                        </div>

                        <div class="pt-6 border-t border-slate-100">
                            <label class="block text-[9px] font-black text-slate-400 uppercase tracking-widest mb-3">Service Notes</label>
                            <div class="prose prose-sm max-w-none">
                                <p class="text-base text-slate-600 leading-relaxed italic"
                                    x-text="ticket?.notes || 'No notes documented for this service record.'"></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Activity Log -->
                <div class="bg-white border border-slate-200 rounded-[24px] p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-6 pb-4 border-b border-slate-100">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-lg bg-amber-50 text-amber-600 flex items-center justify-center">
                                <i class="fas fa-stream"></i>
                            </div>
                            <h2 class="text-lg font-bold text-slate-900 tracking-tight uppercase">Activity Log</h2>
                        </div>
                        <span
                            class="px-4 py-1.5 bg-slate-50 rounded-lg text-[9px] font-black text-slate-400 uppercase tracking-widest"
                            x-text="`${ticket?.logs?.length || 0} Events`"></span>
                    </div>

                    <div class="relative space-y-0">
                        <template x-for="(log, index) in ticket?.logs" :key="index">
                            <div class="flex group">
                                <!-- Line and Dot -->
                                <div class="flex flex-col items-center mr-6">
                                    <div class="w-10 h-10 rounded-lg border-2 border-slate-100 bg-white flex items-center justify-center z-10 transition-all duration-300 group-hover:scale-110 group-hover:border-primary-100"
                                        :class="{
                                            'text-amber-500': log.status === 'Pending',
                                            'text-blue-500': log.status === 'In Progress',
                                            'text-green-500': log.status === 'Completed',
                                            'text-slate-900': log.status === 'Delivered',
                                            'text-rose-500': log.status === 'Cancelled',
                                            'text-purple-600': log.status === 'Reopened'
                                        }">
                                        <i class="fas text-[10px]" :class="{
                                            'fa-plus-circle': index === 0,
                                            'fa-sync': log.status === 'In Progress' && index !== 0,
                                            'fa-check-circle': log.status === 'Completed',
                                            'fa-box': log.status === 'Delivered',
                                            'fa-times-circle': log.status === 'Cancelled',
                                            'fa-redo': log.status === 'Reopened',
                                            'fa-circle': index !== 0 && !['In Progress', 'Completed', 'Delivered', 'Cancelled', 'Reopened'].includes(log.status)
                                        }"></i>
                                    </div>
                                    <!-- Connecting Line -->
                                    <div x-show="index < (ticket?.logs?.length - 1)"
                                        class="w-[2px] h-full bg-slate-100 -mt-1 group-hover:bg-primary-100 transition-colors">
                                    </div>
                                </div>
                                <!-- Content Card -->
                                <div class="pb-8 flex-1">
                                    <div
                                        class="bg-slate-50 rounded-xl p-5 border border-transparent group-hover:border-slate-200 group-hover:bg-white group-hover:shadow-lg transition-all duration-300">
                                        <div class="flex flex-col md:flex-row md:items-center justify-between gap-2 mb-2">
                                            <h4 class="font-black text-slate-900 text-sm tracking-tight"
                                                x-text="log.label"></h4>
                                            <span
                                                class="text-[9px] font-black text-slate-300 uppercase tracking-widest whitespace-nowrap"
                                                x-text="formatDate(log.timestamp)"></span>
                                        </div>
                                        <p x-show="log.note" class="text-xs text-slate-500 leading-relaxed italic"
                                            x-text="log.note"></p>
                                    </div>
                                </div>
                            </div>
                        </template>

                        <!-- Fallback if no logs -->
                        <div x-show="!ticket?.logs || ticket?.logs?.length === 0"
                            class="flex items-center gap-6 py-10 opacity-30">
                            <div class="w-10 h-10 rounded-lg border-2 border-slate-100 bg-white flex items-center justify-center">
                                <i class="fas fa-history text-xs"></i>
                            </div>
                            <p class="text-[9px] font-black uppercase tracking-widest">No activity yet...</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar Column: Summary & Finance -->
            <div class="space-y-8">
                <!-- Customer Card -->
                <div class="bg-slate-900 rounded-[24px] p-8 shadow-xl relative overflow-hidden">
                    <div class="absolute top-0 right-0 p-8">
                        <i class="fas fa-user-shield text-slate-800 text-4xl opacity-20"></i>
                    </div>
                    <label class="text-[9px] font-black text-slate-500 uppercase tracking-widest mb-2 block">Customer</label>
                    <h3 class="text-2xl font-bold text-white mb-6 uppercase tracking-tight"
                        x-text="ticket?.customer?.name"></h3>

                    <div class="space-y-4">
                        <div class="bg-white/5 backdrop-blur-md rounded-xl p-4 border border-white/10">
                            <span class="text-[9px] font-black text-slate-500 uppercase block mb-1">Phone</span>
                            <span class="text-sm font-bold text-slate-200" x-text="ticket?.customer?.phone"></span>
                        </div>
                        <div class="bg-white/5 backdrop-blur-md rounded-xl p-4 border border-white/10"
                            x-show="ticket?.customer?.companyName">
                            <span class="text-[9px] font-black text-slate-500 uppercase block mb-1">Company</span>
                            <span class="text-sm font-bold text-slate-200" x-text="ticket?.customer?.companyName"></span>
                        </div>
                    </div>

                    <a :href="`/contacts?id=${ticket?.customer?._id}`"
                        class="mt-8 flex items-center justify-center w-full py-4 bg-white/10 hover:bg-white/20 text-white text-[9px] font-black uppercase tracking-widest rounded-xl transition-all border border-white/5">
                        View Profile
                    </a>
                </div>

                <!-- Financial Ledger -->
                <div class="bg-white border border-slate-200 rounded-[24px] p-6 shadow-sm">
                    <div class="flex items-center gap-3 mb-6 pb-4 border-b border-slate-100">
                        <div class="w-10 h-10 rounded-lg bg-emerald-50 text-emerald-600 flex items-center justify-center">
                            <i class="fas fa-wallet text-sm"></i>
                        </div>
                        <h2 class="text-lg font-bold text-slate-900 tracking-tight uppercase">Ledger</h2>
                    </div>

                    <div class="space-y-5">
                        <div class="flex items-center justify-between">
                            <span class="text-sm font-medium text-slate-400">Service Fee</span>
                            <span class="text-lg font-bold text-slate-900"
                                x-text="`₹${Number(ticket?.serviceCharge || 0).toLocaleString('en-IN')}`"></span>
                        </div>
                        <div class="flex items-center justify-between pb-5 border-b border-slate-100">
                            <span class="text-sm font-medium text-slate-400">Additional</span>
                            <span class="text-lg font-bold text-slate-900">₹0</span>
                        </div>
                        <div class="flex items-center justify-between pt-2">
                            <span class="text-base font-bold text-slate-900 tracking-tight uppercase">Total</span>
                            <span class="text-3xl font-extrabold text-primary-600 tracking-tighter"
                                x-text="`₹${Number(ticket?.serviceCharge || 0).toLocaleString('en-IN')}`"></span>
                        </div>
                    </div>

                    <div class="mt-8 p-5 bg-slate-50 rounded-xl border border-slate-200">
                        <div class="flex items-start gap-4">
                            <i class="fas fa-info-circle text-slate-300 mt-1"></i>
                            <p class="text-[10px] font-bold text-slate-400 leading-relaxed uppercase tracking-widest">
                                Pricing reflects current assessment</p>
                        </div>
                    </div>

                    <!-- Payment Action -->
                    <button @click="settlePayment()"
                        x-show="!isSettled && ticket?.status !== 'Delivered'"
                        class="mt-6 w-full py-4 bg-emerald-500 hover:bg-emerald-600 text-white rounded-xl text-[9px] font-black uppercase tracking-widest shadow-lg shadow-emerald-100 transition-all active:scale-95 flex items-center justify-center gap-2 group">
                        <i class="fas fa-check-circle group-hover:scale-125 transition-transform"></i>
                        <span>Confirm Payment</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/pages/service-ticket-view.js"></script>