<script src="/js/pages/expenditure.js"></script>

<div x-data="expenditureData()" x-init="init()" class="space-y-8 animate__animated animate__fadeIn">
    <!-- Header Section -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 tracking-tight">Expenditure</h1>
            <p class="text-gray-500 mt-1 font-medium">Track operational costs and miscellaneous spends.</p>
        </div>
        <div class="flex items-center gap-3">
            <button @click="showStats = !showStats"
                class="px-6 py-3 rounded-2xl bg-white border border-gray-100 text-gray-600 font-semibold text-sm hover:shadow-ios transition-all flex items-center gap-2">
                <i class="fas" :class="showStats ? 'fa-list' : 'fa-chart-pie'"></i>
                <span x-text="showStats ? 'View List' : 'View Insights'"></span>
            </button>
            <button @click="openAddModal()"
                class="px-6 py-3 rounded-2xl bg-gray-900 text-white font-semibold text-sm hover:shadow-2xl hover:bg-gray-800 transition-all flex items-center gap-2 active:scale-95">
                <i class="fas fa-plus"></i>
                <span>Log Expense</span>
            </button>
        </div>
    </div>

    <!-- Stats Overview (Quick Insights) -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="p-8 rounded-[32px] bg-white border border-gray-100 shadow-sm space-y-2">
            <span class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Today's Spend</span>
            <div class="flex items-baseline gap-1">
                <span class="text-2xl font-bold text-gray-900">₹</span>
                <span class="text-4xl font-black tracking-tight text-gray-900"
                    x-text="formatNumber(stats.todayTotal)">0</span>
            </div>
        </div>
        <div class="p-8 rounded-[32px] bg-gray-900 shadow-2xl space-y-2 relative overflow-hidden group">
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500/10 to-transparent"></div>
            <span class="text-[10px] font-bold text-gray-400 uppercase tracking-widest relative z-10">Total Monthly
                Forecast</span>
            <div class="flex items-baseline gap-1 relative z-10">
                <span class="text-2xl font-bold text-white">₹</span>
                <span class="text-4xl font-black tracking-tight text-white"
                    x-text="formatNumber(calculateMonthTotal())">0</span>
            </div>
        </div>
        <div class="p-8 rounded-[32px] bg-white border border-gray-100 shadow-sm space-y-4">
            <span class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Quick Filters</span>
            <div class="flex flex-wrap gap-2">
                <template x-for="cat in categories" :key="cat">
                    <button @click="toggleFilter(cat)"
                        :class="filter.category === cat ? 'bg-gray-900 text-white' : 'bg-gray-50 text-gray-500 hover:bg-gray-100'"
                        class="px-4 py-2 rounded-xl text-[10px] font-bold uppercase tracking-wider transition-all"
                        x-text="cat"></button>
                </template>
            </div>
        </div>
    </div>

    <!-- List View -->
    <div x-show="!showStats" class="bg-white rounded-[32px] border border-gray-100 shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-gray-50">
                        <th class="px-8 py-6 text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em]">Expense &
                            Date</th>
                        <th class="px-8 py-6 text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em]">Category
                        </th>
                        <th class="px-8 py-6 text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em]">Logged By
                        </th>
                        <th class="px-8 py-6 text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em] text-right">
                            Amount</th>
                        <th
                            class="px-8 py-6 text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em] text-center">
                            Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    <template x-for="item in expenditures" :key="item._id">
                        <tr class="group hover:bg-gray-50/50 transition-colors">
                            <td class="px-8 py-6">
                                <div class="flex flex-col">
                                    <span class="font-bold text-gray-900" x-text="item.title"></span>
                                    <span class="text-[10px] font-medium text-gray-400 mt-1"
                                        x-text="formatDate(item.date)"></span>
                                </div>
                            </td>
                            <td class="px-8 py-6">
                                <span :class="{
                                    'bg-blue-50 text-blue-600': item.category === 'Tea' || item.category === 'Snacks',
                                    'bg-purple-50 text-purple-600': item.category === 'Tools',
                                    'bg-orange-50 text-orange-600': item.category === 'Transport',
                                    'bg-gray-100 text-gray-600': item.category === 'Miscellaneous' || item.category === 'Ad-hoc'
                                }" class="px-4 py-1.5 rounded-full text-[10px] font-bold uppercase tracking-widest"
                                    x-text="item.category"></span>
                            </td>
                            <td class="px-8 py-6">
                                <div class="flex items-center gap-2">
                                    <div class="w-6 h-6 rounded-full bg-gray-200 flex items-center justify-center text-[10px] font-bold text-gray-500 uppercase"
                                        x-text="item.addedBy?.name?.charAt(0) || 'U'"></div>
                                    <span class="text-xs font-semibold text-gray-600"
                                        x-text="item.addedBy?.name || 'Unknown'"></span>
                                </div>
                            </td>
                            <td class="px-8 py-6 text-right">
                                <span class="font-bold text-gray-900">₹ <span
                                        x-text="formatNumber(item.amount)"></span></span>
                            </td>
                            <td class="px-8 py-6">
                                <div
                                    class="flex items-center justify-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <button @click="deleteItem(item._id)"
                                        class="w-8 h-8 rounded-full flex items-center justify-center text-gray-300 hover:text-red-500 hover:bg-red-50 transition-all">
                                        <i class="fas fa-trash-alt text-xs"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </template>
                </tbody>
            </table>
        </div>
        <div x-show="expenditures.length === 0" class="p-24 text-center space-y-4">
            <div class="w-20 h-20 bg-gray-50 rounded-[24px] flex items-center justify-center mx-auto text-gray-200">
                <i class="fas fa-wallet text-3xl"></i>
            </div>
            <p class="text-gray-400 font-medium">No expenditures logged yet.</p>
        </div>
    </div>

    <!-- Insights View -->
    <div x-show="showStats" class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white p-8 rounded-[40px] border border-gray-100 shadow-sm">
            <h3 class="text-lg font-bold text-gray-900 mb-8">Spend by Category</h3>
            <div class="space-y-6">
                <template x-for="s in stats.byCategory" :key="s._id">
                    <div class="space-y-2">
                        <div class="flex justify-between items-end">
                            <span class="text-[10px] font-bold text-gray-400 uppercase tracking-widest"
                                x-text="s._id"></span>
                            <span class="font-bold text-gray-900">₹ <span
                                    x-text="formatNumber(s.totalAmount)"></span></span>
                        </div>
                        <div class="h-2 bg-gray-50 rounded-full overflow-hidden">
                            <div class="h-full bg-gray-900"
                                :style="`width: ${(s.totalAmount / calculateTotal() * 100)}%`"></div>
                        </div>
                    </div>
                </template>
            </div>
        </div>
    </div>

    <!-- Add Expense Modal -->
    <div x-show="showAddModal" class="fixed inset-0 z-50 flex items-center justify-center p-6" x-cloak>
        <div @click="closeModal()"
            class="absolute inset-0 bg-black/20 backdrop-blur-sm animate__animated animate__fadeIn"></div>
        <div class="relative w-full max-w-md bg-white rounded-[40px] shadow-2xl p-10 animate__animated animate__zoomIn">
            <div class="flex items-center justify-between mb-8">
                <h2 class="text-2xl font-bold text-gray-900">Log Expense</h2>
                <button @click="closeModal()" class="text-gray-400 hover:text-gray-600"><i
                        class="fas fa-times"></i></button>
            </div>

            <form @submit.prevent="saveExpense()" class="space-y-6">
                <div class="space-y-2">
                    <label class="text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em] ml-1">What did you
                        buy?</label>
                    <input type="text" x-model="formData.title" placeholder="e.g., Tea for team" required
                        class="w-full px-6 py-4 bg-gray-50 border border-gray-100 rounded-2xl focus:ring-4 focus:ring-gray-900/5 focus:border-gray-900 transition-all outline-none font-medium">
                </div>

                <div class="grid grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label class="text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em] ml-1">Amount
                            (₹)</label>
                        <input type="number" x-model="formData.amount" placeholder="0" required min="1"
                            class="w-full px-6 py-4 bg-gray-50 border border-gray-100 rounded-2xl focus:ring-4 focus:ring-gray-900/5 focus:border-gray-900 transition-all outline-none font-bold text-lg">
                    </div>
                    <div class="space-y-2">
                        <label
                            class="text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em] ml-1">Category</label>
                        <select x-model="formData.category" required
                            class="w-full px-6 py-4 bg-gray-50 border border-gray-100 rounded-2xl focus:ring-4 focus:ring-gray-900/5 focus:border-gray-900 transition-all outline-none font-semibold appearance-none">
                            <template x-for="cat in categories" :key="cat">
                                <option :value="cat" x-text="cat"></option>
                            </template>
                        </select>
                    </div>
                </div>

                <div class="space-y-2">
                    <label class="text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em] ml-1">Additional
                        Notes</label>
                    <textarea x-model="formData.description" placeholder="Optional details..."
                        class="w-full px-6 py-4 bg-gray-50 border border-gray-100 rounded-2xl focus:ring-4 focus:ring-gray-900/5 focus:border-gray-900 transition-all outline-none font-medium h-24 resize-none"></textarea>
                </div>

                <button type="submit"
                    class="w-full py-5 bg-gray-900 text-white rounded-2xl font-bold uppercase tracking-[0.2em] text-[10px] hover:bg-gray-800 transition-all active:scale-95 shadow-xl shadow-gray-200">
                    Confirm Logs
                </button>
            </form>
        </div>
    </div>
</div>