<div x-data="dashboardData" x-init="init()" class="space-y-6">
  
  <!-- Stats Grid: 4 Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="bg-white border border-slate-200 rounded-lg p-6 shadow-sm">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-lg bg-primary-50 flex items-center justify-center text-primary-600">
          <i class="fas fa-indian-rupee-sign text-lg"></i>
        </div>
        <div>
          <p class="text-xs text-slate-500 mb-1">Money Flow</p>
          <h3 class="text-xl font-bold text-slate-900" x-text="'₹' + Number(stats.revenue || 0).toLocaleString('en-IN')">0</h3>
        </div>
      </div>
    </div>

    <div class="bg-white border border-slate-200 rounded-lg p-6 shadow-sm">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-lg bg-emerald-50 flex items-center justify-center text-emerald-600">
          <i class="fas fa-boxes-stacked text-lg"></i>
        </div>
        <div>
          <p class="text-xs text-slate-500 mb-1">Stock Items</p>
          <h3 class="text-xl font-bold text-slate-900" x-text="stats.products.total">0</h3>
        </div>
      </div>
    </div>

    <div class="bg-white border border-slate-200 rounded-lg p-6 shadow-sm">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-lg bg-amber-50 flex items-center justify-center text-amber-600">
          <i class="fas fa-wrench text-lg"></i>
        </div>
        <div>
          <p class="text-xs text-slate-500 mb-1">Repairs</p>
          <h3 class="text-xl font-bold text-slate-900" x-text="stats.tickets.active">0</h3>
        </div>
      </div>
    </div>

    <div class="bg-white border border-slate-200 rounded-lg p-6 shadow-sm">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-lg bg-indigo-50 flex items-center justify-center text-indigo-600">
          <i class="fas fa-users text-lg"></i>
        </div>
        <div>
          <p class="text-xs text-slate-500 mb-1">Parties</p>
          <h3 class="text-xl font-bold text-slate-900" x-text="stats.contacts || 0">0</h3>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    
    <!-- Earnings Chart - Takes 2 columns -->
    <div class="lg:col-span-2 bg-white border border-slate-200 rounded-lg shadow-sm overflow-hidden">
      <div class="p-6 border-b border-slate-100">
        <h3 class="text-lg font-bold text-slate-900">Earnings Trend</h3>
        <p class="text-xs text-slate-500 mt-1">Last 7 days</p>
      </div>
      <div class="p-6">
        <div class="h-80 w-full">
          <canvas id="revenueChart"></canvas>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-primary-600 rounded-lg shadow-md p-6 text-white">
      <h3 class="text-xl font-bold mb-2">Quick Actions</h3>
      <p class="text-primary-100 text-sm mb-6">Manage your shop</p>
      
      <div class="space-y-3">
        <a href="/products/add" class="flex items-center justify-between bg-white/10 hover:bg-white/20 p-4 rounded-lg transition-all">
          <span class="font-semibold text-sm">Add Item</span>
          <i class="fas fa-plus text-xs"></i>
        </a>
        <a href="/service-tickets/add" class="flex items-center justify-between bg-white text-primary-600 p-4 rounded-lg font-semibold text-sm hover:bg-primary-50 transition-all">
          <span>New Repair</span>
          <i class="fas fa-wrench text-xs"></i>
        </a>
        <a href="/contacts" class="flex items-center justify-between bg-white/10 hover:bg-white/20 p-4 rounded-lg transition-all">
          <span class="font-semibold text-sm">Party List</span>
          <i class="fas fa-address-book text-xs"></i>
        </a>
      </div>
    </div>
  </div>

  <!-- Bottom Grid: Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    
    <!-- Recent Repairs -->
    <div class="bg-white border border-slate-200 rounded-lg shadow-sm overflow-hidden">
      <div class="p-6 border-b border-slate-100">
        <h3 class="text-lg font-bold text-slate-900">Recent Repairs</h3>
        <p class="text-xs text-slate-500 mt-1">Latest service tickets</p>
      </div>
      <div class="divide-y divide-slate-100">
        <template x-for="ticket in recentTickets.slice(0, 5)" :key="ticket._id">
          <div @click="window.location.href = `/service-tickets/${ticket._id}`" 
            class="flex items-center justify-between p-4 hover:bg-slate-50 transition-all cursor-pointer">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-slate-100 flex items-center justify-center text-slate-500">
                <i class="fas fa-wrench text-xs"></i>
              </div>
              <div>
                <p class="text-sm font-semibold text-slate-900" x-text="'#' + ticket.ticketNumber"></p>
                <p class="text-xs text-slate-500" x-text="ticket.customer?.name || 'Customer'"></p>
              </div>
            </div>
            <span class="px-2 py-1 rounded text-[10px] font-bold uppercase"
              :class="{
                'bg-amber-100 text-amber-700': ['Pending', 'In Progress'].includes(ticket.status),
                'bg-emerald-100 text-emerald-700': ticket.status === 'Completed',
                'bg-slate-900 text-white': ticket.status === 'Delivered'
              }" x-text="ticket.status"></span>
          </div>
        </template>
      </div>
    </div>

    <!-- Recent Items -->
    <div class="bg-white border border-slate-200 rounded-lg shadow-sm overflow-hidden">
      <div class="p-6 border-b border-slate-100">
        <h3 class="text-lg font-bold text-slate-900">Recent Items</h3>
        <p class="text-xs text-slate-500 mt-1">Latest stock added</p>
      </div>
      <div class="divide-y divide-slate-100">
        <template x-for="product in recentProducts.slice(0, 5)" :key="product._id">
          <div class="flex items-center justify-between p-4 hover:bg-slate-50 transition-all">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-slate-100 flex items-center justify-center text-slate-500">
                <i class="fas fa-box text-xs"></i>
              </div>
              <div>
                <p class="text-sm font-semibold text-slate-900" x-text="product.name"></p>
                <p class="text-xs text-slate-500" x-text="product.category?.name || 'Category'"></p>
              </div>
            </div>
            <p class="text-sm font-bold text-slate-900" x-text="'₹' + Number(product.price).toLocaleString('en-IN')"></p>
          </div>
        </template>
      </div>
    </div>
  </div>
</div>

<script src="/js/pages/dashboard.js"></script>