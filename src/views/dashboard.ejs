<div x-data="dashboardData" x-init="init()" class="space-y-8">
  <!-- Page Header -->
  <div class="animate__animated animate__fadeInDown">
    <h1 class="text-3xl md:text-4xl font-bold text-gray-900 tracking-tight mb-2">
      Good Morning, <span class="text-primary-500" x-text="user.name"></span>
    </h1>
    <p class="text-gray-500 text-lg">Here's your shop's overview for today.</p>
  </div>

  <!-- Quick Actions -->
  <div>
    <h2 class="text-xl font-semibold text-gray-900 mb-5 flex items-center">
      <i class="fas fa-bolt text-primary-500 mr-2.5"></i>
      Quick Actions
    </h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
      <!-- Add Product -->
      <a href="/products/add"
        class="glass rounded-3xl p-6 shadow-ios hover:shadow-ios-hover transition-all duration-300 group active:scale-95 animate__animated animate__fadeInUp"
        style="animation-delay: 0.1s">
        <div
          class="w-14 h-14 bg-blue-50 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
          <i class="fas fa-plus text-blue-500 text-2xl"></i>
        </div>
        <h3 class="font-semibold text-gray-900 text-lg mb-1">Add Product</h3>
        <p class="text-sm text-gray-500">New inventory</p>
      </a>

      <!-- New Ticket -->
      <a href="/service-tickets/add"
        class="glass rounded-3xl p-6 shadow-ios hover:shadow-ios-hover transition-all duration-300 group active:scale-95 animate__animated animate__fadeInUp"
        style="animation-delay: 0.2s">
        <div
          class="w-14 h-14 bg-green-50 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
          <i class="fas fa-ticket text-green-500 text-2xl"></i>
        </div>
        <h3 class="font-semibold text-gray-900 text-lg mb-1">New Ticket</h3>
        <p class="text-sm text-gray-500">Service request</p>
      </a>

      <!-- Add Contact -->
      <a href="/contacts/add"
        class="glass rounded-3xl p-6 shadow-ios hover:shadow-ios-hover transition-all duration-300 group active:scale-95 animate__animated animate__fadeInUp"
        style="animation-delay: 0.3s">
        <div
          class="w-14 h-14 bg-purple-50 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
          <i class="fas fa-user-plus text-purple-500 text-2xl"></i>
        </div>
        <h3 class="font-semibold text-gray-900 text-lg mb-1">Add Contact</h3>
        <p class="text-sm text-gray-500">Vendor/Customer</p>
      </a>

      <!-- View Stats -->
      <a href="/statistics"
        class="glass rounded-3xl p-6 shadow-ios hover:shadow-ios-hover transition-all duration-300 group active:scale-95 animate__animated animate__fadeInUp"
        style="animation-delay: 0.4s">
        <div
          class="w-14 h-14 bg-amber-50 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
          <i class="fas fa-chart-line text-amber-500 text-2xl"></i>
        </div>
        <h3 class="font-semibold text-gray-900 text-lg mb-1">Statistics</h3>
        <p class="text-sm text-gray-500">View reports</p>
      </a>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Products Stats -->
    <div class="glass rounded-3xl p-6 shadow-ios animate__animated animate__fadeInUp" style="animation-delay: 0.5s">
      <div class="flex items-center justify-between mb-6">
        <div class="w-12 h-12 bg-blue-50 rounded-2xl flex items-center justify-center">
          <i class="fas fa-box text-blue-500 text-xl"></i>
        </div>
        <span class="px-3 py-1 rounded-full bg-gray-100 text-xs font-medium text-gray-600">Inventory</span>
      </div>
      <h3 class="text-4xl font-bold text-gray-900 mb-2 tracking-tight" x-text="stats.products.total">
        0
      </h3>
      <div class="flex items-center space-x-4 text-sm font-medium">
        <span class="text-green-600 flex items-center bg-green-50 px-2 py-1 rounded-lg">
          <i class="fas fa-check-circle mr-1.5"></i>
          <span x-text="stats.products.available">0</span> Available
        </span>
        <span class="text-gray-500 flex items-center bg-gray-50 px-2 py-1 rounded-lg">
          <i class="fas fa-circle mr-1.5 text-[10px]"></i>
          <span x-text="stats.products.sold">0</span> Sold
        </span>
      </div>
    </div>

    <!-- Tickets Stats -->
    <div class="glass rounded-3xl p-6 shadow-ios animate__animated animate__fadeInUp" style="animation-delay: 0.6s">
      <div class="flex items-center justify-between mb-6">
        <div class="w-12 h-12 bg-green-50 rounded-2xl flex items-center justify-center">
          <i class="fas fa-ticket text-green-500 text-xl"></i>
        </div>
        <span class="px-3 py-1 rounded-full bg-gray-100 text-xs font-medium text-gray-600">Service</span>
      </div>
      <h3 class="text-4xl font-bold text-gray-900 mb-2 tracking-tight" x-text="stats.tickets.total">
        0
      </h3>
      <div class="flex items-center space-x-4 text-sm font-medium">
        <span class="text-amber-600 flex items-center bg-amber-50 px-2 py-1 rounded-lg">
          <i class="fas fa-clock mr-1.5"></i>
          <span x-text="stats.tickets.pending">0</span> Pending
        </span>
        <span class="text-green-600 flex items-center bg-green-50 px-2 py-1 rounded-lg">
          <i class="fas fa-check mr-1.5"></i>
          <span x-text="stats.tickets.completed">0</span> Done
        </span>
      </div>
    </div>

    <!-- Revenue Stats -->
    <div class="glass rounded-3xl p-6 shadow-ios animate__animated animate__fadeInUp" style="animation-delay: 0.7s">
      <div class="flex items-center justify-between mb-6">
        <div class="w-12 h-12 bg-purple-50 rounded-2xl flex items-center justify-center">
          <i class="fas fa-indian-rupee-sign text-purple-500 text-xl"></i>
        </div>
        <span class="px-3 py-1 rounded-full bg-gray-100 text-xs font-medium text-gray-600">Revenue</span>
      </div>
      <h3 class="text-4xl font-bold text-gray-900 mb-2 tracking-tight">
        â‚¹<span x-text="Number(stats.revenue).toLocaleString('en-IN')">0</span>
      </h3>
      <p class="text-sm text-gray-500 font-medium">From service tickets</p>
    </div>
  </div>

  <!-- Charts & Activity Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Charts Column -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Revenue Chart -->
      <div class="glass rounded-3xl p-6 shadow-ios animate__animated animate__fadeInUp" style="animation-delay: 0.8s">
        <h3 class="text-lg font-semibold text-gray-900 mb-6 flex items-center">
          <i class="fas fa-chart-line text-primary-500 mr-2.5"></i>
          Revenue Trend
          <span class="ml-auto text-xs font-medium text-gray-400 bg-gray-50 px-2 py-1 rounded-lg">Last 7 Days</span>
        </h3>
        <div class="h-72 w-full">
          <canvas id="revenueChart"></canvas>
        </div>
      </div>

      <!-- Ticket Status Chart -->
      <div class="glass rounded-3xl p-6 shadow-ios animate__animated animate__fadeInUp" style="animation-delay: 0.9s">
        <h3 class="text-lg font-semibold text-gray-900 mb-6 flex items-center">
          <i class="fas fa-chart-pie text-primary-500 mr-2.5"></i>
          Ticket Status
        </h3>
        <div class="h-64 flex justify-center relative">
          <canvas id="statusChart"></canvas>
        </div>
      </div>
    </div>

    <!-- Recent Activity Column -->
    <div class="space-y-6">
      <!-- Recent Products -->
      <div class="glass rounded-3xl p-6 shadow-ios animate__animated animate__fadeInUp" style="animation-delay: 1.0s">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center">
            <i class="fas fa-box text-primary-500 mr-2.5"></i>
            Recent Products
          </h3>
          <a href="/products" class="text-sm font-medium text-primary-600 hover:text-primary-700 transition-colors">View
            All</a>
        </div>

        <div class="space-y-2">
          <template x-for="product in recentProducts" :key="product._id">
            <div
              class="flex items-center justify-between p-3 rounded-2xl hover:bg-gray-50/80 transition-colors group cursor-pointer">
              <div class="flex items-center space-x-3 overflow-hidden">
                <div
                  class="w-10 h-10 rounded-xl bg-gray-100 flex items-center justify-center text-gray-400 group-hover:bg-white group-hover:shadow-sm transition-all">
                  <i class="fas fa-box"></i>
                </div>
                <div class="min-w-0">
                  <p class="font-semibold text-gray-900 truncate text-sm" x-text="product.name"></p>
                  <p class="text-xs text-gray-500 truncate" x-text="product.category?.name"></p>
                </div>
              </div>
              <span class="px-2.5 py-1 rounded-lg text-[11px] font-semibold tracking-wide uppercase"
                :class="product.isSold ? 'bg-gray-100 text-gray-500' : 'bg-green-50 text-green-600'"
                x-text="product.isSold ? 'Sold' : 'Stock'"></span>
            </div>
          </template>
          <template x-if="recentProducts.length === 0">
            <div class="text-center py-8">
              <div class="w-12 h-12 bg-gray-50 rounded-full flex items-center justify-center mx-auto mb-3">
                <i class="fas fa-box-open text-gray-300"></i>
              </div>
              <p class="text-gray-400 text-sm">No products yet</p>
            </div>
          </template>
        </div>
      </div>

      <!-- Recent Tickets -->
      <div class="glass rounded-3xl p-6 shadow-ios animate__animated animate__fadeInUp" style="animation-delay: 1.1s">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center">
            <i class="fas fa-ticket text-primary-500 mr-2.5"></i>
            Recent Tickets
          </h3>
          <a href="/service-tickets"
            class="text-sm font-medium text-primary-600 hover:text-primary-700 transition-colors">View All</a>
        </div>

        <div class="space-y-2">
          <template x-for="ticket in recentTickets" :key="ticket._id">
            <div
              class="flex items-center justify-between p-3 rounded-2xl hover:bg-gray-50/80 transition-colors group cursor-pointer">
              <div class="flex items-center space-x-3 overflow-hidden">
                <div
                  class="w-10 h-10 rounded-xl bg-gray-100 flex items-center justify-center text-gray-400 group-hover:bg-white group-hover:shadow-sm transition-all">
                  <i class="fas fa-ticket"></i>
                </div>
                <div class="min-w-0">
                  <p class="font-semibold text-gray-900 truncate text-sm">
                    #<span x-text="ticket.ticketNumber"></span>
                  </p>
                  <p class="text-xs text-gray-500 truncate"
                    x-text="ticket.deviceDetails.substring(0, 25) + (ticket.deviceDetails.length > 25 ? '...' : '')">
                  </p>
                </div>
              </div>
              <span class="px-2.5 py-1 rounded-lg text-[11px] font-semibold tracking-wide uppercase" :class="{
                        'bg-yellow-50 text-yellow-600': ticket.status === 'Pending',
                        'bg-blue-50 text-blue-600': ticket.status === 'In Progress',
                        'bg-green-50 text-green-600': ticket.status === 'Completed',
                        'bg-purple-50 text-purple-600': ticket.status === 'Delivered',
                        'bg-red-50 text-red-600': ticket.status === 'Cancelled'
                    }" x-text="ticket.status"></span>
            </div>
          </template>
          <template x-if="recentTickets.length === 0">
            <div class="text-center py-8">
              <div class="w-12 h-12 bg-gray-50 rounded-full flex items-center justify-center mx-auto mb-3">
                <i class="fas fa-clipboard-list text-gray-300"></i>
              </div>
              <p class="text-gray-400 text-sm">No tickets yet</p>
            </div>
          </template>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/pages/dashboard.js"></script>