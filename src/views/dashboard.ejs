<div x-data="dashboardData" x-init="init()" class="space-y-8">
  <!-- Dynamic Greeting & Header -->
  <div class="flex flex-col md:flex-row md:items-end justify-between gap-6">
    <div class="animate__animated animate__fadeIn">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 tracking-tighter mb-2">
        Morning, <span class="text-blue-600 font-extrabold" x-text="user.name"></span>
      </h1>
      <p class="text-gray-400 text-lg font-medium">Your business is looking <span class="text-gray-900">good</span>
        today.</p>
    </div>

    <div class="flex items-center gap-3">
      <div
        class="px-4 py-2 bg-white border border-gray-100 rounded-2xl shadow-sm text-xs font-bold text-gray-500 flex items-center gap-2">
        <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
        Live Systems
      </div>
      <div class="px-4 py-2 bg-gray-900 text-white rounded-2xl text-xs font-bold shadow-xl shadow-gray-200"
        x-text="new Date().toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric' })"></div>
    </div>
  </div>

  <!-- Perspective: Quick Operations -->
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <h2 class="text-[11px] font-bold text-gray-400 uppercase tracking-widest ml-1">Quick Actions</h2>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
      <!-- Capture Product -->
      <a href="/products/add"
        class="bg-white border border-gray-100 rounded-[28px] p-6 shadow-sm hover:shadow-xl hover:shadow-gray-100 transition-all duration-500 group relative overflow-hidden active:scale-95 animate__animated animate__fadeInUp">
        <div
          class="absolute -right-4 -top-4 w-20 h-20 bg-blue-50/50 rounded-full blur-2xl group-hover:bg-blue-100/50 transition-colors">
        </div>
        <div
          class="w-12 h-12 bg-gray-50 rounded-2xl flex items-center justify-center mb-4 border border-gray-100 group-hover:bg-blue-600 group-hover:border-blue-600 transition-all duration-500">
          <i class="fas fa-plus text-gray-400 group-hover:text-white text-lg transition-colors"></i>
        </div>
        <h3 class="font-bold text-gray-900 text-base mb-0.5">Inventory</h3>
        <p class="text-[10px] text-gray-400 font-bold uppercase tracking-widest">Add Product</p>
      </a>

      <!-- Dispatch Service -->
      <a href="/service-tickets/add"
        class="bg-white border border-gray-100 rounded-[28px] p-6 shadow-sm hover:shadow-xl hover:shadow-gray-100 transition-all duration-500 group relative overflow-hidden active:scale-95 animate__animated animate__fadeInUp"
        style="animation-delay: 0.1s">
        <div
          class="absolute -right-4 -top-4 w-20 h-20 bg-green-50/50 rounded-full blur-2xl group-hover:bg-green-100/50 transition-colors">
        </div>
        <div
          class="w-12 h-12 bg-gray-50 rounded-2xl flex items-center justify-center mb-4 border border-gray-100 group-hover:bg-green-600 group-hover:border-green-600 transition-all duration-500">
          <i class="fas fa-tools text-gray-400 group-hover:text-white text-lg transition-colors"></i>
        </div>
        <h3 class="font-bold text-gray-900 text-base mb-0.5">Service</h3>
        <p class="text-[10px] text-gray-400 font-bold uppercase tracking-widest">New Ticket</p>
      </a>

      <!-- Expand Network -->
      <a href="/contacts/add"
        class="bg-white border border-gray-100 rounded-[28px] p-6 shadow-sm hover:shadow-xl hover:shadow-gray-100 transition-all duration-500 group relative overflow-hidden active:scale-95 animate__animated animate__fadeInUp"
        style="animation-delay: 0.2s">
        <div
          class="absolute -right-4 -top-4 w-20 h-20 bg-purple-50/50 rounded-full blur-2xl group-hover:bg-purple-100/50 transition-colors">
        </div>
        <div
          class="w-12 h-12 bg-gray-50 rounded-2xl flex items-center justify-center mb-4 border border-gray-100 group-hover:bg-purple-600 group-hover:border-purple-600 transition-all duration-500">
          <i class="fas fa-user-plus text-gray-400 group-hover:text-white text-lg transition-colors"></i>
        </div>
        <h3 class="font-bold text-gray-900 text-base mb-0.5">Relations</h3>
        <p class="text-[10px] text-gray-400 font-bold uppercase tracking-widest">Add Contact</p>
      </a>

      <!-- Analytics -->
      <a href="/statistics"
        class="bg-white border border-gray-100 rounded-[28px] p-6 shadow-sm hover:shadow-xl hover:shadow-gray-100 transition-all duration-500 group relative overflow-hidden active:scale-95 animate__animated animate__fadeInUp"
        style="animation-delay: 0.3s">
        <div
          class="absolute -right-4 -top-4 w-20 h-20 bg-amber-50/50 rounded-full blur-2xl group-hover:bg-amber-100/50 transition-colors">
        </div>
        <div
          class="w-12 h-12 bg-gray-50 rounded-2xl flex items-center justify-center mb-4 border border-gray-100 group-hover:bg-amber-500 group-hover:border-amber-500 transition-all duration-500">
          <i class="fas fa-chart-bar text-gray-400 group-hover:text-white text-lg transition-colors"></i>
        </div>
        <h3 class="font-bold text-gray-900 text-base mb-0.5">Reports</h3>
        <p class="text-[10px] text-gray-400 font-bold uppercase tracking-widest">Business Stats</p>
      </a>
    </div>
  </div>

  <!-- Pulse: Performance Overview -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
    <!-- Assets Overview -->
    <div class="bg-gray-900 rounded-[32px] p-8 shadow-2xl relative overflow-hidden animate__animated animate__fadeInUp"
      style="animation-delay: 0.4s">
      <div class="absolute top-0 right-0 p-6">
        <i class="fas fa-archive text-gray-800 text-3xl opacity-20"></i>
      </div>
      <label class="text-[10px] font-bold text-gray-500 uppercase tracking-widest mb-1.5 block">Total Products</label>
      <h3 class="text-5xl font-bold text-white mb-6 tracking-tighter" x-text="stats.products.total">0</h3>
      <div class="grid grid-cols-2 gap-3">
        <div class="bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl px-4 py-3">
          <span class="text-[9px] font-bold text-gray-500 uppercase block mb-0.5">Available</span>
          <span class="text-lg font-bold text-green-400" x-text="stats.products.available">0</span>
        </div>
        <div class="bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl px-4 py-3">
          <span class="text-[9px] font-bold text-gray-500 uppercase block mb-0.5">Sold</span>
          <span class="text-lg font-bold text-gray-300" x-text="stats.products.sold">0</span>
        </div>
      </div>
    </div>

    <!-- Operations Overview -->
    <div class="bg-white border border-gray-100 rounded-[32px] p-8 shadow-sm animate__animated animate__fadeInUp"
      style="animation-delay: 0.5s">
      <label class="text-[10px] font-bold text-gray-400 uppercase tracking-widest mb-1.5 block">Service Tickets</label>
      <h3 class="text-5xl font-bold text-gray-900 mb-6 tracking-tighter" x-text="stats.tickets.total">0</h3>
      <div class="grid grid-cols-2 gap-3">
        <div class="bg-amber-50 rounded-2xl px-4 py-3">
          <span class="text-[9px] font-bold text-amber-500 uppercase block mb-0.5">In Progress</span>
          <span class="text-lg font-bold text-amber-600" x-text="stats.tickets.pending">0</span>
        </div>
        <div class="bg-green-50 rounded-2xl px-4 py-3">
          <span class="text-[9px] font-bold text-green-500 uppercase block mb-0.5">Resolved</span>
          <span class="text-lg font-bold text-green-600" x-text="stats.tickets.completed">0</span>
        </div>
      </div>
    </div>

    <!-- Capital Overview -->
    <div
      class="bg-blue-600 rounded-[32px] p-8 shadow-2xl relative overflow-hidden animate__animated animate__fadeInUp md:col-span-2 lg:col-span-1"
      style="animation-delay: 0.6s">
      <div class="absolute -bottom-8 -right-8 w-40 h-40 bg-white/10 rounded-full blur-3xl"></div>
      <label class="text-[10px] font-bold text-blue-200 uppercase tracking-widest mb-1.5 block">Total Revenue</label>
      <div class="flex items-baseline gap-2 mb-6">
        <span class="text-2xl font-bold text-blue-200">₹</span>
        <h3 class="text-4xl font-bold text-white tracking-tighter"
          x-text="Number(stats.revenue).toLocaleString('en-IN')">0</h3>
      </div>
      <p class="text-blue-100/60 text-[11px] font-medium leading-tight">Total revenue from completed service tickets.
      </p>
    </div>
  </div>

  <!-- Trends & Insights -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Visualization Anchor -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Revenue Chart -->
      <div class="bg-white border border-gray-50 rounded-[32px] p-8 shadow-sm animate__animated animate__fadeIn">
        <div class="flex items-center justify-between mb-10">
          <div>
            <h3 class="text-2xl font-bold text-gray-900 tracking-tight">Revenue Growth</h3>
            <p class="text-sm text-gray-400 mt-1">Daily revenue over the last 7 days.</p>
          </div>
          <span
            class="px-4 py-2 bg-gray-50 text-[10px] font-bold text-gray-400 uppercase tracking-widest rounded-xl">7-Day
            Analysis</span>
        </div>
        <div class="h-80 w-full">
          <canvas id="revenueChart"></canvas>
        </div>
      </div>

      <!-- Status Integrity -->
      <div class="bg-white border border-gray-50 rounded-[32px] p-8 shadow-sm animate__animated animate__fadeIn">
        <div class="flex items-center justify-between mb-10">
          <h3 class="text-2xl font-bold text-gray-900 tracking-tight">Ticket Status</h3>
          <div class="flex gap-2">
            <div class="flex items-center gap-1.5 text-[10px] font-bold text-gray-400">
              <div class="w-2 h-2 rounded-full bg-blue-500"></div> Active
            </div>
            <div class="flex items-center gap-1.5 text-[10px] font-bold text-gray-400">
              <div class="w-2 h-2 rounded-full bg-green-500"></div> Resolved
            </div>
          </div>
        </div>
        <div class="h-72 flex justify-center relative">
          <canvas id="statusChart"></canvas>
        </div>
      </div>
    </div>

    <!-- Real-time Streams -->
    <div class="space-y-8">
      <!-- Recent Products -->
      <div class="bg-white border border-gray-50 rounded-[32px] p-8 shadow-sm animate__animated animate__fadeIn">
        <div class="flex items-center justify-between mb-8">
          <h3 class="text-xl font-bold text-gray-900">Recent Products</h3>
          <a href="/products"
            class="w-8 h-8 rounded-full bg-gray-50 flex items-center justify-center text-gray-300 hover:text-blue-600 hover:bg-blue-50 transition-all">
            <i class="fas fa-arrow-right text-[10px]"></i>
          </a>
        </div>

        <div class="space-y-4">
          <template x-for="product in recentProducts" :key="product._id">
            <div
              class="flex items-center justify-between p-3 rounded-2xl hover:bg-gray-50 transition-all cursor-pointer group">
              <div class="flex items-center gap-3">
                <div
                  class="w-10 h-10 rounded-xl bg-gray-50 border border-gray-100 flex items-center justify-center text-gray-300 group-hover:bg-white group-hover:scale-110 transition-all duration-500">
                  <i class="fas fa-box text-xs"></i>
                </div>
                <div>
                  <p class="font-bold text-gray-900 text-xs leading-none mb-1" x-text="product.name"></p>
                  <p class="text-[9px] font-bold text-gray-400 uppercase tracking-widest"
                    x-text="product.category?.name || 'Item'"></p>
                </div>
              </div>
              <div class="text-right">
                <p class="text-[11px] font-bold text-gray-900 mb-0.5">₹<span
                    x-text="Number(product.price).toLocaleString('en-IN')"></span></p>
                <span class="text-[8px] font-bold uppercase tracking-widest"
                  :class="product.isSold ? 'text-gray-300' : 'text-green-500'"
                  x-text="product.isSold ? 'Closed' : 'Ready'"></span>
              </div>
            </div>
          </template>
        </div>
      </div>

      <!-- Recent Tickets -->
      <div class="bg-white border border-gray-50 rounded-[32px] p-8 shadow-sm animate__animated animate__fadeIn">
        <div class="flex items-center justify-between mb-8">
          <h3 class="text-xl font-bold text-gray-900">Recent Tickets</h3>
          <a href="/service-tickets"
            class="w-8 h-8 rounded-full bg-gray-50 flex items-center justify-center text-gray-300 hover:text-blue-600 hover:bg-blue-50 transition-all">
            <i class="fas fa-arrow-right text-[10px]"></i>
          </a>
        </div>

        <div class="space-y-4">
          <template x-for="ticket in recentTickets" :key="ticket._id">
            <div
              class="group flex items-center justify-between p-3 rounded-2xl hover:bg-gray-50 transition-all cursor-pointer"
              @click="window.location.href = `/service-tickets/${ticket._id}`">
              <div class="flex items-center gap-3">
                <div
                  class="w-10 h-10 rounded-xl bg-gray-50 border border-gray-100 flex items-center justify-center text-gray-400 group-hover:bg-white group-hover:rotate-12 transition-all duration-500">
                  <i class="fas fa-ticket-alt text-xs"></i>
                </div>
                <div>
                  <p class="font-bold text-gray-900 text-xs leading-none mb-1" x-text="`#${ticket.ticketNumber}`"></p>
                  <p class="text-[9px] font-bold text-gray-400 uppercase tracking-widest truncate max-w-[100px]"
                    x-text="ticket.deviceDetails"></p>
                </div>
              </div>
              <div class="flex items-center gap-4">
                <span class="px-2 py-1 rounded-lg text-[8px] font-bold uppercase tracking-widest shadow-sm" :class="{
                          'bg-amber-500 text-white': ticket.status === 'Pending',
                          'bg-blue-500 text-white': ticket.status === 'In Progress',
                          'bg-green-500 text-white': ticket.status === 'Completed',
                          'bg-gray-900 text-white': ticket.status === 'Delivered',
                          'bg-red-500 text-white': ticket.status === 'Cancelled'
                      }" x-text="ticket.status"></span>
                <i
                  class="fas fa-chevron-right text-[10px] text-gray-300 group-hover:text-blue-600 transition-colors"></i>
              </div>
            </div>
          </template>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/pages/dashboard.js"></script>