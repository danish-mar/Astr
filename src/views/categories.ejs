<div x-data="categoriesData" x-init="init()" class="min-h-screen bg-[#f9fafb] pb-20">
    <!-- Premium Header -->
    <div class="bg-white/70 backdrop-blur-xl border-b border-gray-100 mb-12">
        <div class="max-w-[1400px] mx-auto px-8 py-10">
            <div
                class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-8 animate__animated animate__fadeIn">
                <div>
                    <div class="flex items-center gap-3 mb-4">
                        <span
                            class="px-3 py-1 bg-blue-50 text-blue-600 text-[10px] font-bold rounded-full tracking-wider uppercase">Inventory</span>
                        <div class="w-1 h-1 rounded-full bg-gray-300"></div>
                        <span
                            class="text-[10px] font-bold text-gray-400 uppercase tracking-widest text-opacity-80">Categories</span>
                    </div>
                    <h1 class="text-4xl font-bold text-gray-900 tracking-tight mb-2">Categories</h1>
                    <p class="text-gray-400 text-lg font-medium">Manage product categories and their specifications.</p>
                </div>

                <a href="/categories/add"
                    class="px-8 py-5 bg-gray-900 text-white rounded-[24px] text-[11px] font-bold uppercase tracking-[0.2em] shadow-[0_20px_40px_-15px_rgba(0,0,0,0.2)] hover:bg-black active:scale-95 transition-all flex items-center justify-center gap-4">
                    <i class="fas fa-plus text-[10px]"></i>
                    <span>Add Category</span>
                </a>
            </div>
        </div>
    </div>

    <div class="max-w-[1400px] mx-auto px-8">
        <!-- Loading State -->
        <div x-show="loading" class="text-center py-32 animate__animated animate__fadeIn">
            <div class="relative w-20 h-20 mx-auto mb-8">
                <div class="absolute inset-0 border-4 border-gray-100 rounded-full"></div>
                <div class="absolute inset-0 border-4 border-gray-900 rounded-full border-t-transparent animate-spin">
                </div>
            </div>
            <p class="text-[10px] font-bold text-gray-400 uppercase tracking-[0.3em]">Loading categories...</p>
        </div>

        <!-- Categories Canvas -->
        <div x-show="!loading"
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 animate__animated animate__fadeInUp">
            <template x-for="(category, index) in categories" :key="category._id">
                <div class="bg-white border border-gray-100 rounded-[40px] p-8 shadow-sm hover:shadow-xl hover:shadow-gray-100 transition-all group"
                    :style="`animation-delay: ${index * 0.1}s`">

                    <div class="flex items-start justify-between mb-8">
                        <div
                            class="w-16 h-16 bg-gray-950 rounded-[22px] flex items-center justify-center text-white text-xl font-bold shadow-xl shadow-gray-200">
                            <span x-text="category.name.charAt(0)"></span>
                        </div>

                        <div
                            class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-all duration-300">
                            <a :href="`/categories/edit/${category._id}`"
                                class="w-10 h-10 bg-white border border-gray-100 rounded-xl flex items-center justify-center text-gray-400 hover:text-gray-900 hover:border-gray-200 transition-all active:scale-9 hover:shadow-sm">
                                <i class="fas fa-pen text-[10px]"></i>
                            </a>
                            <button @click="deleteCategory(category._id)"
                                class="w-10 h-10 bg-white border border-gray-100 rounded-xl flex items-center justify-center text-gray-400 hover:text-red-500 hover:border-red-100 transition-all active:scale-9 hover:shadow-sm">
                                <i class="fas fa-trash text-[10px]"></i>
                            </button>
                        </div>
                    </div>

                    <h3 class="text-2xl font-bold text-gray-900 tracking-tight mb-3" x-text="category.name"></h3>
                    <p class="text-gray-400 font-medium text-sm mb-8 line-clamp-2 h-10"
                        x-text="category.description || 'No description provided'"></p>

                    <div class="grid grid-cols-2 gap-4 pt-8 border-t border-gray-50">
                        <div class="flex flex-col gap-1">
                            <span class="text-[9px] font-bold text-gray-300 uppercase tracking-widest">Products</span>
                            <div class="flex items-center gap-2">
                                <i class="fas fa-box text-[10px] text-gray-400"></i>
                                <span class="text-xs font-bold text-gray-900"><span
                                        x-text="category.productCount || 0"></span> Units</span>
                            </div>
                        </div>
                        <div class="flex flex-col gap-1">
                            <span
                                class="text-[9px] font-bold text-gray-300 uppercase tracking-widest">Specifications</span>
                            <div class="flex items-center gap-2">
                                <i class="fas fa-list-ul text-[10px] text-gray-400"></i>
                                <span class="text-xs font-bold text-gray-900"><span
                                        x-text="category.specificationsTemplate?.length || 0"></span> Fields</span>
                            </div>
                        </div>
                    </div>
                </div>
            </template>

            <!-- Empty State -->
            <template x-if="categories.length === 0">
                <div class="col-span-full bg-white border border-gray-100 rounded-[48px] p-24 text-center shadow-sm">
                    <div class="w-24 h-24 bg-gray-50 rounded-[32px] flex items-center justify-center mx-auto mb-8">
                        <i class="fas fa-tags text-4xl text-gray-200"></i>
                    </div>
                    <h3 class="text-3xl font-bold text-gray-900 tracking-tighter mb-4">No Categories Found</h3>
                    <p class="text-gray-400 font-medium text-lg mb-12 max-w-md mx-auto">Start organizing your inventory
                        by creating your first category.</p>
                    <a href="/categories/add"
                        class="px-10 py-5 bg-gray-900 text-white rounded-[24px] text-[11px] font-bold uppercase tracking-[0.2em] shadow-xl shadow-gray-200 hover:bg-black active:scale-95 transition-all inline-flex items-center gap-4">
                        <i class="fas fa-plus text-[10px]"></i>
                        <span>Add Category</span>
                    </a>
                </div>
            </template>
        </div>
    </div>
</div>

<script src="/js/pages/categories.js"></script>