<div x-data="categoriesData" x-init="init()" class="min-h-screen pb-12">
  <!-- SHARP MINIMAL GATEWAY HEADER -->
  <div class="bg-white border-b border-slate-200 mb-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between py-6 gap-4">
        <div>
          <h1 class="text-2xl font-bold text-slate-900 tracking-tight uppercase">
            Categories Gateway
          </h1>
          <p class="text-[9px] font-black text-slate-400 mt-1 uppercase tracking-widest">
            Product Classification & Specifications
          </p>
        </div>

        <a
          href="/categories/add"
          class="inline-flex items-center px-6 py-2 bg-primary-600 text-white text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-primary-700 shadow-xl shadow-primary-200 transition-all active:scale-95"
        >
          <i class="fas fa-plus mr-2"></i>
          New Category
        </a>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Loading State -->
    <div x-show="loading" class="text-center py-32">
      <div class="relative w-16 h-16 mx-auto mb-6">
        <div class="absolute inset-0 border-4 border-slate-100 rounded-lg"></div>
        <div
          class="absolute inset-0 border-4 border-primary-600 rounded-lg border-t-transparent animate-spin"
        ></div>
      </div>
      <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest">
        Loading categories...
      </p>
    </div>

    <!-- Categories Grid -->
    <div
      x-show="!loading"
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
    >
      <template x-for="category in categories" :key="category._id">
        <div
          class="bg-white border border-slate-200 rounded-[24px] p-6 hover:shadow-xl hover:shadow-slate-100 transition-all group"
        >
          <!-- Header -->
          <div class="flex items-start justify-between mb-6">
            <div
              class="w-14 h-14 bg-slate-900 rounded-xl flex items-center justify-center text-white text-xl font-black shadow-lg"
            >
              <span x-text="category.name.charAt(0)"></span>
            </div>

            <div
              class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-all"
            >
              <a
                :href="`/categories/edit/${category._id}`"
                class="w-9 h-9 bg-slate-50 rounded-lg flex items-center justify-center text-slate-400 hover:text-primary-600 hover:bg-primary-50 transition-all"
                title="Edit"
              >
                <i class="fas fa-pencil-alt text-xs"></i>
              </a>
              <button
                @click="deleteCategory(category._id)"
                class="w-9 h-9 bg-slate-50 rounded-lg flex items-center justify-center text-slate-400 hover:text-rose-600 hover:bg-rose-50 transition-all"
                title="Delete"
              >
                <i class="fas fa-trash-alt text-xs"></i>
              </button>
            </div>
          </div>

          <!-- Content -->
          <h3
            class="text-xl font-bold text-slate-900 tracking-tight mb-2 uppercase"
            x-text="category.name"
          ></h3>
          <p
            class="text-slate-500 text-xs font-medium mb-6 line-clamp-2 h-8"
            x-text="category.description || 'No description provided'"
          ></p>

          <!-- Stats -->
          <div class="grid grid-cols-2 gap-4 pt-6 border-t border-slate-100">
            <div class="space-y-1">
              <p
                class="text-[8px] font-black text-slate-400 uppercase tracking-widest"
              >
                Products
              </p>
              <div class="flex items-center gap-2">
                <div
                  class="w-6 h-6 bg-slate-50 rounded-md flex items-center justify-center"
                >
                  <i class="fas fa-box text-[8px] text-slate-400"></i>
                </div>
                <span class="text-sm font-bold text-slate-900">
                  <span x-text="category.productCount || 0"></span>
                </span>
              </div>
            </div>
            <div class="space-y-1">
              <p
                class="text-[8px] font-black text-slate-400 uppercase tracking-widest"
              >
                Specs
              </p>
              <div class="flex items-center gap-2">
                <div
                  class="w-6 h-6 bg-slate-50 rounded-md flex items-center justify-center"
                >
                  <i class="fas fa-list-ul text-[8px] text-slate-400"></i>
                </div>
                <span class="text-sm font-bold text-slate-900">
                  <span
                    x-text="category.specificationsTemplate?.length || 0"
                  ></span>
                </span>
              </div>
            </div>
          </div>
        </div>
      </template>

      <!-- Empty State -->
      <template x-if="categories.length === 0">
        <div
          class="col-span-full bg-white border border-slate-200 rounded-[24px] p-20 text-center"
        >
          <div
            class="w-20 h-20 bg-slate-50 rounded-xl flex items-center justify-center mx-auto mb-6"
          >
            <i class="fas fa-tags text-4xl text-slate-200"></i>
          </div>
          <h3 class="text-2xl font-bold text-slate-900 tracking-tight mb-3 uppercase">
            No Categories Found
          </h3>
          <p class="text-slate-500 text-sm font-medium mb-8 max-w-md mx-auto">
            Start organizing your inventory by creating your first category.
          </p>
          <a
            href="/categories/add"
            class="inline-flex items-center px-8 py-3 bg-primary-600 text-white rounded-xl text-[10px] font-black uppercase tracking-widest shadow-xl shadow-primary-200 hover:bg-primary-700 active:scale-95 transition-all gap-2"
          >
            <i class="fas fa-plus text-xs"></i>
            <span>Add Category</span>
          </a>
        </div>
      </template>
    </div>
  </div>
</div>

<script src="/js/pages/categories.js"></script>