<div x-data="categoriesData" x-init="init()">
    <!-- Page Header -->
    <div class="mb-6 animate__animated animate__fadeInDown">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    <i class="fas fa-tags text-primary-500"></i>
                    Categories
                </h1>
                <p class="text-gray-600">Manage product categories and specifications</p>
            </div>
            <button @click="openAddModal()"
                class="bg-primary-500 hover:bg-primary-600 text-white px-6 py-3 rounded-xl font-medium shadow-lg hover:shadow-xl transition-all flex items-center justify-center space-x-2">
                <i class="fas fa-plus"></i>
                <span>Add Category</span>
            </button>
        </div>
    </div>

    <!-- Loading State -->
    <div x-show="loading" class="text-center py-12">
        <i class="fas fa-spinner fa-spin text-4xl text-primary-500 mb-4"></i>
        <p class="text-gray-600">Loading categories...</p>
    </div>

    <!-- Categories Grid -->
    <div x-show="!loading"
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 animate__animated animate__fadeInUp">
        <template x-for="(category, index) in categories" :key="category._id">
            <div class="bg-white/80 backdrop-blur-md rounded-2xl shadow-lg hover:shadow-xl transition-all p-6 group"
                :style="`animation-delay: ${index * 0.1}s`">
                <div class="flex items-start justify-between mb-4">
                    <div
                        class="w-12 h-12 bg-gradient-to-br from-primary-100 to-primary-200 rounded-xl flex items-center justify-center text-primary-600 text-xl font-bold">
                        <span x-text="category.name.charAt(0)"></span>
                    </div>
                    <div class="flex space-x-2 opacity-0 group-hover:opacity-100 transition-opacity">
                        <button @click="editCategory(category)"
                            class="text-blue-600 hover:text-blue-700 p-2 bg-blue-50 rounded-lg">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button @click="deleteCategory(category._id)"
                            class="text-red-600 hover:text-red-700 p-2 bg-red-50 rounded-lg">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>

                <h3 class="text-xl font-bold text-gray-800 mb-2" x-text="category.name"></h3>
                <p class="text-gray-600 text-sm mb-4 line-clamp-2" x-text="category.description || 'No description'">
                </p>

                <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                    <span class="text-sm text-gray-500">
                        <i class="fas fa-box mr-1"></i>
                        <span x-text="category.productCount || 0"></span> Products
                    </span>
                    <span class="text-sm text-gray-500">
                        <i class="fas fa-list mr-1"></i>
                        <span x-text="category.specificationsTemplate?.length || 0"></span> Specs
                    </span>
                </div>
            </div>
        </template>

        <!-- Empty State -->
        <template x-if="categories.length === 0">
            <div class="col-span-full text-center py-12 bg-white/80 backdrop-blur-md rounded-2xl shadow-lg">
                <i class="fas fa-tags text-6xl text-gray-300 mb-4"></i>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">No Categories Found</h3>
                <p class="text-gray-600 mb-6">Create your first category to get started</p>
                <button @click="openAddModal()"
                    class="bg-primary-500 text-white px-6 py-3 rounded-xl font-medium inline-flex items-center space-x-2">
                    <i class="fas fa-plus"></i>
                    <span>Add Category</span>
                </button>
            </div>
        </template>
    </div>

    <!-- Add/Edit Modal -->
    <div x-show="showModal" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100" x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0"
        class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4"
        @click.self="closeModal()" style="display: none;">

        <div x-show="showModal" x-transition:enter="transition ease-out duration-300 transform"
            x-transition:enter-start="opacity-0 scale-95" x-transition:enter-end="opacity-100 scale-100"
            x-transition:leave="transition ease-in duration-200 transform"
            x-transition:leave-start="opacity-100 scale-100" x-transition:leave-end="opacity-0 scale-95"
            class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">

            <div
                class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between z-10">
                <h2 class="text-2xl font-bold text-gray-800">
                    <span x-text="editMode ? 'Edit Category' : 'New Category'"></span>
                </h2>
                <button @click="closeModal()" class="text-gray-500 hover:text-gray-700 text-2xl">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form @submit.prevent="saveCategory()" class="p-6 space-y-6">
                <!-- Basic Info -->
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Category Name <span
                                class="text-red-500">*</span></label>
                        <input type="text" x-model="formData.name" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                        <textarea x-model="formData.description" rows="2"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all"></textarea>
                    </div>
                </div>

                <!-- Specifications Template Builder -->
                <div>
                    <div class="flex items-center justify-between mb-4">
                        <label class="block text-sm font-medium text-gray-700">Specifications Template</label>
                        <button @click.prevent="addSpecField()" type="button"
                            class="text-sm text-primary-600 hover:text-primary-700 font-medium flex items-center">
                            <i class="fas fa-plus mr-1"></i> Add Field
                        </button>
                    </div>

                    <div class="space-y-3 bg-gray-50 rounded-xl p-4">
                        <template x-for="(field, index) in formData.specificationsTemplate" :key="index">
                            <div
                                class="bg-white p-3 rounded-lg shadow-sm border border-gray-200 flex flex-col md:flex-row gap-3">
                                <div class="flex-1">
                                    <input type="text" x-model="field.fieldName" placeholder="Field Name (e.g. RAM)"
                                        class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-primary-500 outline-none">
                                </div>
                                <div class="w-full md:w-32">
                                    <select x-model="field.fieldType"
                                        class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-primary-500 outline-none">
                                        <option value="text">Text</option>
                                        <option value="number">Number</option>
                                        <option value="select">Select</option>
                                        <option value="textarea">Textarea</option>
                                    </select>
                                </div>
                                <div class="flex items-center space-x-2">
                                    <label class="flex items-center space-x-1 cursor-pointer">
                                        <input type="checkbox" x-model="field.required"
                                            class="rounded text-primary-500 focus:ring-primary-500">
                                        <span class="text-xs text-gray-600">Req.</span>
                                    </label>
                                    <button @click.prevent="removeSpecField(index)" type="button"
                                        class="text-red-500 hover:text-red-700 p-2">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>

                                <!-- Options for Select Type -->
                                <div x-show="field.fieldType === 'select'" class="w-full md:w-full mt-2 md:mt-0">
                                    <input type="text" x-model="field.optionsInput"
                                        placeholder="Options (comma separated)"
                                        class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-primary-500 outline-none">
                                </div>
                            </div>
                        </template>
                        <template x-if="formData.specificationsTemplate.length === 0">
                            <p class="text-center text-gray-500 text-sm py-2">No specification fields defined</p>
                        </template>
                    </div>
                </div>

                <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-200">
                    <button @click.prevent="closeModal()" type="button"
                        class="px-6 py-2 border-2 border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 font-medium transition-all">
                        Cancel
                    </button>
                    <button type="submit" :disabled="saving"
                        class="px-6 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 font-medium transition-all disabled:opacity-50 disabled:cursor-not-allowed">
                        <i :class="saving ? 'fas fa-spinner fa-spin' : 'fas fa-save'" class="mr-2"></i>
                        <span x-text="saving ? 'Saving...' : (editMode ? 'Update' : 'Save')"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/pages/categories.js"></script>