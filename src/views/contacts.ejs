<div x-data="contactsData" x-init="init()">
    <!-- Page Header -->
    <div class="mb-6 animate__animated animate__fadeInDown">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    <i class="fas fa-address-book text-primary-500"></i>
                    Contacts
                </h1>
                <p class="text-gray-600">Manage vendors, suppliers, and customers</p>
            </div>
            <button @click="openAddModal()"
                class="bg-gradient-to-r from-primary-500 to-emerald-600 hover:from-primary-600 hover:to-emerald-700 text-white px-6 py-3 rounded-xl font-medium shadow-lg hover:shadow-xl transition-all flex items-center justify-center space-x-2">
                <i class="fas fa-plus"></i>
                <span>Add Contact</span>
            </button>
        </div>
    </div>

    <!-- Filters & Search -->
    <div class="bg-white/80 backdrop-blur-md rounded-2xl p-4 md:p-6 shadow-lg mb-6 animate__animated animate__fadeInUp">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <!-- Search -->
            <div class="md:col-span-2">
                <div class="relative">
                    <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    <input type="text" x-model="filters.search" @input.debounce.300ms="loadContacts()"
                        placeholder="Search contacts..."
                        class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all">
                </div>
            </div>

            <!-- Type Filter -->
            <div>
                <select x-model="filters.contactType" @change="loadContacts()"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all">
                    <option value="All">All Types</option>
                    <option value="Customer">Customer</option>
                    <option value="Vendor">Vendor</option>
                    <option value="Supplier">Supplier</option>
                    <option value="Custom">Custom</option>
                </select>
            </div>

            <!-- Refresh Button -->
            <div>
                <button @click="loadContacts()"
                    class="w-full px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all font-medium flex items-center justify-center space-x-2">
                    <i class="fas fa-sync-alt" :class="{'fa-spin': loading}"></i>
                    <span>Refresh</span>
                </button>
            </div>

            <!-- View Toggle -->
            <div class="flex bg-gray-100 rounded-lg p-1">
                <button @click="viewMode = 'list'"
                    :class="{'bg-white shadow text-primary-600': viewMode === 'list', 'text-gray-500 hover:text-gray-700': viewMode !== 'list'}"
                    class="flex-1 px-4 py-2 rounded-md transition-all flex items-center justify-center">
                    <i class="fas fa-list"></i>
                </button>
                <button @click="viewMode = 'grid'"
                    :class="{'bg-white shadow text-primary-600': viewMode === 'grid', 'text-gray-500 hover:text-gray-700': viewMode !== 'grid'}"
                    class="flex-1 px-4 py-2 rounded-md transition-all flex items-center justify-center">
                    <i class="fas fa-th-large"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Loading State -->
    <div x-show="loading" class="text-center py-12">
        <i class="fas fa-spinner fa-spin text-4xl text-primary-500 mb-4"></i>
        <p class="text-gray-600">Loading contacts...</p>
    </div>

    <!-- Contacts List View -->
    <div x-show="!loading && viewMode === 'list'"
        class="bg-white/80 backdrop-blur-md rounded-2xl shadow-lg overflow-hidden animate__animated animate__fadeInUp">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Phone</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Company</th>
                        <th class="px-6 py-3 text-right text-xs font-semibold text-gray-600 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    <template x-for="contact in contacts" :key="contact._id">
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4">
                                <div class="flex items-center">
                                    <div
                                        class="w-8 h-8 rounded-full bg-primary-100 text-primary-600 flex items-center justify-center font-bold mr-3">
                                        <span x-text="contact.name.charAt(0)"></span>
                                    </div>
                                    <span class="font-medium text-gray-800" x-text="contact.name"></span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="px-3 py-1 rounded-full text-xs font-medium" :class="{
                                        'bg-blue-100 text-blue-700': contact.contactType === 'Customer',
                                        'bg-purple-100 text-purple-700': contact.contactType === 'Vendor',
                                        'bg-orange-100 text-orange-700': contact.contactType === 'Supplier',
                                        'bg-gray-100 text-gray-700': contact.contactType === 'Custom'
                                    }" x-text="contact.contactType">
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-gray-600" x-text="contact.phone"></span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-gray-600" x-text="contact.companyName || '-'"></span>
                            </td>
                            <td class="px-6 py-4 text-right space-x-2">
                                <button @click="editContact(contact)" class="text-blue-600 hover:text-blue-700"
                                    title="Edit">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button @click="deleteContact(contact._id)" class="text-red-600 hover:text-red-700"
                                    title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    </template>
                    <template x-if="contacts.length === 0">
                        <tr>
                            <td colspan="5" class="px-6 py-12 text-center text-gray-500">
                                <i class="fas fa-address-book text-4xl mb-3 text-gray-300"></i>
                                <p>No contacts found</p>
                            </td>
                        </tr>
                    </template>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between" x-show="pagination.total > 0">
            <span class="text-sm text-gray-600">
                Showing <span class="font-medium" x-text="(pagination.page - 1) * pagination.limit + 1"></span>
                to <span class="font-medium"
                    x-text="Math.min(pagination.page * pagination.limit, pagination.total)"></span>
                of <span class="font-medium" x-text="pagination.total"></span> results
            </span>
            <div class="flex space-x-2">
                <button @click="changePage(pagination.page - 1)" :disabled="pagination.page === 1"
                    class="px-3 py-1 border border-gray-300 rounded-md text-sm disabled:opacity-50 disabled:cursor-not-allowed hover:bg-gray-50">
                    Previous
                </button>
                <button @click="changePage(pagination.page + 1)"
                    :disabled="pagination.page * pagination.limit >= pagination.total"
                    class="px-3 py-1 border border-gray-300 rounded-md text-sm disabled:opacity-50 disabled:cursor-not-allowed hover:bg-gray-50">
                    Next
                </button>
            </div>
        </div>
    </div>

    <!-- Contacts Grid View -->
    <div x-show="!loading && viewMode === 'grid'"
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 animate__animated animate__fadeInUp">
        <template x-for="contact in contacts" :key="contact._id">
            <div
                class="bg-white/80 backdrop-blur-md rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all border border-gray-100 group">
                <div class="flex justify-between items-start mb-4">
                    <div class="flex items-center">
                        <div
                            class="w-10 h-10 rounded-full bg-primary-100 text-primary-600 flex items-center justify-center font-bold text-lg mr-3">
                            <span x-text="contact.name.charAt(0)"></span>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-800" x-text="contact.name"></h3>
                            <span class="px-2 py-0.5 rounded-full text-xs font-medium" :class="{
                                    'bg-blue-100 text-blue-700': contact.contactType === 'Customer',
                                    'bg-purple-100 text-purple-700': contact.contactType === 'Vendor',
                                    'bg-orange-100 text-orange-700': contact.contactType === 'Supplier',
                                    'bg-gray-100 text-gray-700': contact.contactType === 'Custom'
                                }" x-text="contact.contactType">
                            </span>
                        </div>
                    </div>
                    <div class="relative" x-data="{ open: false }">
                        <button @click="open = !open" @click.outside="open = false"
                            class="p-2 text-gray-500 hover:bg-gray-100 rounded-lg transition-colors">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <div x-show="open"
                            class="absolute right-0 top-full mt-1 w-32 bg-white rounded-lg shadow-xl z-20 border border-gray-100"
                            style="display: none;">
                            <div class="py-1">
                                <button @click="editContact(contact); open = false"
                                    class="block w-full text-left px-4 py-2 text-sm text-blue-600 hover:bg-gray-100">
                                    <i class="fas fa-edit mr-2"></i> Edit
                                </button>
                                <button @click="deleteContact(contact._id); open = false"
                                    class="block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-gray-100">
                                    <i class="fas fa-trash mr-2"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="space-y-2 mb-4">
                    <div class="flex items-center text-sm text-gray-600">
                        <i class="fas fa-phone w-5 text-gray-400"></i>
                        <span x-text="contact.phone"></span>
                    </div>
                    <div class="flex items-center text-sm text-gray-600" x-show="contact.companyName">
                        <i class="fas fa-building w-5 text-gray-400"></i>
                        <span x-text="contact.companyName"></span>
                    </div>
                    <div class="flex items-start text-sm text-gray-600" x-show="contact.address">
                        <i class="fas fa-map-marker-alt w-5 text-gray-400 mt-1"></i>
                        <span x-text="contact.address" class="line-clamp-2"></span>
                    </div>
                </div>
            </div>
        </template>

        <template x-if="contacts.length === 0">
            <div
                class="col-span-full text-center py-12 text-gray-500 bg-white/80 backdrop-blur-md rounded-2xl shadow-lg">
                <i class="fas fa-address-book text-4xl mb-3 text-gray-300"></i>
                <p>No contacts found</p>
            </div>
        </template>
    </div>

    <!-- Add/Edit Modal -->
    <div x-show="showModal" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100" x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0"
        class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4"
        @click.self="closeModal()" style="display: none;">

        <div x-show="showModal" x-transition:enter="transition ease-out duration-300 transform"
            x-transition:enter-start="opacity-0 scale-95" x-transition:enter-end="opacity-100 scale-100"
            x-transition:leave="transition ease-in duration-200 transform"
            x-transition:leave-start="opacity-100 scale-100" x-transition:leave-end="opacity-0 scale-95"
            class="bg-white rounded-2xl shadow-2xl max-w-lg w-full max-h-[90vh] overflow-y-auto">

            <div
                class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between z-10">
                <h2 class="text-2xl font-bold text-gray-800">
                    <span x-text="editMode ? 'Edit Contact' : 'New Contact'"></span>
                </h2>
                <button @click="closeModal()" class="text-gray-500 hover:text-gray-700 text-2xl">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form @submit.prevent="saveContact()" class="p-6 space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Name <span
                            class="text-red-500">*</span></label>
                    <input type="text" x-model="formData.name" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Phone <span
                            class="text-red-500">*</span></label>
                    <input type="tel" x-model="formData.phone" required maxlength="10"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Type <span
                            class="text-red-500">*</span></label>
                    <select x-model="formData.contactType" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all">
                        <option value="Customer">Customer</option>
                        <option value="Vendor">Vendor</option>
                        <option value="Supplier">Supplier</option>
                        <option value="Custom">Custom</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Company Name</label>
                    <input type="text" x-model="formData.companyName"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Address</label>
                    <textarea x-model="formData.address" rows="2"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all"></textarea>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Notes</label>
                    <textarea x-model="formData.notes" rows="2"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all"></textarea>
                </div>

                <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-200">
                    <button @click.prevent="closeModal()" type="button"
                        class="px-6 py-2 border-2 border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 font-medium transition-all">
                        Cancel
                    </button>
                    <button type="submit" :disabled="saving"
                        class="px-6 py-2 bg-gradient-to-r from-primary-500 to-emerald-600 text-white rounded-lg hover:from-primary-600 hover:to-emerald-700 font-medium transition-all disabled:opacity-50 disabled:cursor-not-allowed">
                        <i :class="saving ? 'fas fa-spinner fa-spin' : 'fas fa-save'" class="mr-2"></i>
                        <span x-text="saving ? 'Saving...' : (editMode ? 'Update' : 'Save')"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/pages/contacts.js"></script>