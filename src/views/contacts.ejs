<div x-data="contactsData" x-init="init()" class="min-h-screen bg-slate-50 pb-20">
    <!-- SHARP MINIMAL HEADER -->
    <div class="bg-white border-b border-slate-200 mb-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between py-6 gap-4">
                <div>
                    <h1 class="text-2xl font-bold text-slate-900 tracking-tight uppercase">Contacts Gateway</h1>
                    <p class="text-[9px] font-black text-slate-400 mt-1 uppercase tracking-widest">
                        <span x-text="pagination.total"></span> Directory Records
                    </p>
                </div>

                <button @click="openAddModal()"
                    class="inline-flex items-center px-6 py-2 bg-primary-600 text-white text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-primary-700 shadow-xl shadow-primary-200 transition-all active:scale-95 gap-2">
                    <i class="fas fa-plus text-xs"></i>
                    <span>New Contact</span>
                </button>
            </div>

            <!-- Filters -->
            <div class="pb-6 flex flex-col md:flex-row items-center gap-4">
                <div class="relative flex-1 w-full">
                    <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 text-sm"></i>
                    <input type="text" x-model="filters.search" @input.debounce.300ms="loadContacts()"
                        placeholder="Search by name, phone or company..."
                        class="w-full pl-12 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary-200 focus:border-primary-300 outline-none transition-all text-sm">
                </div>

                <div class="flex items-center gap-3 bg-white border border-slate-200 p-1.5 rounded-lg">
                    <template x-for="type in ['All', 'Customer', 'Vendor', 'Supplier']" :key="type">
                        <button @click="filters.contactType = type; loadContacts()"
                            :class="filters.contactType === type ? 'bg-slate-900 text-white shadow-sm' : 'text-slate-400 hover:text-slate-600'"
                            class="px-4 py-2 rounded-lg text-[9px] font-black uppercase tracking-widest transition-all"
                            x-text="type">
                        </button>
                    </template>
                </div>

                <div class="flex items-center gap-2 bg-white border border-slate-200 p-1.5 rounded-lg">
                    <button @click="viewMode = 'grid'"
                        :class="viewMode === 'grid' ? 'bg-primary-600 text-white shadow-sm' : 'text-slate-400'"
                        class="w-10 h-10 rounded-lg flex items-center justify-center transition-all">
                        <i class="fas fa-th-large text-sm"></i>
                    </button>
                    <button @click="viewMode = 'list'"
                        :class="viewMode === 'list' ? 'bg-primary-600 text-white shadow-sm' : 'text-slate-400'"
                        class="w-10 h-10 rounded-lg flex items-center justify-center transition-all">
                        <i class="fas fa-list text-sm"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Loading -->
        <div x-show="loading" class="flex flex-col items-center justify-center py-32">
            <div class="relative w-16 h-16 mb-6">
                <div class="absolute inset-0 border-4 border-slate-100 rounded-lg"></div>
                <div class="absolute inset-0 border-4 border-primary-600 rounded-lg border-t-transparent animate-spin"></div>
            </div>
            <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Loading Contacts</p>
        </div>

        <!-- Empty State -->
        <div x-show="!loading && contacts.length === 0" class="flex flex-col items-center justify-center py-40">
            <div class="w-24 h-24 bg-white rounded-xl border border-slate-200 flex items-center justify-center mb-8 shadow-sm">
                <i class="fas fa-user-friends text-slate-200 text-3xl"></i>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-2 uppercase tracking-tight">No Contacts Found</h3>
            <p class="text-slate-400 font-medium mb-10">Try adjusting your search or filters</p>
            <button @click="openAddModal()"
                class="px-8 py-4 bg-slate-900 text-white rounded-xl font-bold transition-all active:scale-95">
                Register First Contact
            </button>
        </div>

        <!-- Contacts Display -->
        <div x-show="!loading && contacts.length > 0">
            <!-- Grid View -->
            <div x-show="viewMode === 'grid'" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                <template x-for="contact in contacts" :key="contact._id">
                    <div class="group bg-white border border-slate-200 rounded-[24px] p-6 shadow-sm hover:shadow-lg transition-all">
                        <div class="flex items-start justify-between mb-6">
                            <div class="w-14 h-14 rounded-xl bg-slate-50 border border-slate-200 flex items-center justify-center text-xl font-bold text-slate-400 group-hover:bg-primary-600 group-hover:text-white group-hover:border-primary-600 transition-all">
                                <span x-text="contact.name.charAt(0)"></span>
                            </div>
                            <div class="flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                <button @click="viewContact(contact)"
                                    class="w-9 h-9 rounded-lg bg-slate-50 hover:bg-slate-900 text-slate-400 hover:text-white transition-all">
                                    <i class="fas fa-eye text-xs"></i>
                                </button>
                                <button @click="editContact(contact)"
                                    class="w-9 h-9 rounded-lg bg-slate-50 hover:bg-primary-600 text-slate-400 hover:text-white transition-all">
                                    <i class="fas fa-edit text-xs"></i>
                                </button>
                                <button @click="deleteContact(contact._id)"
                                    class="w-9 h-9 rounded-lg bg-slate-50 hover:bg-rose-600 text-slate-400 hover:text-white transition-all">
                                    <i class="fas fa-trash text-xs"></i>
                                </button>
                            </div>
                        </div>

                        <div class="mb-6">
                            <div class="flex items-center gap-2 mb-2">
                                <h3 class="text-lg font-bold text-slate-900 tracking-tight uppercase" x-text="contact.name"></h3>
                                <div class="w-1.5 h-1.5 rounded-full" :class="{
                                    'bg-primary-500': contact.contactType === 'Customer',
                                    'bg-purple-500': contact.contactType === 'Vendor',
                                    'bg-amber-500': contact.contactType === 'Supplier',
                                    'bg-slate-300': contact.contactType === 'Custom'
                                }"></div>
                            </div>
                            <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest"
                                x-text="contact.companyName || 'Private Individual'"></p>
                        </div>

                        <div class="space-y-3 pt-4 border-t border-slate-100">
                            <div class="flex items-center justify-between">
                                <span class="text-[9px] font-black text-slate-300 uppercase">Phone</span>
                                <span class="text-xs font-bold text-slate-900" x-text="contact.phone"></span>
                            </div>
                            <div class="flex items-center justify-between" x-show="contact.address">
                                <span class="text-[9px] font-black text-slate-300 uppercase">Location</span>
                                <span class="text-xs font-bold text-slate-900 text-right truncate max-w-[150px]"
                                    x-text="contact.address"></span>
                            </div>
                        </div>
                    </div>
                </template>
            </div>

            <!-- List View -->
            <div x-show="viewMode === 'list'" class="bg-white border border-slate-200 rounded-[24px] overflow-hidden shadow-sm">
                <table class="w-full text-left">
                    <thead>
                        <tr class="bg-slate-50 border-b border-slate-100">
                            <th class="px-6 py-4 text-[9px] font-black text-slate-400 uppercase tracking-widest">Identity</th>
                            <th class="px-6 py-4 text-[9px] font-black text-slate-400 uppercase tracking-widest">Category</th>
                            <th class="px-6 py-4 text-[9px] font-black text-slate-400 uppercase tracking-widest">Phone</th>
                            <th class="px-6 py-4 text-[9px] font-black text-slate-400 uppercase tracking-widest text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        <template x-for="contact in contacts" :key="contact._id">
                            <tr class="group hover:bg-slate-50 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-4">
                                        <div class="w-10 h-10 rounded-lg bg-slate-100 flex items-center justify-center font-bold text-slate-400 group-hover:bg-white group-hover:shadow-sm"
                                            x-text="contact.name.charAt(0)"></div>
                                        <div>
                                            <p class="text-sm font-bold text-slate-900" x-text="contact.name"></p>
                                            <p class="text-[9px] font-black text-slate-400 uppercase"
                                                x-text="contact.companyName || 'Private'"></p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="px-3 py-1 rounded-lg text-[9px] font-black uppercase tracking-widest"
                                        :class="{
                                        'bg-primary-50 text-primary-600': contact.contactType === 'Customer',
                                        'bg-purple-50 text-purple-600': contact.contactType === 'Vendor',
                                        'bg-amber-50 text-amber-600': contact.contactType === 'Supplier',
                                        'bg-slate-100 text-slate-400': contact.contactType === 'Custom'
                                    }" x-text="contact.contactType"></span>
                                </td>
                                <td class="px-6 py-4 text-sm font-bold text-slate-900" x-text="contact.phone"></td>
                                <td class="px-6 py-4 text-right">
                                    <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-all">
                                        <button @click="viewContact(contact)"
                                            class="w-8 h-8 rounded-lg bg-white border border-slate-200 flex items-center justify-center text-slate-400 hover:text-slate-900 hover:border-slate-300 transition-all">
                                            <i class="fas fa-eye text-[10px]"></i>
                                        </button>
                                        <button @click="editContact(contact)"
                                            class="w-8 h-8 rounded-lg bg-white border border-slate-200 flex items-center justify-center text-slate-400 hover:text-primary-600 hover:border-primary-200 transition-all">
                                            <i class="fas fa-edit text-[10px]"></i>
                                        </button>
                                        <button @click="deleteContact(contact._id)"
                                            class="w-8 h-8 rounded-lg bg-white border border-slate-200 flex items-center justify-center text-slate-400 hover:text-rose-600 hover:border-rose-200 transition-all">
                                            <i class="fas fa-trash text-[10px]"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        </template>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div x-show="pagination.total > 0" class="mt-8">
                <div class="flex flex-col md:flex-row items-center justify-between bg-white border border-slate-200 rounded-xl px-6 py-4 shadow-sm gap-4">
                    <div class="text-[9px] font-black text-slate-400 uppercase tracking-widest">
                        Showing <span class="text-slate-900 font-bold"
                            x-text="(pagination.page - 1) * pagination.limit + 1"></span>
                        to <span class="text-slate-900 font-bold"
                            x-text="Math.min(pagination.page * pagination.limit, pagination.total)"></span>
                        of <span class="text-slate-900 font-bold" x-text="pagination.total"></span> records
                    </div>
                    <div class="flex items-center gap-3">
                        <button @click="changePage(pagination.page - 1)" :disabled="pagination.page === 1"
                            class="px-5 py-2 bg-slate-100 text-[9px] font-black uppercase tracking-widest text-slate-600 rounded-lg hover:bg-slate-200 disabled:opacity-30 disabled:cursor-not-allowed transition-all">
                            Previous
                        </button>
                        <button @click="changePage(pagination.page + 1)"
                            :disabled="pagination.page * pagination.limit >= pagination.total"
                            class="px-6 py-2 bg-slate-900 text-[9px] font-black uppercase tracking-widest text-white rounded-lg hover:bg-slate-800 disabled:opacity-30 disabled:cursor-not-allowed shadow-lg transition-all">
                            Next
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add/Edit Modal -->
    <div x-show="showModal" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100" x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0"
        class="fixed inset-0 bg-black/50 backdrop-blur-sm z-[70] flex items-center justify-center p-4"
        @click.self="closeModal()" style="display: none;">

        <div x-show="showModal" x-transition:enter="transition ease-out duration-200"
            x-transition:enter-start="opacity-0 translate-y-4 scale-95"
            x-transition:enter-end="opacity-100 translate-y-0 scale-100"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="opacity-100 scale-100" x-transition:leave-end="opacity-0 scale-95"
            class="bg-white rounded-[24px] shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-hidden flex flex-col">

            <div class="overflow-y-auto flex-1">
                <div class="p-6 md:p-8">
                    <div class="flex items-start justify-between mb-8 border-b border-slate-100 pb-6">
                        <div class="flex-1">
                            <h2 class="text-xl font-bold text-slate-900 tracking-tight uppercase"
                                x-text="editMode ? 'Edit Contact' : 'New Contact'"></h2>
                            <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest mt-1">Contact Details</p>
                        </div>

                        <button @click="closeModal()"
                            class="w-10 h-10 bg-slate-50 text-slate-400 hover:text-slate-900 rounded-lg transition-all">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>

                    <form @submit.prevent="saveContact()" class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div class="space-y-2">
                                <label class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Full Name</label>
                                <input type="text" x-model="formData.name" required placeholder="John Doe"
                                    class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary-200 focus:bg-white focus:border-primary-300 outline-none transition-all font-medium text-slate-900">
                            </div>

                            <div class="space-y-2">
                                <label class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Phone Number</label>
                                <input type="tel" x-model="formData.phone" required maxlength="10" placeholder="9876543210"
                                    class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary-200 focus:bg-white focus:border-primary-300 outline-none transition-all font-medium text-slate-900">
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div class="space-y-2">
                                <label class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Contact Type</label>
                                <select x-model="formData.contactType" required
                                    class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary-200 outline-none transition-all font-medium text-slate-900 cursor-pointer appearance-none">
                                    <option value="Customer">Customer</option>
                                    <option value="Vendor">Vendor</option>
                                    <option value="Supplier">Supplier</option>
                                    <option value="Custom">Custom</option>
                                </select>
                            </div>

                            <div class="space-y-2">
                                <label class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Company (Optional)</label>
                                <input type="text" x-model="formData.companyName" placeholder="Business Name"
                                    class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary-200 focus:bg-white focus:border-primary-300 outline-none transition-all font-medium text-slate-900">
                            </div>
                        </div>

                        <div class="space-y-2">
                            <label class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Address</label>
                            <textarea x-model="formData.address" rows="1" placeholder="City, State, Country"
                                class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary-200 focus:bg-white focus:border-primary-300 outline-none transition-all font-medium text-slate-900 resize-none"></textarea>
                        </div>

                        <div class="space-y-2">
                            <label class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Internal Notes</label>
                            <textarea x-model="formData.notes" rows="3" placeholder="Key details or history..."
                                class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary-200 focus:bg-white focus:border-primary-300 outline-none transition-all font-medium text-slate-900"></textarea>
                        </div>

                        <div class="flex items-center justify-end gap-3 pt-4">
                            <button @click.prevent="closeModal()" type="button"
                                class="px-6 py-3 bg-slate-100 text-slate-600 text-[9px] font-black uppercase tracking-widest rounded-xl hover:bg-slate-200 transition-all">
                                Cancel
                            </button>
                            <button type="submit" :disabled="saving"
                                class="px-8 py-3 bg-primary-600 text-white text-[9px] font-black uppercase tracking-widest rounded-xl hover:bg-primary-700 transition-all disabled:opacity-50 disabled:cursor-not-allowed shadow-xl shadow-primary-200 flex items-center gap-2">
                                <i :class="saving ? 'fas fa-spinner fa-spin' : 'fas fa-check'"></i>
                                <span x-text="saving ? 'Saving...' : (editMode ? 'Save Changes' : 'Create Contact')"></span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- View Modal -->
    <div x-show="showViewModal" x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-200" x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 bg-black/50 backdrop-blur-sm z-[70] flex items-center justify-center p-4"
        @click.self="closeViewModal()" style="display: none;">

        <div x-show="showViewModal" x-transition:enter="transition ease-out duration-200"
            x-transition:enter-start="opacity-0 translate-y-4 scale-95"
            x-transition:enter-end="opacity-100 translate-y-0 scale-100"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="opacity-100 scale-100" x-transition:leave-end="opacity-0 scale-95"
            class="bg-white rounded-[24px] shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-hidden flex flex-col">

            <!-- Header -->
            <div class="p-6 md:p-8 border-b border-slate-100 flex items-start justify-between bg-slate-50">
                <div class="flex items-center gap-6">
                    <div class="w-16 h-16 rounded-xl bg-white shadow-sm border border-slate-200 flex items-center justify-center text-2xl font-bold text-slate-900">
                        <span x-text="selectedContact?.name?.charAt(0)"></span>
                    </div>
                    <div>
                        <div class="flex items-center gap-3 mb-1">
                            <h2 class="text-2xl font-bold text-slate-900 tracking-tight uppercase" x-text="selectedContact?.name"></h2>
                            <span class="px-3 py-1 rounded-lg text-[9px] font-black uppercase tracking-widest" :class="{
                                    'bg-primary-50 text-primary-600': selectedContact?.contactType === 'Customer',
                                    'bg-purple-50 text-purple-600': selectedContact?.contactType === 'Vendor',
                                    'bg-amber-50 text-amber-600': selectedContact?.contactType === 'Supplier',
                                    'bg-slate-100 text-slate-400': selectedContact?.contactType === 'Custom'
                                }" x-text="selectedContact?.contactType"></span>
                        </div>
                        <p class="text-sm font-medium text-slate-400"
                            x-text="selectedContact?.companyName || 'Private Individual'"></p>
                    </div>
                </div>
                <button @click="closeViewModal()"
                    class="w-10 h-10 bg-white border border-slate-200 text-slate-400 hover:text-slate-900 rounded-lg transition-all">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <!-- Content -->
            <div class="flex-1 overflow-y-auto p-6 md:p-8">
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <!-- Left: Details -->
                    <div class="lg:col-span-1 space-y-6">
                        <h3 class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Contact Info</h3>

                        <div class="space-y-4">
                            <div class="bg-slate-50 rounded-xl p-4 border border-slate-200">
                                <label class="block text-[9px] font-black text-slate-300 uppercase mb-1">Phone</label>
                                <p class="text-sm font-bold text-slate-900" x-text="selectedContact?.phone"></p>
                            </div>

                            <div class="bg-slate-50 rounded-xl p-4 border border-slate-200" x-show="selectedContact?.address">
                                <label class="block text-[9px] font-black text-slate-300 uppercase mb-1">Location</label>
                                <p class="text-sm font-bold text-slate-900 leading-relaxed" x-text="selectedContact?.address"></p>
                            </div>

                            <div class="bg-slate-50 rounded-xl p-4 border border-slate-200" x-show="selectedContact?.notes">
                                <label class="block text-[9px] font-black text-slate-300 uppercase mb-1">Notes</label>
                                <p class="text-sm font-medium text-slate-500 italic leading-relaxed" x-text="selectedContact?.notes"></p>
                            </div>
                        </div>
                    </div>

                    <!-- Right: Activity -->
                    <div class="lg:col-span-2 space-y-8">
                        <div class="space-y-6">
                            <div class="flex items-center justify-between">
                                <h3 class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Service History</h3>
                                <div class="flex items-center gap-2">
                                    <span class="text-xs font-bold text-slate-900" x-text="contactTickets.length"></span>
                                    <span class="text-[9px] font-black text-slate-400 uppercase">Tickets</span>
                                </div>
                            </div>

                            <div class="space-y-3">
                                <template x-for="ticket in contactTickets" :key="ticket._id">
                                    <div class="group bg-white border border-slate-200 rounded-xl p-5 flex items-center justify-between hover:border-primary-200 hover:shadow-lg transition-all">
                                        <div class="flex items-center gap-4">
                                            <div class="w-12 h-12 rounded-lg bg-slate-50 border border-slate-200 flex items-center justify-center text-slate-400 group-hover:bg-primary-600 group-hover:text-white group-hover:border-primary-600 transition-all">
                                                <i class="fas fa-ticket-alt"></i>
                                            </div>
                                            <div>
                                                <div class="flex items-center gap-2 mb-1">
                                                    <span class="text-sm font-bold text-slate-900" x-text="`#${ticket.ticketNumber}`"></span>
                                                    <span class="px-2 py-0.5 rounded-lg text-[8px] font-black uppercase tracking-widest" :class="{
                                                            'bg-amber-500 text-white': ticket.status === 'Pending',
                                                            'bg-blue-500 text-white': ticket.status === 'In Progress',
                                                            'bg-emerald-500 text-white': ticket.status === 'Completed',
                                                            'bg-slate-900 text-white': ticket.status === 'Delivered',
                                                            'bg-rose-500 text-white': ticket.status === 'Cancelled'
                                                        }" x-text="ticket.status"></span>
                                                </div>
                                                <p class="text-xs font-medium text-slate-400 truncate max-w-[200px]" x-text="ticket.deviceDetails"></p>
                                            </div>
                                        </div>
                                        <div class="flex items-center gap-6">
                                            <div class="text-right hidden sm:block">
                                                <p class="text-xs font-bold text-slate-900 mb-0.5"
                                                    x-text="`₹${Number(ticket.serviceCharge).toLocaleString('en-IN')}`"></p>
                                                <p class="text-[9px] font-black text-slate-300 uppercase" x-text="formatLedgerDate(ticket.createdAt)"></p>
                                            </div>
                                            <a :href="`/service-tickets/${ticket._id}`"
                                                class="w-10 h-10 rounded-lg bg-slate-50 flex items-center justify-center text-slate-300 hover:text-primary-600 hover:bg-primary-50 transition-all">
                                                <i class="fas fa-arrow-right text-[10px]"></i>
                                            </a>
                                        </div>
                                    </div>
                                </template>
                            </div>

                            <!-- Financial -->
                            <div class="mt-12 space-y-6">
                                <div class="flex items-center justify-between">
                                    <h3 class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Financial Ledger</h3>
                                </div>

                                <div class="space-y-4">
                                    <template x-for="acc in contactLedgers" :key="acc._id">
                                        <div class="bg-slate-900 rounded-xl p-6 text-white relative overflow-hidden group">
                                            <div class="absolute top-0 right-0 p-6 opacity-10 group-hover:scale-110 transition-transform">
                                                <i class="fas fa-wallet text-5xl"></i>
                                            </div>
                                            <div class="relative z-10 flex flex-col md:flex-row md:items-center justify-between gap-6">
                                                <div>
                                                    <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest mb-2" x-text="acc.accountName"></p>
                                                    <div class="flex items-baseline gap-2">
                                                        <span class="text-2xl font-black">₹<span x-text="formatLedgerNumber(acc.totalBalance)"></span></span>
                                                        <span class="text-[9px] font-black opacity-40 uppercase tracking-widest"
                                                            x-text="acc.accountType === 'Receivable' ? 'Net Receivable' : 'Net Payable'"></span>
                                                    </div>
                                                </div>
                                                <div class="flex gap-2">
                                                    <a href="/accounting"
                                                        class="px-5 py-2 bg-white/10 hover:bg-white/20 rounded-lg text-[9px] font-black uppercase tracking-widest transition-all">View Ledger</a>
                                                </div>
                                            </div>

                                            <!-- Transactions -->
                                            <div class="mt-6 pt-4 border-t border-white/5 space-y-2">
                                                <template x-for="tx in acc.recentTransactions" :key="tx._id">
                                                    <div class="flex items-center justify-between text-[11px]">
                                                        <div class="flex items-center gap-3">
                                                            <div class="w-1.5 h-1.5 rounded-full"
                                                                :class="tx.transactionType === 'Credit' ? 'bg-rose-500' : 'bg-emerald-500'"></div>
                                                            <span class="opacity-60" x-text="formatLedgerDate(tx.date)"></span>
                                                            <span class="font-bold truncate max-w-[150px]" x-text="tx.description"></span>
                                                        </div>
                                                        <span :class="tx.transactionType === 'Credit' ? 'text-rose-400' : 'text-emerald-400'"
                                                            class="font-black"
                                                            x-text="`${tx.transactionType === 'Credit' ? '+' : '-'} ₹${formatLedgerNumber(tx.amount)}`"></span>
                                                    </div>
                                                </template>
                                                <template x-if="acc.recentTransactions.length === 0">
                                                    <p class="text-[10px] italic opacity-40">No recent transactions</p>
                                                </template>
                                            </div>
                                        </div>
                                    </template>
                                    <template x-if="contactLedgers.length === 0">
                                        <div class="py-12 flex flex-col items-center justify-center bg-slate-50 rounded-xl border border-dashed border-slate-200">
                                            <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest">No Ledger Account Linked</p>
                                            <a href="/accounting" class="mt-4 text-[9px] font-black text-primary-600 uppercase hover:underline">Setup Ledger</a>
                                        </div>
                                    </template>
                                </div>
                            </div>

                            <!-- Empty State -->
                            <div x-show="contactTickets.length === 0"
                                class="py-12 flex flex-col items-center justify-center bg-slate-50 rounded-xl border border-dashed border-slate-200">
                                <div class="w-16 h-16 bg-white rounded-xl border border-slate-200 flex items-center justify-center mb-4 text-slate-200">
                                    <i class="fas fa-history text-2xl"></i>
                                </div>
                                <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">No Service History</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

