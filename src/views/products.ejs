<div x-data="productsData" x-init="init()" class="min-h-screen pb-12">
  <!-- SHARP MINIMAL GATEWAY HEADER -->
  <div class="bg-white border-b border-slate-200 mb-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Top Section: Title & Actions -->
      <div class="flex flex-col md:flex-row md:items-center md:justify-between py-6 gap-4">
        <div>
          <h1 class="text-2xl font-bold text-slate-900 tracking-tight uppercase">
            Inventory Gateway
          </h1>
          <p class="text-[9px] font-black text-slate-400 mt-1 uppercase tracking-widest">
            Stock Management & Product Catalog
          </p>
        </div>

        <div class="flex flex-wrap items-center gap-3">
          <!-- Export Dropdown -->
          <div
            class="relative"
            x-data="{ open: false }"
            @click.away="open = false"
          >
            <button
              @click="open = !open"
              class="inline-flex items-center px-4 py-2 bg-slate-50 text-slate-700 text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-slate-100 transition-all border border-slate-200"
            >
              <i class="fas fa-download mr-2 text-slate-400"></i>
              Export
              <i
                class="fas fa-chevron-down ml-2 text-[8px] text-slate-400 transition-transform duration-200"
                :class="open ? 'rotate-180' : ''"
              ></i>
            </button>
            <div
              x-show="open"
              x-transition:enter="transition ease-out duration-200"
              x-transition:enter-start="opacity-0 scale-95 translate-y-2"
              x-transition:enter-end="opacity-100 scale-100 translate-y-0"
              class="absolute right-0 mt-2 w-56 bg-white rounded-xl shadow-xl border border-slate-200 z-50 overflow-hidden py-1"
            >
              <button
                @click="exportProducts(false); open = false"
                class="w-full text-left px-4 py-3 text-[10px] font-bold text-slate-700 hover:bg-slate-50 flex items-center transition-colors uppercase tracking-wider"
              >
                <i class="fas fa-file-csv mr-3 text-slate-300"></i>
                Full Database (CSV)
              </button>
              <button
                @click="exportToExcel(); open = false"
                class="w-full text-left px-4 py-3 text-[10px] font-bold text-slate-700 hover:bg-slate-50 flex items-center transition-colors uppercase tracking-wider"
              >
                <i class="fas fa-file-excel mr-3 text-emerald-500"></i>
                Themed Excel
              </button>
              <button
                @click="exportToExcel(true); open = false"
                class="w-full text-left px-4 py-3 text-[10px] font-bold text-primary-600 hover:bg-primary-50 flex items-center transition-colors border-t border-slate-50 uppercase tracking-wider"
              >
                <i class="fas fa-filter mr-3 text-primary-500"></i>
                Filter Applied
              </button>

              <template x-if="filters.category">
                <button
                  @click="exportProducts(true); open = false"
                  class="w-full text-left px-4 py-3 text-[10px] font-bold text-primary-600 hover:bg-primary-50 flex items-center transition-colors border-t border-slate-50 uppercase tracking-wider"
                >
                  <i class="fas fa-file-export mr-3 text-primary-300"></i>
                  Category Template
                </button>
              </template>
            </div>
          </div>

          <!-- Import -->
          <button
            @click="triggerImport()"
            class="inline-flex items-center px-4 py-2 bg-slate-50 text-slate-700 text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-slate-100 transition-all border border-slate-200"
          >
            <i class="fas fa-upload mr-2 text-slate-400"></i>
            Import
          </button>
          <input
            type="file"
            x-ref="importFile"
            @change="importProducts($event)"
            class="hidden"
            accept=".csv"
          />

          <!-- Add Product -->
          <a
            href="/products/add"
            class="inline-flex items-center px-6 py-2 bg-primary-600 text-white text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-primary-700 shadow-xl shadow-primary-200 transition-all active:scale-95"
          >
            <i class="fas fa-plus mr-2"></i>
            New Product
          </a>
        </div>
      </div>

      <!-- STOCK STATUS BAR (Horizontal) -->
      <div class="pb-6">
        <div class="bg-slate-50 border border-slate-200 rounded-[24px] p-6">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <!-- Total Items -->
            <div class="space-y-2">
              <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest">
                Total Items
              </p>
              <div class="flex items-baseline gap-2">
                <span class="text-2xl font-bold text-slate-900" x-text="stockSummary.totalItems"></span>
                <span class="text-[10px] font-bold text-slate-400 uppercase">Units</span>
              </div>
            </div>

            <!-- Available -->
            <div class="space-y-2">
              <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest">
                Available
              </p>
              <div class="flex items-baseline gap-2">
                <span class="text-2xl font-bold text-emerald-600" x-text="stockSummary.available"></span>
                <span class="text-[10px] font-bold text-emerald-400 uppercase">Active</span>
              </div>
            </div>

            <!-- Sold -->
            <div class="space-y-2">
              <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest">
                Sold Out
              </p>
              <div class="flex items-baseline gap-2">
                <span class="text-2xl font-bold text-slate-400" x-text="stockSummary.sold"></span>
                <span class="text-[10px] font-bold text-slate-300 uppercase">Archived</span>
              </div>
            </div>

            <!-- Total Value -->
            <div class="space-y-2">
              <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest">
                Total Value
              </p>
              <div class="flex items-baseline gap-1">
                <span class="text-sm font-bold text-slate-400">₹</span>
                <span class="text-2xl font-bold text-slate-900" x-text="formatNumber(stockSummary.totalValue)"></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- SHARP MINIMAL FILTERS SECTION -->
    <div class="mb-10">
      <div
        class="bg-slate-50 border border-slate-200 rounded-[24px] p-6 md:p-8"
      >
        <div class="flex flex-col md:flex-row md:items-end gap-6">
          <!-- Main Search -->
          <div class="flex-1">
            <label
              class="block text-[9px] font-black text-slate-400 uppercase tracking-widest mb-3 ml-1"
              >Search Inventory</label
            >
            <div class="relative group">
              <i
                class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-slate-300 group-focus-within:text-primary-500 transition-colors"
              ></i>
              <input
                type="text"
                x-model="filters.search"
                @input.debounce.500ms="resetAndLoad()"
                placeholder="Find products by name, ID, or specs..."
                class="w-full pl-11 pr-4 py-3 bg-white border border-slate-200 rounded-xl focus:ring-4 focus:ring-primary-100 focus:border-primary-400 outline-none transition-all text-sm placeholder:text-slate-300"
              />
            </div>
          </div>

          <!-- Category -->
          <div class="w-full md:w-64">
            <label
              class="block text-[9px] font-black text-slate-400 uppercase tracking-widest mb-3 ml-1"
              >Category</label
            >
            <div class="relative group">
              <select
                x-model="filters.category"
                @change="resetAndLoad()"
                :class="filters.category ? 'border-primary-400 ring-2 ring-primary-50 bg-primary-50/10' : 'border-slate-200'"
                class="w-full px-4 py-3 bg-white border rounded-xl focus:ring-4 focus:ring-primary-100 focus:border-primary-400 outline-none transition-all text-sm appearance-none cursor-pointer font-bold"
              >
                <option value="">All Categories</option>
                <template x-for="category in categories" :key="category._id">
                  <option :value="category._id" x-text="category.name"></option>
                </template>
              </select>
              <div
                class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-400 pointer-events-none"
                x-show="!filters.category"
              >
                <i class="fas fa-chevron-down text-[8px]"></i>
              </div>
              <div
                class="absolute right-4 top-1/2 -translate-y-1/2 text-primary-500 pointer-events-none"
                x-show="filters.category"
              >
                <i class="fas fa-check-circle text-xs"></i>
              </div>
            </div>
          </div>

          <!-- Toggle Filters -->
          <button
            @click="showFilters = !showFilters"
            class="flex items-center justify-center px-5 py-3 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all relative"
            :class="showFilters ? 'bg-primary-50 text-primary-600 border border-primary-200' : 'bg-white text-slate-600 border border-slate-200 hover:bg-slate-50'"
          >
            <i class="fas fa-sliders-h mr-2"></i>
            Advanced
            <span
              x-show="activeFiltersCount > 0"
              class="absolute -top-1 -right-1 w-5 h-5 bg-primary-600 text-white text-[9px] font-bold rounded-full flex items-center justify-center border-2 border-white"
              x-text="activeFiltersCount"
            ></span>
            <i
              class="fas fa-chevron-down ml-2 text-[8px] transition-transform"
              :class="showFilters ? 'rotate-180' : ''"
            ></i>
          </button>
        </div>

        <!-- Collapsible Advanced Filters -->
        <div x-show="showFilters" x-collapse>
          <div class="mt-8 pt-8 border-t border-slate-200 space-y-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              <!-- Status Filter -->
              <div>
                <label
                  class="block text-[9px] font-black text-slate-400 uppercase tracking-widest mb-4 ml-1"
                  >Availability</label
                >
                <div
                  class="flex bg-white p-1 rounded-xl border border-slate-200 w-fit"
                >
                  <button
                    @click="setAvailabilityFilter(null)"
                    :class="filters.isSold === null ? 'bg-slate-900 text-white shadow-lg' : 'text-slate-500 hover:text-slate-800'"
                    class="px-5 py-2 rounded-lg text-[10px] font-black uppercase tracking-wider transition-all"
                  >
                    All
                  </button>
                  <button
                    @click="setAvailabilityFilter(false)"
                    :class="filters.isSold === false ? 'bg-emerald-600 text-white shadow-lg shadow-emerald-100' : 'text-slate-500 hover:text-slate-800'"
                    class="px-5 py-2 rounded-lg text-[10px] font-black uppercase tracking-wider transition-all"
                  >
                    Available
                  </button>
                  <button
                    @click="setAvailabilityFilter(true)"
                    :class="filters.isSold === true ? 'bg-slate-400 text-white shadow-lg' : 'text-slate-500 hover:text-slate-800'"
                    class="px-5 py-2 rounded-lg text-[10px] font-black uppercase tracking-wider transition-all"
                  >
                    Sold
                  </button>
                </div>
              </div>

              <!-- Price Inputs -->
              <div class="lg:col-span-2">
                <label
                  class="block text-[9px] font-black text-slate-400 uppercase tracking-widest mb-4 ml-1"
                  >Price Range</label
                >
                <div class="flex items-center gap-3">
                  <div class="relative flex-1 max-w-[200px]">
                    <span
                      class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 text-xs font-bold"
                      >₹</span
                    >
                    <input
                      type="number"
                      x-model="filters.minPrice"
                      placeholder="From"
                      @input.debounce.500ms="resetAndLoad()"
                      :class="filters.minPrice ? 'border-primary-400 bg-primary-50/10' : 'border-slate-200'"
                      class="w-full pl-8 pr-4 py-2.5 bg-white border rounded-xl focus:ring-4 focus:ring-primary-100 focus:border-primary-400 outline-none transition-all text-sm font-bold"
                    />
                  </div>
                  <div class="w-3 h-[1px] bg-slate-300"></div>
                  <div class="relative flex-1 max-w-[200px]">
                    <span
                      class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 text-xs font-bold"
                      >₹</span
                    >
                    <input
                      type="number"
                      x-model="filters.maxPrice"
                      placeholder="To"
                      @input.debounce.500ms="resetAndLoad()"
                      :class="filters.maxPrice ? 'border-primary-400 bg-primary-50/10' : 'border-slate-200'"
                      class="w-full pl-8 pr-4 py-2.5 bg-white border rounded-xl focus:ring-4 focus:ring-primary-100 focus:border-primary-400 outline-none transition-all text-sm font-bold"
                    />
                  </div>
                </div>
              </div>
            </div>

            <!-- Dynamic Spec Filters -->
            <div
              x-show="Object.keys(availableFilters).length > 0"
              class="space-y-4"
            >
              <label
                class="block text-[9px] font-black text-slate-400 uppercase tracking-widest mb-1 ml-1"
                >Specifications</label
              >
              <div class="flex flex-wrap gap-3">
                <template x-for="(values, key) in availableFilters" :key="key">
                  <div
                    class="relative"
                    x-data="{ open: false }"
                    @click.away="open = false"
                  >
                    <button
                      @click="open = !open"
                      :class="filters.specs[key]?.length > 0 ? 'border-primary-400 bg-primary-50/30 text-primary-600' : 'border-slate-200 text-slate-600'"
                      class="flex items-center px-4 py-2 bg-white border rounded-xl text-[10px] font-black uppercase tracking-wider transition-all group"
                    >
                      <span x-text="key" class="mr-2"></span>
                      <template x-if="filters.specs[key]?.length > 0">
                        <span
                          class="bg-primary-600 text-white text-[9px] px-1.5 py-0.5 rounded-full mr-2"
                          x-text="filters.specs[key].length"
                        ></span>
                      </template>
                      <i
                        class="fas fa-chevron-down text-[8px] transition-transform"
                        :class="open ? 'rotate-180' : ''"
                      ></i>
                    </button>
                    <div
                      x-show="open"
                      x-transition:enter="transition ease-out duration-100"
                      x-transition:enter-start="opacity-0 scale-95"
                      x-transition:enter-end="opacity-100 scale-100"
                      class="absolute left-0 mt-2 w-48 bg-white rounded-xl shadow-xl border border-slate-200 z-50 py-2 max-h-64 overflow-y-auto"
                    >
                      <template x-for="value in values" :key="value">
                        <label
                          class="flex items-center px-4 py-2.5 hover:bg-slate-50 cursor-pointer group"
                        >
                          <input
                            type="checkbox"
                            :checked="filters.specs[key]?.includes(value)"
                            @change="toggleFilter(key, value)"
                            class="rounded-md border-slate-300 text-primary-600 focus:ring-primary-500 mr-3"
                          />
                          <span
                            class="text-xs text-slate-600 group-hover:text-slate-900 font-bold"
                            x-text="value"
                          ></span>
                        </label>
                      </template>
                    </div>
                  </div>
                </template>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="flex items-center justify-between mb-6">
      <div class="text-[10px] font-black text-slate-500 uppercase tracking-widest">
        <span class="text-slate-900 text-sm font-bold" x-text="products.length"></span> Items
      </div>
      <div class="flex bg-slate-100 p-1 rounded-xl">
        <button
          @click="viewMode = 'grid'"
          :class="viewMode === 'grid' ? 'bg-white text-primary-600 shadow-sm' : 'text-slate-500 hover:text-slate-700'"
          class="p-2 px-3 rounded-lg transition-all text-[10px] font-black uppercase tracking-wider flex items-center gap-2"
        >
          <i class="fas fa-th-large text-[9px]"></i>
          Grid
        </button>
        <button
          @click="viewMode = 'list'"
          :class="viewMode === 'list' ? 'bg-white text-primary-600 shadow-sm' : 'text-slate-500 hover:text-slate-700'"
          class="p-2 px-3 rounded-lg transition-all text-[10px] font-black uppercase tracking-wider flex items-center gap-2"
        >
          <i class="fas fa-list text-[9px]"></i>
          List
        </button>
      </div>
    </div>

    <!-- SHARP MINIMAL LOADING STATE -->
    <div
      x-show="loading"
      class="flex flex-col items-center justify-center py-24"
    >
      <div
        class="w-12 h-12 border-4 border-primary-100 border-t-primary-500 rounded-full animate-spin mb-4"
      ></div>
      <p class="text-sm font-bold text-slate-400 uppercase tracking-wider">Loading Inventory...</p>
    </div>

    <!-- SHARP MINIMAL PRODUCT CARDS (Grid View) -->
    <div
      x-show="!loading && viewMode === 'grid'"
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
    >
      <template x-for="(product, index) in products" :key="product._id">
        <div
          class="bg-white rounded-[24px] border border-slate-200 shadow-sm hover:shadow-xl hover:shadow-slate-200/50 transition-all duration-300 overflow-hidden group flex flex-col h-full"
          :style="`animation: fadeInUp 0.5s ease-out forwards; animation-delay: ${index * 0.04}s`"
        >
          <div class="p-6 pb-4 flex-1">
            <div class="flex items-start justify-between mb-4">
              <span
                x-show="product.isSold"
                class="px-3 py-1 bg-slate-100 text-slate-500 text-[9px] font-black rounded-lg tracking-widest uppercase"
                >Sold</span
              >
              <span
                x-show="!product.isSold"
                class="px-3 py-1 bg-emerald-50 text-emerald-600 text-[9px] font-black rounded-lg tracking-widest uppercase"
                >Available</span
              >

              <span
                x-show="product.productID"
                class="text-[9px] font-mono text-slate-300 font-bold"
                x-text="product.productID"
              ></span>
            </div>

            <h3
              class="text-lg font-bold text-slate-900 mb-2 leading-tight group-hover:text-primary-600 transition-colors"
              x-text="product.name"
            ></h3>

            <div class="flex items-baseline gap-1 mb-4">
              <span class="text-slate-400 text-xs font-bold">₹</span>
              <span
                class="text-2xl font-bold text-slate-900 tracking-tight"
                x-text="Number(product.price).toLocaleString('en-IN')"
              ></span>
            </div>

            <div
              class="flex items-center gap-2 text-[10px] text-slate-500 mb-4 bg-slate-50 w-fit px-3 py-1.5 rounded-lg border border-slate-100"
            >
              <i class="fas fa-tag text-[8px] text-primary-400"></i>
              <span class="font-bold" x-text="product.category?.name || 'Uncategorized'"></span>
            </div>

            <div
              class="flex flex-wrap gap-1.5 opacity-60 group-hover:opacity-100 transition-opacity"
            >
              <template x-for="tag in product.tags?.slice(0, 3)" :key="tag">
                <span
                  class="px-2.5 py-1 bg-slate-100 text-slate-600 text-[9px] font-bold rounded-lg uppercase tracking-wider"
                  x-text="tag"
                ></span>
              </template>
            </div>
          </div>

          <div class="p-5 pt-0 mt-auto">
            <div class="flex items-center gap-2">
              <button
                @click="viewProduct(product)"
                class="flex-1 px-4 py-2.5 bg-slate-900 text-white text-[10px] font-black uppercase tracking-wider rounded-xl hover:bg-primary-600 transition-all active:scale-95"
              >
                View
              </button>

              <div class="flex gap-1">
                <a
                  :href="`/products/edit/${product._id}`"
                  class="p-2.5 bg-slate-50 text-slate-400 hover:text-primary-600 hover:bg-primary-50 rounded-xl transition-all"
                  title="Edit"
                >
                  <i class="fas fa-pencil-alt text-sm"></i>
                </a>
                <button
                  @click="showQROnly(product._id)"
                  class="p-2.5 bg-slate-50 text-slate-400 hover:text-primary-600 hover:bg-primary-50 rounded-xl transition-all"
                  title="QR Code"
                >
                  <i class="fas fa-qrcode text-sm"></i>
                </button>
                <button
                  x-show="!product.isSold"
                  @click="markAsSold(product._id)"
                  class="p-2.5 bg-slate-50 text-slate-400 hover:text-emerald-600 hover:bg-emerald-50 rounded-xl transition-all"
                  title="Mark as Sold"
                >
                  <i class="fas fa-check text-sm"></i>
                </button>
                <button
                  @click="deleteProduct(product._id)"
                  class="p-2.5 bg-slate-50 text-slate-400 hover:text-rose-600 hover:bg-rose-50 rounded-xl transition-all"
                  title="Delete"
                >
                  <i class="fas fa-trash-alt text-sm"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      </template>
    </div>

    <!-- Products List View -->
    <div
      x-show="!loading && viewMode === 'list'"
      class="bg-white rounded-[32px] border border-gray-100 shadow-sm overflow-hidden"
    >
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="bg-gray-50/50">
              <th
                class="px-8 py-5 text-left text-[11px] font-bold text-gray-400 uppercase tracking-widest"
              >
                Product
              </th>
              <th
                class="px-8 py-5 text-left text-[11px] font-bold text-gray-400 uppercase tracking-widest hidden md:table-cell"
              >
                Category
              </th>
              <th
                class="px-8 py-5 text-left text-[11px] font-bold text-gray-400 uppercase tracking-widest hidden lg:table-cell"
              >
                Source
              </th>
              <th
                class="px-8 py-5 text-left text-[11px] font-bold text-gray-400 uppercase tracking-widest"
              >
                Price
              </th>
              <th
                class="px-8 py-5 text-left text-[11px] font-bold text-gray-400 uppercase tracking-widest"
              >
                Status
              </th>
              <th
                class="px-8 py-5 text-right text-[11px] font-bold text-gray-400 uppercase tracking-widest"
              >
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-50">
            <template x-for="product in products" :key="product._id">
              <tr class="group hover:bg-blue-50/20 transition-colors">
                <td class="px-8 py-5">
                  <div class="flex flex-col">
                    <span
                      class="font-bold text-gray-900 text-sm"
                      x-text="product.name"
                    ></span>
                    <span
                      x-show="product.productID"
                      class="text-[10px] font-mono text-gray-300 mt-0.5"
                      x-text="product.productID"
                    ></span>
                  </div>
                </td>
                <td class="px-8 py-5 hidden md:table-cell">
                  <span
                    class="text-xs font-medium text-gray-500"
                    x-text="product.category?.name || '-'"
                  ></span>
                </td>
                <td class="px-8 py-5 hidden lg:table-cell">
                  <span
                    class="text-xs font-medium text-gray-500"
                    x-text="product.source?.name || '-'"
                  ></span>
                </td>
                <td class="px-8 py-5">
                  <span class="text-sm font-bold text-gray-900"
                    >₹<span
                      x-text="Number(product.price).toLocaleString('en-IN')"
                    ></span
                  ></span>
                </td>
                <td class="px-8 py-5">
                  <span
                    :class="product.isSold ? 'text-gray-400' : 'text-green-600 bg-green-50 px-3 py-1 rounded-full'"
                    class="text-[10px] font-bold uppercase tracking-wider"
                    x-text="product.isSold ? 'Sold' : 'Active'"
                  ></span>
                </td>
