<div x-data="productsData" x-init="init()">
  <!-- Page Header -->
  <div class="mb-6 animate__animated animate__fadeInDown">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-gray-800 mb-2">
          <i class="fas fa-box text-primary-500"></i>
          Products Inventory
        </h1>
        <p class="text-gray-600">Manage your product inventory</p>
      </div>
      <button @click="openAddModal()"
        class="bg-gradient-to-r from-primary-500 to-emerald-600 hover:from-primary-600 hover:to-emerald-700 text-white px-6 py-3 rounded-xl font-medium shadow-lg hover:shadow-xl transition-all flex items-center justify-center space-x-2">
        <i class="fas fa-plus"></i>
        <span>Add Product</span>
      </button>
    </div>
  </div>

  <!-- Filters & Search -->
  <div class="bg-white/80 backdrop-blur-md rounded-2xl p-4 md:p-6 shadow-lg mb-6 animate__animated animate__fadeInUp">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <!-- Search -->
      <div class="md:col-span-2">
        <div class="relative">
          <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
          <input type="text" x-model="filters.search" @input.debounce.300ms="loadProducts()"
            placeholder="Search products..."
            class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all">
        </div>
      </div>

      <!-- Category Filter -->
      <div>
        <select x-model="filters.category" @change="loadProducts()"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all">
          <option value="">All Categories</option>
          <template x-for="category in categories" :key="category._id">
            <option :value="category._id" x-text="category.name"></option>
          </template>
        </select>
      </div>

      <!-- Status Filter -->
      <div class="flex items-center space-x-2">
        <button @click="filters.isSold = null; loadProducts()"
          :class="filters.isSold === null ? 'bg-primary-500 text-white' : 'bg-gray-100 text-gray-700'"
          class="flex-1 px-4 py-2 rounded-lg font-medium transition-all">
          All
        </button>
        <button @click="filters.isSold = false; loadProducts()"
          :class="filters.isSold === false ? 'bg-green-500 text-white' : 'bg-gray-100 text-gray-700'"
          class="flex-1 px-4 py-2 rounded-lg font-medium transition-all">
          Available
        </button>
        <button @click="filters.isSold = true; loadProducts()"
          :class="filters.isSold === true ? 'bg-gray-500 text-white' : 'bg-gray-100 text-gray-700'"
          class="flex-1 px-4 py-2 rounded-lg font-medium transition-all">
          Sold
        </button>
      </div>
    </div>

    <!-- View Toggle -->
    <div class="flex items-center justify-between mt-4 pt-4 border-t border-gray-200">
      <p class="text-sm text-gray-600">
        Showing <span class="font-semibold" x-text="products.length"></span> products
      </p>
      <div class="flex items-center space-x-2">
        <button @click="viewMode = 'grid'"
          :class="viewMode === 'grid' ? 'bg-primary-500 text-white' : 'bg-gray-100 text-gray-700'"
          class="p-2 rounded-lg transition-all">
          <i class="fas fa-th"></i>
        </button>
        <button @click="viewMode = 'list'"
          :class="viewMode === 'list' ? 'bg-primary-500 text-white' : 'bg-gray-100 text-gray-700'"
          class="p-2 rounded-lg transition-all">
          <i class="fas fa-list"></i>
        </button>
      </div>
    </div>
  </div>

  <!-- Loading State -->
  <div x-show="loading" class="text-center py-12">
    <i class="fas fa-spinner fa-spin text-4xl text-primary-500 mb-4"></i>
    <p class="text-gray-600">Loading products...</p>
  </div>

  <!-- Products Grid View -->
  <div x-show="!loading && viewMode === 'grid'" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <template x-for="(product, index) in products" :key="product._id">
      <div
        class="bg-white/80 backdrop-blur-md rounded-2xl shadow-lg hover:shadow-xl transition-all overflow-hidden group animate__animated animate__fadeInUp"
        :style="`animation-delay: ${index * 0.1}s`">
        <!-- Product ID Badge -->
        <div class="relative p-4 pb-0">
          <div class="flex items-center justify-between">
            <span x-show="product.productID"
              class="px-3 py-1 bg-gradient-to-r from-primary-500 to-emerald-600 text-white text-xs font-bold rounded-full"
              x-text="product.productID"></span>
            <span x-show="product.isSold"
              class="px-3 py-1 bg-gray-500 text-white text-xs font-bold rounded-full flex items-center">
              <i class="fas fa-check-circle mr-1"></i>
              SOLD
            </span>
            <span x-show="!product.isSold"
              class="px-3 py-1 bg-green-500 text-white text-xs font-bold rounded-full flex items-center">
              <i class="fas fa-circle mr-1"></i>
              AVAILABLE
            </span>
          </div>
        </div>

        <!-- Product Info -->
        <div class="p-4">
          <h3 class="text-lg font-bold text-gray-800 mb-2 group-hover:text-primary-600 transition-colors"
            x-text="product.name"></h3>

          <div class="flex items-center space-x-2 text-sm text-gray-600 mb-3">
            <i class="fas fa-tag text-primary-500"></i>
            <span x-text="product.category?.name"></span>
            <span class="mx-2 text-gray-300">|</span>
            <span class="font-bold text-gray-800">₹<span x-text="product.price"></span></span>
          </div>

          <!-- Tags -->
          <div class="flex flex-wrap gap-2 mb-4">
            <template x-for="tag in product.tags?.slice(0, 3)" :key="tag">
              <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full" x-text="tag"></span>
            </template>
          </div>

          <!-- Actions -->
          <div class="flex items-center space-x-2 pt-4 border-t border-gray-200">
            <button @click="viewProduct(product)"
              class="flex-1 px-3 py-2 bg-primary-50 text-primary-600 hover:bg-primary-100 rounded-lg font-medium transition-all text-sm">
              <i class="fas fa-eye mr-1"></i>
              View
            </button>
            <button @click="editProduct(product)"
              class="flex-1 px-3 py-2 bg-blue-50 text-blue-600 hover:bg-blue-100 rounded-lg font-medium transition-all text-sm">
              <i class="fas fa-edit mr-1"></i>
              Edit
            </button>
            <button x-show="!product.isSold" @click="markAsSold(product._id)"
              class="px-3 py-2 bg-green-50 text-green-600 hover:bg-green-100 rounded-lg transition-all text-sm"
              title="Mark as Sold">
              <i class="fas fa-check"></i>
            </button>
            <button @click="deleteProduct(product._id)"
              class="px-3 py-2 bg-red-50 text-red-600 hover:bg-red-100 rounded-lg transition-all text-sm"
              title="Delete">
              <i class="fas fa-trash"></i>
            </button>
          </div>
        </div>
      </div>
    </template>
  </div>

  <!-- Products List View -->
  <div x-show="!loading && viewMode === 'list'"
    class="bg-white/80 backdrop-blur-md rounded-2xl shadow-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50 border-b border-gray-200">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Product</th>
            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase hidden md:table-cell">Category
            </th>
            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase hidden lg:table-cell">Source
            </th>
            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Price</th>
            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Status</th>
            <th class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <template x-for="product in products" :key="product._id">
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-4 py-3">
                <div>
                  <p class="font-medium text-gray-800" x-text="product.name"></p>
                  <p x-show="product.productID" class="text-xs text-primary-600 font-mono" x-text="product.productID">
                  </p>
                </div>
              </td>
              <td class="px-4 py-3 hidden md:table-cell">
                <span class="text-sm text-gray-600" x-text="product.category?.name"></span>
              </td>
              <td class="px-4 py-3 hidden lg:table-cell">
                <span class="text-sm text-gray-600" x-text="product.source?.name"></span>
              </td>
              <td class="px-4 py-3">
                <span class="text-sm font-medium text-gray-800">₹<span x-text="product.price"></span></span>
              </td>
              <td class="px-4 py-3">
                <span :class="product.isSold ? 'bg-gray-100 text-gray-600' : 'bg-green-100 text-green-700'"
                  class="px-2 py-1 rounded-full text-xs font-medium"
                  x-text="product.isSold ? 'Sold' : 'Available'"></span>
              </td>
              <td class="px-4 py-3 text-right space-x-2">
                <button @click="viewProduct(product)" class="text-primary-600 hover:text-primary-700">
                  <i class="fas fa-eye"></i>
                </button>
                <button @click="editProduct(product)" class="text-blue-600 hover:text-blue-700">
                  <i class="fas fa-edit"></i>
                </button>
                <button x-show="!product.isSold" @click="markAsSold(product._id)"
                  class="text-green-600 hover:text-green-700" title="Mark as Sold">
                  <i class="fas fa-check"></i>
                </button>
                <button @click="deleteProduct(product._id)" class="text-red-600 hover:text-red-700" title="Delete">
                  <i class="fas fa-trash"></i>
                </button>
              </td>
            </tr>
          </template>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Empty State -->
  <div x-show="!loading && products.length === 0"
    class="text-center py-12 bg-white/80 backdrop-blur-md rounded-2xl shadow-lg">
    <i class="fas fa-box-open text-6xl text-gray-300 mb-4"></i>
    <h3 class="text-xl font-semibold text-gray-800 mb-2">No Products Found</h3>
    <p class="text-gray-600 mb-6">Start by adding your first product</p>
    <button @click="openAddModal()"
      class="bg-gradient-to-r from-primary-500 to-emerald-600 text-white px-6 py-3 rounded-xl font-medium inline-flex items-center space-x-2">
      <i class="fas fa-plus"></i>
      <span>Add Product</span>
    </button>
  </div>

  <!-- Add/Edit Product Modal -->
  <div x-show="showModal" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100" x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0"
    class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4"
    @click.self="closeModal()" style="display: none;">

    <div x-show="showModal" x-transition:enter="transition ease-out duration-300 transform"
      x-transition:enter-start="opacity-0 scale-95" x-transition:enter-end="opacity-100 scale-100"
      x-transition:leave="transition ease-in duration-200 transform" x-transition:leave-start="opacity-100 scale-100"
      x-transition:leave-end="opacity-0 scale-95"
      class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">

      <!-- Modal Header -->
      <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between z-10">
        <h2 class="text-2xl font-bold text-gray-800">
          <span x-text="editMode ? 'Edit Product' : 'Add New Product'"></span>
        </h2>
        <button @click="closeModal()" class="text-gray-500 hover:text-gray-700 text-2xl">
          <i class="fas fa-times"></i>
        </button>
      </div>

      <!-- Modal Body -->
      <form @submit.prevent="saveProduct()" class="p-6 space-y-4">
        <!-- Product Name & Price -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="md:col-span-2">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Product Name <span class="text-red-500">*</span>
            </label>
            <input type="text" x-model="formData.name" required placeholder="e.g., Dell Latitude 5420"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Price (₹) <span class="text-red-500">*</span>
            </label>
            <input type="number" x-model="formData.price" required min="0" placeholder="0.00"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all">
          </div>
        </div>

        <!-- Category -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Category <span class="text-red-500">*</span>
          </label>
          <select x-model="formData.category" @change="onCategoryChange()" required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all">
            <option value="">Select Category</option>
            <template x-for="category in categories" :key="category._id">
              <option :value="category._id" x-text="category.name"></option>
            </template>
          </select>
        </div>

        <!-- Source Contact with Quick Add -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Source (Vendor/Supplier) <span class="text-red-500">*</span>
          </label>
          <div class="flex items-center space-x-2">
            <select x-model="formData.source" required
              class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all">
              <option value="">Select Source</option>
              <template x-for="contact in contacts" :key="contact._id">
                <option :value="contact._id">
                  <span x-text="contact.name + ' (' + contact.contactType + ')'"></span>
                </option>
              </template>
            </select>
            <button @click.prevent="showQuickAddContact = !showQuickAddContact" type="button"
              class="px-4 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition-all whitespace-nowrap">
              <i class="fas fa-plus mr-1"></i>
              Quick Add
            </button>
          </div>
        </div>

        <!-- Quick Add Contact Inline Form -->
        <div x-show="showQuickAddContact" x-transition:enter="transition ease-out duration-200"
          x-transition:enter-start="opacity-0 -translate-y-2" x-transition:enter-end="opacity-100 translate-y-0"
          class="bg-blue-50 border border-blue-200 rounded-lg p-4 space-y-3" style="display: none;">
          <div class="flex items-center justify-between mb-2">
            <h4 class="font-semibold text-gray-800">Quick Add Contact</h4>
            <button @click.prevent="showQuickAddContact = false" type="button"
              class="text-gray-500 hover:text-gray-700">
              <i class="fas fa-times"></i>
            </button>
          </div>

          <div class="grid grid-cols-2 gap-3">
            <input type="text" x-model="quickContact.name" placeholder="Name *"
              class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 outline-none text-sm">
            <input type="tel" x-model="quickContact.phone" placeholder="Phone *" maxlength="10"
              class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 outline-none text-sm">
          </div>

          <select x-model="quickContact.contactType"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 outline-none text-sm">
            <option value="">Select Type *</option>
            <option value="Vendor">Vendor</option>
            <option value="Supplier">Supplier</option>
            <option value="Customer">Customer</option>
          </select>

          <button @click.prevent="saveQuickContact()" type="button"
            class="w-full px-4 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition-all font-medium">
            <i class="fas fa-save mr-2"></i>
            Save Contact
          </button>
        </div>

        <!-- Product ID Toggle -->
        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
          <div>
            <p class="font-medium text-gray-800">Assign Product ID</p>
            <p class="text-sm text-gray-600">Auto-generate 6-character unique ID</p>
          </div>
          <label class="relative inline-flex items-center cursor-pointer">
            <input type="checkbox" x-model="formData.assignProductID" class="sr-only peer">
            <div
              class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600">
            </div>
          </label>
        </div>

        <!-- Dynamic Specifications based on Category -->
        <div x-show="selectedCategoryTemplate && selectedCategoryTemplate.length > 0" style="display: none;">
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Specifications
          </label>
          <div class="space-y-3 bg-gray-50 rounded-lg p-4">
            <template x-for="field in selectedCategoryTemplate" :key="field.fieldName">
              <div>
                <label class="block text-xs font-medium text-gray-600 mb-1">
                  <span x-text="field.fieldName"></span>
                  <span x-show="field.required" class="text-red-500">*</span>
                </label>

                <!-- Text Input -->
                <input x-show="field.fieldType === 'text'" type="text"
                  x-model="formData.specifications[field.fieldName]"
                  :required="field.required && field.fieldType === 'text'"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 outline-none text-sm">

                <!-- Number Input -->
                <input x-show="field.fieldType === 'number'" type="number"
                  x-model="formData.specifications[field.fieldName]"
                  :required="field.required && field.fieldType === 'number'"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 outline-none text-sm">

                <!-- Select Input -->
                <select x-show="field.fieldType === 'select'" x-model="formData.specifications[field.fieldName]"
                  :required="field.required && field.fieldType === 'select'"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 outline-none text-sm">
                  <option value="">Select...</option>
                  <template x-for="option in field.options" :key="option">
                    <option :value="option" x-text="option"></option>
                  </template>
                </select>

                <!-- Textarea Input -->
                <textarea x-show="field.fieldType === 'textarea'" x-model="formData.specifications[field.fieldName]"
                  :required="field.required && field.fieldType === 'textarea'" rows="2"
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 outline-none text-sm"></textarea>
              </div>
            </template>
          </div>
        </div>

        <!-- Tags -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Tags
          </label>
          <div class="flex flex-wrap gap-2 mb-2">
            <template x-for="(tag, index) in formData.tags" :key="index">
              <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm flex items-center space-x-2">
                <span x-text="tag"></span>
                <button @click.prevent="formData.tags.splice(index, 1)" type="button" class="hover:text-primary-900">
                  <i class="fas fa-times text-xs"></i>
                </button>
              </span>
            </template>
          </div>
          <div class="flex space-x-2">
            <input type="text" x-model="newTag" @keydown.enter.prevent="addTag()" placeholder="Add tag and press Enter"
              class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 outline-none">
            <button @click.prevent="addTag()" type="button"
              class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-all">
              <i class="fas fa-plus"></i>
            </button>
          </div>
        </div>

        <!-- Notes -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Notes
          </label>
          <textarea x-model="formData.notes" rows="3" placeholder="Additional notes about this product..."
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 outline-none"></textarea>
        </div>

        <!-- Modal Footer -->
        <div class="flex items-center justify-end space-x-3 pt-4">
          <button @click.prevent="closeModal()" type="button"
            class="px-6 py-2 border-2 border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 font-medium transition-all">
            Cancel
          </button>
          <button type="submit" :disabled="saving"
            class="px-6 py-2 bg-gradient-to-r from-primary-500 to-emerald-600 text-white rounded-lg hover:from-primary-600 hover:to-emerald-700 font-medium transition-all disabled:opacity-50 disabled:cursor-not-allowed">
            <i :class="saving ? 'fas fa-spinner fa-spin' : 'fas fa-save'" class="mr-2"></i>
            <span x-text="saving ? 'Saving...' : (editMode ? 'Update' : 'Save')"></span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/pages/products.js"></script>