<div x-data="serviceTicketAdd" x-init="init()">
    <!-- Page Header -->
    <div class="mb-6 animate__animated animate__fadeInDown">
        <div class="flex items-center justify-between">
            <div>
                <a href="/service-tickets"
                    class="text-gray-500 hover:text-gray-700 mb-2 inline-block transition-colors">
                    <i class="fas fa-arrow-left mr-1"></i> Back to Tickets
                </a>
                <h1 class="text-3xl font-bold text-gray-800">
                    <i class="fas fa-plus-circle text-primary-500 mr-2"></i>
                    New Service Ticket
                </h1>
                <p class="text-gray-600 mt-1">Create a new repair ticket</p>
            </div>
        </div>
    </div>

    <!-- Main Form Card -->
    <div class="bg-white/80 backdrop-blur-md rounded-2xl shadow-lg p-6 md:p-8 animate__animated animate__fadeInUp">
        <form @submit.prevent="saveTicket()" class="space-y-8 max-w-4xl mx-auto">

            <!-- Customer Section -->
            <div class="space-y-4">
                <h3 class="text-lg font-semibold text-gray-800 border-b border-gray-100 pb-2">
                    <i class="fas fa-user text-primary-500 mr-2"></i>Customer Details
                </h3>

                <div class="relative" @click.outside="showSearchResults = false">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Search Customer <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                        <input type="text" x-model="searchQuery" @input.debounce.300ms="searchContacts()"
                            @focus="showSearchResults = true" placeholder="Search by name or phone..."
                            class="w-full pl-11 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all bg-gray-50 focus:bg-white"
                            :class="{'border-red-300 focus:ring-red-200': errors.customer}">

                        <!-- Selected Customer Badge -->
                        <div x-show="selectedCustomer" class="absolute right-2 top-1/2 -translate-y-1/2">
                            <span
                                class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                <i class="fas fa-check-circle mr-1.5"></i>
                                <span x-text="selectedCustomer?.name"></span>
                                <button type="button" @click="clearCustomer()"
                                    class="ml-2 text-green-600 hover:text-green-900 focus:outline-none">
                                    <i class="fas fa-times"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                    <p x-show="errors.customer" class="mt-1 text-sm text-red-500" x-text="errors.customer"></p>

                    <!-- Search Results Dropdown -->
                    <div x-show="showSearchResults && (searchResults.length > 0 || isSearching)"
                        class="absolute z-10 w-full mt-1 bg-white rounded-xl shadow-xl border border-gray-100 max-h-60 overflow-auto"
                        style="display: none;">
                        <div x-show="isSearching" class="p-4 text-center text-gray-500">
                            <i class="fas fa-spinner fa-spin mr-2"></i> Searching...
                        </div>
                        <template x-for="contact in searchResults" :key="contact._id">
                            <div @click="selectCustomer(contact)"
                                class="p-3 hover:bg-gray-50 cursor-pointer border-b border-gray-50 last:border-0 transition-colors flex items-center justify-between group">
                                <div>
                                    <p class="font-medium text-gray-800 group-hover:text-primary-600 transition-colors"
                                        x-text="contact.name"></p>
                                    <p class="text-sm text-gray-500" x-text="contact.phone"></p>
                                </div>
                                <i class="fas fa-plus text-gray-300 group-hover:text-primary-500"></i>
                            </div>
                        </template>
                    </div>

                    <!-- No Results / Quick Add -->
                    <div x-show="showSearchResults && !isSearching && searchResults.length === 0 && searchQuery.length > 2"
                        class="absolute z-10 w-full mt-1 bg-white rounded-xl shadow-xl border border-gray-100 p-4 text-center">
                        <p class="text-gray-600 mb-2">No customer found</p>
                        <button type="button" @click="openQuickAddModal()"
                            class="text-primary-600 hover:text-primary-700 font-medium text-sm">
                            <i class="fas fa-user-plus mr-1"></i> Add new customer
                        </button>
                    </div>
                </div>
            </div>

            <!-- Device & Service Section -->
            <div class="space-y-4">
                <h3 class="text-lg font-semibold text-gray-800 border-b border-gray-100 pb-2 pt-4">
                    <i class="fas fa-laptop-medical text-primary-500 mr-2"></i>Service Details
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Device Details -->
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Device & Issue Details <span class="text-red-500">*</span>
                        </label>
                        <textarea x-model="formData.deviceDetails" rows="3"
                            placeholder="e.g., iPhone 13 Pro - Screen cracked, touch not working"
                            class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all bg-gray-50 focus:bg-white"
                            :class="{'border-red-300 focus:ring-red-200': errors.deviceDetails}"></textarea>
                        <p x-show="errors.deviceDetails" class="mt-1 text-sm text-red-500"
                            x-text="errors.deviceDetails"></p>
                    </div>

                    <!-- Assigned Technician -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Assign Technician</label>
                        <div class="relative">
                            <i class="fas fa-user-wrench absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                            <select x-model="formData.assignedTechnician"
                                class="w-full pl-11 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all bg-gray-50 focus:bg-white appearance-none">
                                <option value="">Unassigned</option>
                                <template x-for="tech in technicians" :key="tech._id">
                                    <option :value="tech.name" x-text="tech.name"></option>
                                </template>
                            </select>
                            <i
                                class="fas fa-chevron-down absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none"></i>
                        </div>
                    </div>

                    <!-- Service Charge -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Estimated Charge (â‚¹)</label>
                        <div class="relative">
                            <i class="fas fa-rupee-sign absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                            <input type="number" x-model="formData.serviceCharge" min="0"
                                class="w-full pl-11 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all bg-gray-50 focus:bg-white">
                        </div>
                    </div>

                    <!-- Status -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Initial Status</label>
                        <div class="relative">
                            <i class="fas fa-info-circle absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                            <select x-model="formData.status"
                                class="w-full pl-11 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all bg-gray-50 focus:bg-white appearance-none">
                                <option value="Pending">Pending</option>
                                <option value="In Progress">In Progress</option>
                                <option value="Completed">Completed</option>
                                <option value="Delivered">Delivered</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <i
                                class="fas fa-chevron-down absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none"></i>
                        </div>
                    </div>

                    <!-- Internal Notes -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Internal Notes</label>
                        <div class="relative">
                            <i class="fas fa-sticky-note absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                            <input type="text" x-model="formData.notes" placeholder="Private notes..."
                                class="w-full pl-11 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all bg-gray-50 focus:bg-white">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-100">
                <a href="/service-tickets"
                    class="px-6 py-3 text-gray-600 hover:text-gray-800 font-medium transition-colors">
                    Cancel
                </a>
                <button type="submit" :disabled="saving"
                    class="px-8 py-3 bg-primary-500 text-white rounded-xl hover:bg-primary-600 font-semibold shadow-lg shadow-primary-500/30 hover:shadow-primary-500/40 active:scale-95 transition-all disabled:opacity-50 disabled:cursor-not-allowed flex items-center">
                    <i :class="saving ? 'fas fa-spinner fa-spin' : 'fas fa-check'" class="mr-2"></i>
                    <span x-text="saving ? 'Creating Ticket...' : 'Create Ticket'"></span>
                </button>
            </div>
        </form>
    </div>

    <!-- Quick Add Customer Modal -->
    <div x-show="showQuickAddModal" x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-200" x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4"
        style="display: none;">

        <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full p-6 animate__animated animate__zoomIn">
            <h3 class="text-xl font-bold text-gray-800 mb-4">Add New Customer</h3>
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Name *</label>
                    <input type="text" x-model="quickCustomer.name"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 outline-none">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Phone *</label>
                    <input type="tel" x-model="quickCustomer.phone" maxlength="10"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 outline-none">
                </div>
                <div class="flex justify-end space-x-3 mt-6">
                    <button @click="showQuickAddModal = false"
                        class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg transition-colors">
                        Cancel
                    </button>
                    <button @click="saveQuickCustomer()"
                        class="px-4 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition-colors">
                        Save Customer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/pages/service-tickets-add.js"></script>