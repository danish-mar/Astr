                            <thead class="sticky top-0 bg-white border-b border-slate-50">
                                <tr class="text-[9px] font-black text-slate-300 uppercase tracking-[0.25em]">
                                    <th class="px-8 py-4 text-left">Period</th>
                                    <th class="px-8 py-4 text-left">Voucher Particulars</th>
                                    <th class="px-8 py-4 text-right">Debit</th>
                                    <th class="px-8 py-4 text-right">Credit</th>
                                    <th class="px-8 py-4 text-center">Actions</th>
                                </tr>
                            </thead>
