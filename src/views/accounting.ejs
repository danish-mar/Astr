                </div>
            </div>
            <div class="flex-1 overflow-y-auto custom-scrollbar p-2 space-y-1">
                <template x-for="acc in filteredAccounts" :key="acc._id">
                    <button @click="selectAccount(acc)"
                        :class="selectedAccount?._id === acc._id ? 'bg-white shadow-md border-slate-200' : 'hover:bg-white/60 border-transparent'"
                        class="w-full flex items-center justify-between p-4 rounded-2xl border transition-all text-left group">
                        <div class="flex items-center gap-3">
                            <div class="w-9 h-9 rounded-xl flex items-center justify-center font-bold text-xs"
                                :class="selectedAccount?._id === acc._id ? 'bg-primary-600 text-white' : 'bg-slate-200 text-slate-500'"
                                x-text="acc.contact?.name?.charAt(0) || 'A'"></div>
                            <div>
                                <p class="text-sm font-bold text-slate-800" x-text="acc.accountName"></p>
                                <p class="text-[10px] font-bold text-slate-400 uppercase tracking-wider" x-text="acc.contact?.companyName || 'Private'"></p>
                            </div>
                        </div>
                        <p class="text-xs font-black tracking-tight" :class="acc.totalBalance >= 0 ? 'text-emerald-600' : 'text-rose-600'" x-text="'₹' + formatNumber(Math.abs(acc.totalBalance))"></p>
                    </button>
                </template>
            </div>
            <div class="p-4 bg-white border-t border-slate-100">
                <button @click="modals.manageTags = true" class="w-full py-2.5 text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] flex items-center justify-center gap-2 hover:text-primary-600">
                    <i class="fas fa-tags text-[9px]"></i> Classification Master
                </button>
            </div>
        </div>

        <!-- Unified Workspace: Workstation Area -->
        <div class="flex-1 flex flex-col bg-white">
            <template x-if="selectedAccount">
                <div class="flex-1 flex flex-col">
                    <div class="px-8 py-6 border-b border-slate-50 flex items-center justify-between">
                        <div class="flex flex-col">
                            <div class="flex items-center gap-3 mb-1">
                                <h3 class="text-xl font-black text-slate-900" x-text="selectedAccount.accountName"></h3>
                                <span class="px-2 py-0.5 bg-slate-900 text-white text-[8px] font-black rounded uppercase" x-text="selectedAccount.contact?.contactType"></span>
                            </div>
                            <p class="text-xs text-slate-400" x-text="'Ledger Summary for ' + selectedAccount.contact?.name"></p>
                        </div>
                        <div class="flex items-center gap-2">
                             <div class="flex items-center bg-slate-50 border border-slate-200 p-1.5 rounded-xl">
                                <input type="date" x-model="filter.startDate" @change="loadLedger(selectedAccount._id)" class="text-[9px] font-black p-1 bg-transparent">
                                <span class="text-slate-300 text-[9px] px-1 font-black">TO</span>
                                <input type="date" x-model="filter.endDate" @change="loadLedger(selectedAccount._id)" class="text-[9px] font-black p-1 bg-transparent">
                            </div>
                            <button @click="editAccount(selectedAccount)" class="w-9 h-9 text-slate-300 hover:text-slate-600"><i class="fas fa-cog text-xs"></i></button>
                            <button @click="confirmDeleteAccount()" class="w-9 h-9 text-slate-300 hover:text-rose-600"><i class="fas fa-trash-alt text-xs"></i></button>
                        </div>
                    </div>
                    <div x-show="periodStats" class="grid grid-cols-3 divide-x divide-slate-50 border-b border-slate-50">
                        <div class="p-6"><p class="text-[9px] font-bold text-slate-400 uppercase">Debit (Dr.)</p><p class="text-lg font-black text-emerald-600">₹<span x-text="formatNumber(periodStats.totalGave)">0</span></p></div>
                        <div class="p-6"><p class="text-[9px] font-bold text-slate-400 uppercase">Credit (Cr.)</p><p class="text-lg font-black text-rose-600">₹<span x-text="formatNumber(periodStats.totalTook)">0</span></p></div>
                        <div class="p-6"><p class="text-[9px] font-bold text-slate-400 uppercase">Vouchers</p><p class="text-lg font-black text-slate-800" x-text="periodStats.count">0</p></div>
