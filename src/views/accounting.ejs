                     <form @submit.prevent="createTag()" class="space-y-5">
                        <div class="space-y-2">
                            <input type="text" x-model="newTag.name" placeholder="Name" class="w-full px-4 py-3 bg-white border border-slate-200 rounded-xl font-bold text-xs outline-none focus:ring-4 focus:ring-primary-100" required>
                        </div>
                        <div class="space-y-2">
                             <div class="flex items-center gap-3 bg-white p-2 border border-slate-200 rounded-xl">
                                 <input type="color" x-model="newTag.color" class="w-full h-10 rounded-lg cursor-pointer">
                             </div>
                        </div>
                        <button type="submit" class="w-full py-4 bg-primary-600 text-white rounded-xl font-black text-[10px] uppercase tracking-widest hover:bg-primary-700 shadow-xl shadow-primary-100 transition-all">Add</button>
