                    </div>
                </div>
            </template>
            <template x-if="!selectedAccount">
                <div class="flex-1 flex flex-col items-center justify-center p-12 text-center bg-slate-50/20">
                    <div class="w-16 h-16 bg-white border border-slate-100 rounded-3xl flex items-center justify-center shadow-sm mb-6"><i class="fas fa-file-invoice text-xl text-slate-200"></i></div>
                    <p class="text-xs text-slate-400 uppercase tracking-widest font-black">Select Party Identity</p>
                </div>
            </template>
        </div>
    </div>

    <!-- PERFORMANCE OPTIMIZED LANDSCAPE MODALS -->
    
    <!-- 1. Voucher Entry Modal (LANDSCAPE DUAL-VIEW) -->
    <div x-show="modals.addTransaction" class="fixed inset-0 z-[9999] flex items-center justify-center p-6 bg-slate-900/60" x-cloak x-transition>
        <div @click="modals.addTransaction = false" class="absolute inset-0"></div>
        <div class="relative w-full max-w-4xl bg-white rounded-[32px] shadow-2xl overflow-hidden flex flex-col animate__animated animate__zoomIn">
            <!-- Modal Header -->
            <div class="px-8 py-6 bg-slate-900 text-white flex items-center justify-between shrink-0">
                <div class="flex items-center gap-4">
                    <div class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center">
                        <i class="fas fa-file-invoice text-sm"></i>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold uppercase tracking-tight" x-text="editMode.transaction ? 'Revise Voucher' : 'New Voucher Entry'"></h3>
                        <p class="text-[9px] font-bold text-slate-400 uppercase tracking-[0.2em] mt-0.5">Dual-View Gateway Configuration</p>
                    </div>
                </div>
                <button @click="modals.addTransaction = false" class="w-10 h-10 rounded-xl bg-white/5 flex items-center justify-center hover:bg-white/10 hover:rotate-90 transition-all">
                    <i class="fas fa-times text-sm"></i>
                </button>
            </div>

            <!-- Dual View Layout -->
            <form @submit.prevent="saveTransaction()" class="flex flex-1 overflow-hidden h-[500px]">
                <!-- Left Column: Primary Config -->
                <div class="w-2/5 p-8 border-r border-slate-100 space-y-6 overflow-y-auto custom-scrollbar">
                    <div class="space-y-2">
                        <label class="text-[9px] font-black text-slate-400 uppercase ml-1">Party Identity</label>
                        <select x-model="newTx.accountId" class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl font-bold text-sm outline-none focus:ring-4 focus:ring-primary-100 focus:border-primary-300 transition-all">
                            <option value="">Select Ledger...</option>
                            <template x-for="acc in accounts" :key="acc._id">
                                <option :value="acc._id" x-text="acc.accountName + ' (' + (acc.contact?.name || 'Unknown') + ')'"></option>
                            </template>
                        </select>
                    </div>

                    <div class="space-y-3">
                        <label class="text-[10px] font-black text-slate-400 uppercase ml-1">Voucher Nature</label>
                        <div class="flex items-center bg-slate-100 p-1.5 rounded-2xl border border-slate-200">
                            <button type="button" @click="newTx.transactionType = 'Debit'"
                                :class="newTx.transactionType === 'Debit' ? 'bg-white text-emerald-600 shadow-md ring-1 ring-slate-200' : 'text-slate-400 hover:text-slate-600'"
                                class="flex-1 py-3.5 text-[10px] font-bold uppercase rounded-xl transition-all">Debit (Dr.)</button>
                            <button type="button" @click="newTx.transactionType = 'Credit'"
                                :class="newTx.transactionType === 'Credit' ? 'bg-primary-600 text-white shadow-lg' : 'text-slate-400 hover:text-slate-600'"
                                class="flex-1 py-3.5 text-[10px] font-bold uppercase rounded-xl transition-all">Credit (Cr.)</button>
                        </div>
                    </div>

                    <div class="space-y-3">
                        <label class="text-[10px] font-black text-slate-400 uppercase ml-1">Principal Amount (₹)</label>
                        <div class="relative">
                            <span class="absolute left-6 top-1/2 -translate-y-1/2 text-slate-300 font-bold text-xl">₹</span>
                            <input type="number" x-model="newTx.amount" placeholder="0.00" class="w-full pl-12 pr-6 py-5 bg-slate-50 border border-slate-200 rounded-2xl font-black text-4xl outline-none focus:bg-white text-slate-900 border-none">
                        </div>
                    </div>

                    <!-- Live Summary Card -->
                    <div x-show="newTx.amount > 0" class="p-6 bg-slate-900 rounded-2xl text-white space-y-3 transition-all">
                        <p class="text-[9px] font-bold text-slate-500 uppercase tracking-widest">Computed Impact Assessment</p>
                        <div class="flex items-center justify-between">
                             <p class="text-sm font-bold opacity-80" x-text="newTx.transactionType === 'Debit' ? 'Settlement Outflow' : 'Receipt Inflow'"></p>
                             <p class="text-2xl font-black" :class="newTx.transactionType === 'Debit' ? 'text-emerald-400' : 'text-primary-400'" x-text="'₹' + formatNumber(newTx.amount)"></p>
                        </div>
                    </div>
                </div>

                <!-- Right Column: Secondary Details -->
                <div class="w-3/5 p-8 flex flex-col justify-between bg-slate-50/20 overflow-y-auto custom-scrollbar">
                    <div class="space-y-6">
                        <div class="grid grid-cols-2 gap-6">
                            <div class="space-y-2">
                                <label class="text-[9px] font-black text-slate-400 uppercase ml-1">Classification Tag</label>
                                <select x-model="newTx.tagId" class="w-full px-4 py-3 bg-white border border-slate-200 rounded-xl font-bold text-xs outline-none focus:ring-4 focus:ring-primary-50 transition-all">
                                    <option value="">General Entry</option>
                                    <template x-for="tag in tags" :key="tag._id">
                                        <option :value="tag._id" x-text="tag.name"></option>
                                    </template>
                                </select>
                            </div>
                            <div class="space-y-3">
                                <label class="text-[10px] font-black text-slate-400 uppercase ml-1">Posting Date</label>
                                <input type="date" x-model="newTx.date" class="w-full px-5 py-4 bg-white border border-slate-200 rounded-2xl text-xs font-bold outline-none focus:ring-4 focus:ring-primary-50 transition-all">
                            </div>
                        </div>

                        <div class="space-y-3">
                            <label class="text-[10px] font-black text-slate-400 uppercase ml-1">Master Narration (Required context)</label>
                            <textarea x-model="newTx.description" placeholder="Provide detailed financial context for this entry..." class="w-full px-6 py-5 bg-white border border-slate-200 rounded-2xl text-sm font-medium h-36 resize-none outline-none focus:ring-4 focus:ring-primary-50 transition-all"></textarea>
                        </div>
                        
                        <div class="space-y-3">
                            <label class="text-[10px] font-black text-slate-400 uppercase ml-1">External Reference</label>
                            <input type="text" x-model="newTx.reference" placeholder="Invoice #, Receipt #, or System ID" class="w-full px-6 py-4 bg-white border border-slate-200 rounded-2xl text-xs font-bold outline-none focus:ring-4 focus:ring-primary-50 transition-all">
                        </div>
                    </div>

                    <div class="pt-8 mt-auto border-t border-slate-100 flex items-center justify-end gap-6 text-right">
                        <div class="mr-auto hidden sm:block">
                             <p class="text-[8px] font-black text-slate-300 uppercase tracking-widest">Entry Verification Required</p>
                        </div>
                        <button type="button" @click="modals.addTransaction = false" class="text-[10px] font-black uppercase text-slate-400 hover:text-slate-900 transition-colors tracking-widest">Discard</button>
                        <button type="submit" :disabled="!isTxValid || loading" 
                            class="px-10 py-4 bg-primary-600 text-white rounded-xl font-black text-[10px] uppercase tracking-[0.2em] hover:bg-primary-700 shadow-xl shadow-primary-200 transition-all disabled:opacity-50 active:scale-[0.98]">
                            <span x-text="loading ? 'Processing...' : (editMode.transaction ? 'Commit' : 'Post Voucher')"></span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- 2. Ledger Master (LANDSCAPE) -->
    <div x-show="modals.addAccount" class="fixed inset-0 z-[9999] flex items-center justify-center p-6 bg-slate-900/60" x-cloak x-transition>
        <div @click="modals.addAccount = false" class="absolute inset-0"></div>
        <div class="relative w-full max-w-3xl bg-white rounded-[32px] shadow-2xl overflow-hidden flex animate__animated animate__zoomIn">
            <div class="w-2/5 bg-slate-900 p-10 flex flex-col justify-between text-white">
                <div>
                     <div class="w-12 h-12 bg-white/10 rounded-2xl flex items-center justify-center mb-6">
                        <i class="fas fa-address-card text-xl"></i>
                    </div>
                    <h2 class="text-2xl font-bold tracking-tight leading-tight" x-text="editMode.account ? 'Revise Master' : 'New Ledger'"></h2>
                    <p class="text-[9px] text-slate-400 mt-4 leading-relaxed uppercase tracking-widest font-black">Finance Terminal</p>
                </div>
                <div class="space-y-4">
                    <p class="text-[8px] font-black uppercase tracking-[0.4em] opacity-30">ASTR CORE v2</p>
                </div>
            </div>
            <form @submit.prevent="editMode.account ? updateAccountSettings() : createAccount()" class="w-3/5 p-10 space-y-8">
                <div class="space-y-2">
                    <label class="text-[9px] font-black text-slate-400 uppercase ml-1">Identity Selection</label>
                    <select x-model="newAccount.contactId" class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-xl font-bold text-sm outline-none focus:ring-4 focus:ring-primary-100 transition-all" required>
                        <option value="">Select Contact...</option>
                        <template x-for="c in contacts" :key="c._id">
                            <option :value="c._id" x-text="c.name"></option>
                        </template>
                    </select>
                </div>
                <div class="grid grid-cols-2 gap-8">
                    <div class="space-y-3">
                        <label class="text-[10px] font-black text-slate-400 uppercase ml-1">Account Nature</label>
                        <select x-model="newAccount.accountType" class="w-full px-6 py-5 bg-slate-50 border border-slate-200 rounded-2xl font-bold text-xs outline-none focus:ring-4 focus:ring-primary-100">
                            <option value="Payable">Payable Ledger (Cr.)</option>
                            <option value="Receivable">Receivable Ledger (Dr.)</option>
                        </select>
                    </div>
                    <div class="space-y-3">
                        <label class="text-[10px] font-black text-slate-400 uppercase ml-1">Alias / Identifier</label>
                        <input type="text" x-model="newAccount.accountName" placeholder="Ledger Display Name" class="w-full px-6 py-5 bg-slate-50 border border-slate-200 rounded-2xl font-bold text-xs outline-none focus:bg-white transition-all">
                    </div>
                </div>
                <div class="pt-8 flex justify-end gap-6 items-center border-t border-slate-50 font-black">
                     <button type="button" @click="modals.addAccount = false" class="text-[10px] text-slate-400 uppercase tracking-widest">Discard</button>
                     <button type="submit" class="px-10 py-4 bg-primary-600 text-white rounded-xl text-[10px] uppercase tracking-[0.2em] hover:bg-primary-700 shadow-xl shadow-primary-200 transition-all active:scale-95">
                        <span x-text="editMode.account ? 'Save' : 'Initialize'"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- 3. Classification Hub (LANDSCAPE) -->
    <div x-show="modals.manageTags" class="fixed inset-0 z-[9999] flex items-center justify-center p-6 bg-slate-900/60" x-cloak x-transition>
        <div @click="modals.manageTags = false" class="absolute inset-0"></div>
        <div class="relative w-full max-w-3xl bg-white rounded-[32px] shadow-2xl overflow-hidden flex flex-col animate__animated animate__zoomIn">
            <div class="px-8 py-6 bg-slate-900 text-white flex items-center justify-between shrink-0">
                <div class="flex items-center gap-4">
                    <div class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center font-black">
                        <i class="fas fa-tags text-sm font-black"></i>
                    </div>
                    <div>
                        <h3 class="text-lg font-bold uppercase tracking-tight">Classifications</h3>
                    </div>
                </div>
                <button @click="modals.manageTags = false" class="w-10 h-10 rounded-xl bg-white/5 flex items-center justify-center hover:bg-white/10 transition-all">
                    <i class="fas fa-times text-sm"></i>
                </button>
            </div>
            
