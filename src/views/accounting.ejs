                                    <tr class="hover:bg-slate-50/50 group">
                                        <td class="px-8 py-5"><p class="text-[11px] font-bold text-slate-800" x-text="formatDate(tx.date)"></p><p class="text-[8px] font-black text-slate-300 uppercase" x-text="tx.reference || 'VC-ENTRY'"></p></td>
