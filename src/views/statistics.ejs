<div x-data="statisticsData" class="min-h-screen bg-[#f9fafb] pb-20">
    <!-- Premium Header -->
    <div class="bg-white/70 backdrop-blur-xl border-b border-gray-100 mb-12">
        <div class="max-w-[1400px] mx-auto px-8 py-10">
            <div
                class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-8 animate__animated animate__fadeIn">
                <div>
                    <div class="flex items-center gap-3 mb-4">
                        <span
                            class="px-3 py-1 bg-indigo-50 text-indigo-600 text-[10px] font-bold rounded-full tracking-wider uppercase">Analytics</span>
                        <div class="w-1 h-1 rounded-full bg-gray-300"></div>
                        <span
                            class="text-[10px] font-bold text-gray-400 uppercase tracking-widest text-opacity-80">Real-time
                            Analytics</span>
                    </div>
                    <h1 class="text-4xl font-bold text-gray-900 tracking-tight mb-2">Statistics</h1>
                    <p class="text-gray-400 text-lg font-medium">Overview of your shop's performance and growth.</p>
                </div>

                <!-- Refined Date Picker -->
                <div class="flex items-center bg-gray-50 border border-gray-100 p-1.5 rounded-[22px]">
                    <button @click="setRange('7d')"
                        :class="range === '7d' ? 'bg-white text-gray-900 shadow-sm' : 'text-gray-400 hover:text-gray-600'"
                        class="px-6 py-3 rounded-[18px] text-[10px] font-bold uppercase tracking-widest transition-all">7
                        Days</button>
                    <button @click="setRange('30d')"
                        :class="range === '30d' ? 'bg-white text-gray-900 shadow-sm' : 'text-gray-400 hover:text-gray-600'"
                        class="px-6 py-3 rounded-[18px] text-[10px] font-bold uppercase tracking-widest transition-all">30
                        Days</button>
                    <button @click="setRange('90d')"
                        :class="range === '90d' ? 'bg-white text-gray-900 shadow-sm' : 'text-gray-400 hover:text-gray-600'"
                        class="px-6 py-3 rounded-[18px] text-[10px] font-bold uppercase tracking-widest transition-all">3
                        Months</button>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-[1400px] mx-auto px-8 space-y-12">
        <!-- High-Impact Summary Chips -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Revenue Card -->
            <div
                class="bg-white border border-gray-100 rounded-[40px] p-8 shadow-sm hover:shadow-xl hover:shadow-gray-100 transition-all group animate__animated animate__fadeInUp">
                <div class="flex items-center justify-between mb-8">
                    <div
                        class="w-14 h-14 bg-green-50 rounded-[22px] flex items-center justify-center text-green-600 group-hover:bg-green-600 group-hover:text-white transition-all">
                        <i class="fas fa-indian-rupee-sign text-lg"></i>
                    </div>
                    <div class="text-right">
                        <span class="text-[10px] font-bold text-gray-300 uppercase tracking-widest block mb-1">Total
                            Revenue</span>
                        <div class="flex items-center gap-2 justify-end">
                            <i class="fas"
                                :class="stats.revenueGrowth >= 0 ? 'fa-caret-up text-green-500' : 'fa-caret-down text-red-500'"></i>
                            <span class="text-[11px] font-bold"
                                :class="stats.revenueGrowth >= 0 ? 'text-green-600' : 'text-red-600'"
                                x-text="Math.abs(stats.revenueGrowth) + '%'"></span>
                        </div>
                    </div>
                </div>
                <h3 class="text-3xl font-bold text-gray-900 tracking-tighter"
                    x-text="'₹' + formatNumber(stats.totalRevenue)">0</h3>
            </div>

        </div>

        <!-- Analytical Canvas -->
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
            <!-- Revenue Trend -->
            <div
                class="lg:col-span-8 bg-white border border-gray-100 rounded-[40px] p-10 shadow-sm animate__animated animate__fadeInLeft">
                <div class="flex items-center justify-between mb-10">
                    <div>
                        <h3 class="text-2xl font-bold text-gray-900 tracking-tight">Revenue Trend</h3>
                        <p class="text-gray-400 font-medium text-sm mt-1">Daily service revenue flow.</p>
                    </div>
                </div>
                <div class="h-[300px]">
                    <canvas id="detailedRevenueChart"></canvas>
                </div>
            </div>

            <!-- Distribution Chart -->
            <div
                class="lg:col-span-4 bg-white border border-gray-100 rounded-[40px] p-10 shadow-sm animate__animated animate__fadeInRight">
                <h3 class="text-2xl font-bold text-gray-900 tracking-tight mb-2">Category Split</h3>
                <p class="text-gray-400 font-medium text-sm mb-12">Product sales by category.</p>
                <div class="h-[250px] flex items-center justify-center">
                    <canvas id="categoryChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Intelligence Tables -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Top Scale Products -->
            <div
                class="bg-white border border-gray-100 rounded-[40px] shadow-sm overflow-hidden animate__animated animate__fadeInUp">
                <div class="p-10 border-b border-gray-50 flex items-center justify-between">
                    <h3 class="text-2xl font-bold text-gray-900 tracking-tight">Top Selling Assets</h3>
                    <span
                        class="px-3 py-1 bg-gray-100 text-gray-400 text-[10px] font-bold rounded-full uppercase tracking-widest">Premium
                        Units</span>
                </div>
                <div class="overflow-x-auto">
                    <table class="w-full text-left">
                        <thead>
                            <tr class="bg-gray-50/50">
                                <th class="px-10 py-5 text-[10px] font-bold text-gray-300 uppercase tracking-widest">
                                    Product</th>
                                <th
                                    class="px-10 py-5 text-[10px] font-bold text-gray-300 uppercase tracking-widest text-right">
                                    Qty</th>
                                <th
                                    class="px-10 py-5 text-[10px] font-bold text-gray-300 uppercase tracking-widest text-right">
                                    Revenue</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-50">
                            <template x-for="product in topProducts" :key="product._id">
                                <tr class="hover:bg-gray-50/30 transition-colors">
                                    <td class="px-10 py-6">
                                        <p class="font-bold text-gray-900 text-sm" x-text="product._id"></p>
                                        <p class="text-[10px] font-bold text-gray-400 uppercase tracking-widest mt-1"
                                            x-text="product.category || 'General'"></p>
                                    </td>
                                    <td class="px-10 py-6 text-right">
                                        <span class="px-2.5 py-1 bg-gray-100 rounded-lg text-xs font-bold text-gray-900"
                                            x-text="product.count"></span>
                                    </td>
                                    <td class="px-10 py-6 text-right font-bold text-gray-900 text-sm">₹<span
                                            x-text="formatNumber(product.revenue)"></span></td>
                                </tr>
                            </template>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Technician Performance -->
            <div class="bg-white border border-gray-100 rounded-[40px] p-10 shadow-sm animate__animated animate__fadeInUp"
                style="animation-delay: 0.1s">
                <div class="flex items-center justify-between mb-10">
                    <h3 class="text-2xl font-bold text-gray-900 tracking-tight">Team Performance</h3>
                    <span
                        class="px-3 py-1 bg-gray-100 text-gray-400 text-[10px] font-bold rounded-full uppercase tracking-widest">Technicians</span>
                </div>
                <div class="space-y-6">
                    <template x-for="(employee, index) in topEmployees" :key="employee.name">
                        <div
                            class="group flex items-center justify-between p-6 bg-gray-50 rounded-[32px] border border-transparent hover:border-gray-200 hover:bg-white hover:shadow-xl hover:shadow-gray-100 transition-all">
                            <div class="flex items-center gap-6">
                                <div class="w-12 h-12 rounded-2xl bg-white shadow-sm flex items-center justify-center text-gray-900 font-bold text-lg"
                                    x-text="index + 1"></div>
                                <div>
                                    <p class="font-bold text-gray-900 text-sm" x-text="employee.name"></p>
                                    <p class="text-[10px] font-bold text-gray-400 uppercase tracking-widest mt-1">Senior
                                        Member</p>
                                </div>
                            </div>
                            <div class="text-right">
                                <p class="text-3xl font-bold text-gray-900 tracking-tighter"
                                    x-text="employee.ticketsClosed"></p>
                                <p class="text-[9px] font-bold text-gray-300 uppercase tracking-widest mt-1">Tickets
                                    Solved</p>
                            </div>
                        </div>
                    </template>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/pages/statistics.js"></script>