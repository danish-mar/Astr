<div class="space-y-6" x-data="leadsData()">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 tracking-tight">Leads</h1>
            <p class="text-gray-500 mt-1">Track potential customers and product interest</p>
        </div>
        <div class="flex items-center gap-3">
            <button @click="openAddModal()"
                class="flex items-center justify-center gap-2 px-6 py-3 bg-gray-900 text-white rounded-2xl font-semibold shadow-lg shadow-gray-200 hover:scale-[1.02] active:scale-[0.98] transition-all">
                <i class="fas fa-plus text-xs"></i>
                <span>Add Lead</span>
            </button>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div
            class="glass p-6 rounded-[28px] border border-gray-100/50 shadow-ios transition-all hover:shadow-ios-hover">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-2xl bg-blue-50 flex items-center justify-center text-blue-600">
                    <i class="fas fa-bullseye text-xl"></i>
                </div>
                <div>
                    <p class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Total Leads</p>
                    <p class="text-2xl font-bold text-gray-900" x-text="stats.total || 0"></p>
                </div>
            </div>
        </div>
        <div
            class="glass p-6 rounded-[28px] border border-gray-100/50 shadow-ios transition-all hover:shadow-ios-hover">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-2xl bg-green-50 flex items-center justify-center text-green-600">
                    <i class="fas fa-check-circle text-xl"></i>
                </div>
                <div>
                    <p class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Won</p>
                    <p class="text-2xl font-bold text-gray-900" x-text="stats.won || 0"></p>
                </div>
            </div>
        </div>
        <div
            class="glass p-6 rounded-[28px] border border-gray-100/50 shadow-ios transition-all hover:shadow-ios-hover">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-2xl bg-red-50 flex items-center justify-center text-red-600">
                    <i class="fas fa-times-circle text-xl"></i>
                </div>
                <div>
                    <p class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Lost</p>
                    <p class="text-2xl font-bold text-gray-900" x-text="stats.lost || 0"></p>
                </div>
            </div>
        </div>
        <div
            class="glass p-6 rounded-[28px] border border-gray-100/50 shadow-ios transition-all hover:shadow-ios-hover">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-2xl bg-orange-50 flex items-center justify-center text-orange-600">
                    <i class="fas fa-percentage text-xl"></i>
                </div>
                <div>
                    <p class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Conversion</p>
                    <p class="text-2xl font-bold text-gray-900" x-text="(stats.conversionRatio || '0.00') + '%'"></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Search -->
    <div
        class="glass p-4 rounded-[24px] border border-gray-100/50 shadow-ios flex flex-col md:flex-row gap-4 items-center">
        <div class="relative flex-1 w-full">
            <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 text-sm"></i>
            <input type="text" x-model="search" @input.debounce.300ms="fetchLeads()"
                placeholder="Search leads by ID, notes, source..."
                class="w-full pl-12 pr-4 py-3 bg-gray-50/50 border border-gray-100 rounded-2xl focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all text-sm">
        </div>
        <div class="flex items-center gap-3 w-full md:w-auto">
            <select x-model="filterStatus" @change="fetchLeads()"
                class="flex-1 md:w-48 px-4 py-3 bg-gray-50/50 border border-gray-100 rounded-2xl focus:ring-2 focus:ring-primary-500 outline-none transition-all text-sm">
                <option value="All">All Status</option>
                <option value="New">New</option>
                <option value="Contacted">Contacted</option>
                <option value="Qualified">Qualified</option>
                <option value="Negotiation">Negotiation</option>
                <option value="Closed Won">Closed Won</option>
                <option value="Closed Lost">Closed Lost</option>
            </select>
        </div>
    </div>

    <!-- Leads List -->
    <div class="glass rounded-[32px] border border-gray-100/50 shadow-ios overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-gray-50">
                        <th class="px-6 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-widest">Lead ID</th>
                        <th class="px-6 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-widest">Customer
                        </th>
                        <th class="px-6 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-widest">Product</th>
                        <th class="px-6 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-widest">Value</th>
                        <th class="px-6 py-5 text-[10px) font-bold text-gray-400 uppercase tracking-widest">Status</th>
                        <th class="px-6 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-widest">Date</th>
                        <th class="px-6 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-widest">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    <template x-for="lead in leads" :key="lead._id">
                        <tr class="hover:bg-gray-50/50 transition-colors group">
                            <td class="px-6 py-4">
                                <span class="text-sm font-bold text-gray-900" x-text="'#' + lead.leadID"></span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex flex-col">
                                    <span class="text-sm font-semibold text-gray-900"
                                        x-text="lead.customer.name"></span>
                                    <span class="text-[11px] text-gray-400" x-text="lead.customer.phone"></span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex flex-col">
                                    <span class="text-sm font-medium text-gray-700" x-text="lead.product.name"></span>
                                    <span class="text-[11px] text-gray-400" x-text="lead.product.productID"></span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-sm font-bold text-gray-900"
                                    x-text="'â‚¹' + (lead.estimatedValue || 0).toLocaleString()"></span>
                            </td>
                            <td class="px-6 py-4">
                                <span :class="{
                                    'bg-blue-50 text-blue-600': lead.status === 'New',
                                    'bg-purple-50 text-purple-600': lead.status === 'Contacted' || lead.status === 'Qualified',
                                    'bg-orange-50 text-orange-600': lead.status === 'Negotiation',
                                    'bg-green-50 text-green-600': lead.status === 'Closed Won',
                                    'bg-red-50 text-red-600': lead.status === 'Closed Lost',
                                }" class="px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-wider"
                                    x-text="lead.status"></span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-[11px] text-gray-500 font-medium"
                                    x-text="new Date(lead.createdAt).toLocaleDateString('en-IN', {day: '2-digit', month: 'short', year: 'numeric'})"></span>
                            </td>
                            <td class="px-6 py-4">
                                <div
                                    class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <button @click="openEditModal(lead)"
                                        class="w-8 h-8 rounded-xl bg-gray-50 flex items-center justify-center text-gray-600 hover:bg-gray-900 hover:text-white transition-all">
                                        <i class="fas fa-edit text-[10px]"></i>
                                    </button>
                                    <button @click="deleteLead(lead._id)"
                                        class="w-8 h-8 rounded-xl bg-gray-50 flex items-center justify-center text-red-400 hover:bg-red-500 hover:text-white transition-all">
                                        <i class="fas fa-trash text-[10px]"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </template>
                </tbody>
            </table>
        </div>

        <!-- Empty State -->
        <div x-show="leads.length === 0" class="py-20 text-center">
            <div class="w-20 h-20 rounded-full bg-gray-50 flex items-center justify-center mx-auto mb-4 text-gray-200">
                <i class="fas fa-bullseye text-3xl"></i>
            </div>
            <h3 class="text-lg font-bold text-gray-900">No leads found</h3>
            <p class="text-gray-500 text-sm max-w-xs mx-auto mt-1">Start tracking potential customers by adding your
                first lead.</p>
        </div>

        <!-- Pagination -->
        <div class="px-6 py-4 border-t border-gray-50 flex items-center justify-between">
            <span class="text-[11px] font-bold text-gray-400 uppercase tracking-widest"
                x-text="'Total: ' + totalLeads"></span>
            <div class="flex items-center gap-2">
                <button @click="page--" :disabled="page === 1"
                    class="w-9 h-9 rounded-xl border border-gray-100 flex items-center justify-center text-gray-400 hover:bg-gray-50 disabled:opacity-50 transition-all">
                    <i class="fas fa-chevron-left text-[10px]"></i>
                </button>
                <div class="px-4 py-2 rounded-xl bg-gray-50 border border-gray-100">
                    <span class="text-xs font-bold text-gray-900" x-text="page"></span>
                </div>
                <button @click="page++" :disabled="page * limit >= totalLeads"
                    class="w-9 h-9 rounded-xl border border-gray-100 flex items-center justify-center text-gray-400 hover:bg-gray-50 disabled:opacity-50 transition-all">
                    <i class="fas fa-chevron-right text-[10px]"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Add/Edit Lead Modal -->
    <div x-show="modalOpen" class="fixed inset-0 z-50 flex items-center justify-center px-4" style="display: none;">
        <div x-show="modalOpen" x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
            class="absolute inset-0 bg-black/20 backdrop-blur-sm" @click="closeModal()"></div>
        <div x-show="modalOpen" x-transition:enter="transition cubic-bezier(0.16, 1, 0.3, 1) duration-300"
            x-transition:enter-start="opacity-0 scale-95 translate-y-4"
            x-transition:enter-end="opacity-100 scale-100 translate-y-0"
            class="relative glass bg-white/95 w-full max-w-lg rounded-[32px] shadow-2xl overflow-hidden">
            <div class="p-8 pb-4 flex items-center justify-between">
                <div>
                    <h2 class="text-2xl font-bold text-gray-900 tracking-tight"
                        x-text="isEdit ? 'Edit Lead' : 'Add New Lead'"></h2>
                    <p class="text-[11px] font-bold text-gray-400 uppercase tracking-widest mt-1">Lead Details</p>
                </div>
                <button @click="closeModal()"
                    class="w-10 h-10 rounded-full bg-gray-50 flex items-center justify-center text-gray-400 hover:bg-gray-900 hover:text-white transition-all">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form @submit.prevent="saveLead" class="p-8 pt-4 space-y-5">
                <!-- Customer Selection -->
                <div class="space-y-1.5">
                    <label class="text-[11px] font-bold text-gray-500 uppercase tracking-widest px-1">Customer</label>
                    <select x-model="formData.customer" required :disabled="isEdit"
                        class="w-full px-5 py-3.5 bg-gray-50/50 border border-gray-100 rounded-2xl focus:ring-2 focus:ring-primary-500 outline-none transition-all text-sm font-medium">
                        <option value="">Select a customer</option>
                        <template x-for="c in customers" :key="c._id">
                            <option :value="c._id" x-text="c.name + ' (' + c.phone + ')'"></option>
                        </template>
                    </select>
                </div>

                <!-- Product Selection -->
                <div class="space-y-1.5">
                    <label class="text-[11px] font-bold text-gray-500 uppercase tracking-widest px-1">Interested
                        Product</label>
                    <select x-model="formData.product" required :disabled="isEdit"
                        class="w-full px-5 py-3.5 bg-gray-50/50 border border-gray-100 rounded-2xl focus:ring-2 focus:ring-primary-500 outline-none transition-all text-sm font-medium">
                        <option value="">Select a product</option>
                        <template x-for="p in products" :key="p._id">
                            <option :value="p._id" x-text="p.name + ' (#' + p.productID + ')'"></option>
                        </template>
                    </select>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <!-- Status -->
                    <div class="space-y-1.5">
                        <label class="text-[11px] font-bold text-gray-500 uppercase tracking-widest px-1">Status</label>
                        <select x-model="formData.status"
                            class="w-full px-5 py-3.5 bg-gray-50/50 border border-gray-100 rounded-2xl focus:ring-2 focus:ring-primary-500 outline-none transition-all text-sm font-medium">
                            <option value="New">New</option>
                            <option value="Contacted">Contacted</option>
                            <option value="Qualified">Qualified</option>
                            <option value="Negotiation">Negotiation</option>
                            <option value="Closed Won">Closed Won</option>
                            <option value="Closed Lost">Closed Lost</option>
                        </select>
                    </div>
                    <!-- Estimated Value -->
                    <div class="space-y-1.5">
                        <label class="text-[11px] font-bold text-gray-500 uppercase tracking-widest px-1">Estimated
                            Value</label>
                        <input type="number" x-model="formData.estimatedValue" placeholder="0.00"
                            class="w-full px-5 py-3.5 bg-gray-50/50 border border-gray-100 rounded-2xl focus:ring-2 focus:ring-primary-500 outline-none transition-all text-sm font-medium">
                    </div>
                </div>

                <!-- Source -->
                <div class="space-y-1.5">
                    <label class="text-[11px] font-bold text-gray-500 uppercase tracking-widest px-1">Source</label>
                    <input type="text" x-model="formData.source" placeholder="Walk-in, Website, Referral..."
                        class="w-full px-5 py-3.5 bg-gray-50/50 border border-gray-100 rounded-2xl focus:ring-2 focus:ring-primary-500 outline-none transition-all text-sm font-medium">
                </div>

                <!-- Notes -->
                <div class="space-y-1.5">
                    <label class="text-[11px] font-bold text-gray-500 uppercase tracking-widest px-1">Notes</label>
                    <textarea x-model="formData.notes" rows="3" placeholder="Additional details..."
                        class="w-full px-5 py-3.5 bg-gray-50/50 border border-gray-100 rounded-2xl focus:ring-2 focus:ring-primary-500 outline-none transition-all text-sm font-medium resize-none"></textarea>
                </div>

                <!-- Form Actions -->
                <div class="flex items-center gap-3 pt-4">
                    <button type="button" @click="closeModal()"
                        class="flex-1 px-6 py-4 rounded-2xl bg-gray-50 text-gray-600 font-bold text-sm hover:bg-gray-100 transition-all">
                        Cancel
                    </button>
                    <button type="submit"
                        class="flex-[2] px-6 py-4 rounded-2xl bg-gray-900 text-white font-bold text-sm shadow-xl shadow-gray-200 hover:scale-[1.02] active:scale-[0.98] transition-all">
                        <span x-text="isEdit ? 'Update Lead' : 'Create Lead'"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/pages/leads.js"></script>