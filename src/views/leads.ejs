<div class="space-y-6" x-data="leadsData()">
    <!-- SHARP MINIMAL HEADER -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 tracking-tight uppercase">Leads Gateway</h1>
            <p class="text-[9px] font-black text-slate-400 mt-1 uppercase tracking-widest">Track Customer Interest</p>
        </div>
        <button @click="openAddModal()"
            class="inline-flex items-center px-6 py-2 bg-primary-600 text-white text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-primary-700 shadow-xl shadow-primary-200 transition-all active:scale-95 gap-2">
            <i class="fas fa-plus text-xs"></i>
            <span>Add Lead</span>
        </button>
    </div>

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white border border-slate-200 p-6 rounded-[24px] shadow-sm hover:shadow-lg transition-all">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-slate-50 flex items-center justify-center text-slate-600">
                    <i class="fas fa-bullseye text-lg"></i>
                </div>
                <div>
                    <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Total Leads</p>
                    <p class="text-2xl font-bold text-slate-900" x-text="stats.total || 0"></p>
                </div>
            </div>
        </div>
        <div class="bg-white border border-slate-200 p-6 rounded-[24px] shadow-sm hover:shadow-lg transition-all">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-emerald-50 flex items-center justify-center text-emerald-600">
                    <i class="fas fa-check-circle text-lg"></i>
                </div>
                <div>
                    <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Won</p>
                    <p class="text-2xl font-bold text-slate-900" x-text="stats.won || 0"></p>
                </div>
            </div>
        </div>
        <div class="bg-white border border-slate-200 p-6 rounded-[24px] shadow-sm hover:shadow-lg transition-all">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-rose-50 flex items-center justify-center text-rose-600">
                    <i class="fas fa-times-circle text-lg"></i>
                </div>
                <div>
                    <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Lost</p>
                    <p class="text-2xl font-bold text-slate-900" x-text="stats.lost || 0"></p>
                </div>
            </div>
        </div>
        <div class="bg-white border border-slate-200 p-6 rounded-[24px] shadow-sm hover:shadow-lg transition-all">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-primary-50 flex items-center justify-center text-primary-600">
                    <i class="fas fa-percentage text-lg"></i>
                </div>
                <div>
                    <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Conversion</p>
                    <p class="text-2xl font-bold text-slate-900" x-text="(stats.conversionRatio || '0.00') + '%'"></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Search -->
    <div class="bg-white border border-slate-200 p-4 rounded-xl shadow-sm flex flex-col md:flex-row gap-4 items-center">
        <div class="relative flex-1 w-full">
            <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 text-sm"></i>
            <input type="text" x-model="search" @input.debounce.300ms="fetchLeads()"
                placeholder="Search leads by ID, notes, source..."
                class="w-full pl-12 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary-200 focus:border-primary-300 outline-none transition-all text-sm">
        </div>
        <div class="flex items-center gap-3 w-full md:w-auto flex-wrap">
            <select x-model="filterStatus" @change="fetchLeads()"
                class="flex-1 md:w-44 px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary-200 outline-none transition-all text-sm">
                <option value="All">All Status</option>
                <option value="New">New</option>
                <option value="Contacted">Contacted</option>
                <option value="Qualified">Qualified</option>
                <option value="Negotiation">Negotiation</option>
                <option value="Closed Won">Closed Won</option>
                <option value="Closed Lost">Closed Lost</option>
            </select>
            <input type="date" x-model="filterDate" @change="fetchLeads()"
                class="px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary-200 outline-none transition-all text-sm w-44"
                placeholder="Filter by Date">
            <button @click="clearFilters()" 
                class="px-4 py-3 bg-slate-100 text-slate-600 rounded-lg text-[9px] font-black uppercase tracking-widest hover:bg-slate-200 transition-all">
                <i class="fas fa-times mr-1"></i> Clear
            </button>
        </div>
    </div>

    <!-- Leads Table -->
    <div class="bg-white border border-slate-200 rounded-[24px] shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-slate-100 bg-slate-50">
                        <th class="px-6 py-4 text-[9px] font-black text-slate-400 uppercase tracking-widest">Lead ID</th>
                        <th class="px-6 py-4 text-[9px] font-black text-slate-400 uppercase tracking-widest">Customer</th>
                        <th class="px-6 py-4 text-[9px] font-black text-slate-400 uppercase tracking-widest">Product</th>
                        <th class="px-6 py-4 text-[9px] font-black text-slate-400 uppercase tracking-widest">Value</th>
                        <th class="px-6 py-4 text-[9px] font-black text-slate-400 uppercase tracking-widest">Status</th>
                        <th class="px-6 py-4 text-[9px] font-black text-slate-400 uppercase tracking-widest">Date</th>
                        <th class="px-6 py-4 text-[9px] font-black text-slate-400 uppercase tracking-widest">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    <template x-for="lead in leads" :key="lead._id">
                        <tr class="hover:bg-slate-50 transition-colors group">
                            <td class="px-6 py-4">
                                <span class="text-sm font-bold text-slate-900" x-text="'#' + lead.leadID"></span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex flex-col">
                                    <span class="text-sm font-semibold text-slate-900" x-text="lead.customer.name"></span>
                                    <span class="text-[11px] text-slate-400" x-text="lead.customer.phone"></span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex flex-col">
                                    <span class="text-sm font-medium text-slate-700" x-text="lead.product.name"></span>
                                    <span class="text-[11px] text-slate-400" x-text="lead.product.productID"></span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-sm font-bold text-slate-900"
                                    x-text="'₹' + (lead.estimatedValue || 0).toLocaleString()"></span>
                            </td>
                            <td class="px-6 py-4">
                                <span :class="{
                                    'bg-slate-100 text-slate-600': lead.status === 'New',
                                    'bg-primary-50 text-primary-600': lead.status === 'Contacted' || lead.status === 'Qualified',
                                    'bg-amber-50 text-amber-600': lead.status === 'Negotiation',
                                    'bg-emerald-50 text-emerald-600': lead.status === 'Closed Won',
                                    'bg-rose-50 text-rose-600': lead.status === 'Closed Lost',
                                }" class="px-3 py-1 rounded-lg text-[9px] font-black uppercase tracking-wider"
                                    x-text="lead.status"></span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-[11px] text-slate-500 font-medium"
                                    x-text="new Date(lead.createdAt).toLocaleDateString('en-IN', {day: '2-digit', month: 'short', year: 'numeric'})"></span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <button @click="openEditModal(lead)"
                                        class="w-8 h-8 rounded-lg bg-slate-50 flex items-center justify-center text-slate-600 hover:bg-primary-600 hover:text-white transition-all">
                                        <i class="fas fa-edit text-[10px]"></i>
                                    </button>
                                    <button @click="deleteLead(lead._id)"
                                        class="w-8 h-8 rounded-lg bg-slate-50 flex items-center justify-center text-rose-400 hover:bg-rose-500 hover:text-white transition-all">
                                        <i class="fas fa-trash text-[10px]"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </template>
                </tbody>
            </table>
        </div>

        <!-- Empty State -->
        <div x-show="leads.length === 0" class="py-20 text-center">
            <div class="w-20 h-20 rounded-xl bg-slate-50 flex items-center justify-center mx-auto mb-4 text-slate-200">
                <i class="fas fa-bullseye text-3xl"></i>
            </div>
            <h3 class="text-lg font-bold text-slate-900 uppercase tracking-tight">No Leads Found</h3>
            <p class="text-slate-500 text-sm max-w-xs mx-auto mt-1">Start tracking potential customers by adding your first lead.</p>
        </div>

        <!-- Pagination -->
        <div class="px-6 py-4 border-t border-slate-100 flex items-center justify-between">
            <span class="text-[9px] font-black text-slate-400 uppercase tracking-widest"
                x-text="'Total: ' + totalLeads"></span>
            <div class="flex items-center gap-2">
                <button @click="page--" :disabled="page === 1"
                    class="w-9 h-9 rounded-lg border border-slate-200 flex items-center justify-center text-slate-400 hover:bg-slate-50 disabled:opacity-50 transition-all">
                    <i class="fas fa-chevron-left text-[10px]"></i>
                </button>
                <div class="px-4 py-2 rounded-lg bg-slate-50 border border-slate-200">
                    <span class="text-xs font-bold text-slate-900" x-text="page"></span>
                </div>
                <button @click="page++" :disabled="page * limit >= totalLeads"
                    class="w-9 h-9 rounded-lg border border-slate-200 flex items-center justify-center text-slate-400 hover:bg-slate-50 disabled:opacity-50 transition-all">
                    <i class="fas fa-chevron-right text-[10px]"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Add/Edit Lead Modal (LANDSCAPE DUAL-VIEW) -->
    <div x-show="modalOpen" class="fixed inset-0 z-[70] flex items-center justify-center px-4" style="display: none;">
        <div x-show="modalOpen" x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
            class="absolute inset-0 bg-slate-900/60 transition-opacity" @click="closeModal()"></div>
        
        <div x-show="modalOpen" x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0 scale-95 translate-y-8"
            x-transition:enter-end="opacity-100 scale-100 translate-y-0"
            class="relative bg-white w-full max-w-5xl rounded-[24px] shadow-2xl overflow-hidden flex flex-col md:flex-row min-h-[520px]">
            
            <!-- LEFT: LEAD TARGET (40%) -->
            <div class="md:w-[40%] bg-slate-50 p-8 border-r border-slate-100 flex flex-col">
                <div class="mb-8">
                    <div class="w-12 h-12 rounded-xl bg-primary-600 text-white flex items-center justify-center mb-4 shadow-lg shadow-primary-200">
                        <i class="fas fa-bullseye text-xl"></i>
                    </div>
                    <h2 class="text-2xl font-bold text-slate-900 tracking-tight uppercase" x-text="isEdit ? 'Update Lead' : 'Create Lead'"></h2>
                    <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mt-1">Lead Analysis & Data</p>
                </div>

                <div class="space-y-6 flex-1">
                    <!-- Customer Selection -->
                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Target Customer</label>
                        <select x-model="formData.customer" required :disabled="isEdit"
                            class="w-full px-4 py-3 bg-white border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary-200 outline-none transition-all text-sm font-bold text-slate-900 appearance-none shadow-sm">
                            <option value="">Select a customer</option>
                            <template x-for="c in customers" :key="c._id">
                                <option :value="c._id" x-text="c.name + ' (' + c.phone + ')'"></option>
                            </template>
                        </select>
                    </div>

                    <!-- Product Selection -->
                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Interested Product</label>
                        <select x-model="formData.product" required :disabled="isEdit"
                            class="w-full px-4 py-3 bg-white border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary-200 outline-none transition-all text-sm font-bold text-slate-900 appearance-none shadow-sm">
                            <option value="">Select a product</option>
                            <template x-for="p in products" :key="p._id">
                                <option :value="p._id" x-text="p.name + ' (#' + p.productID + ')'"></option>
                            </template>
                        </select>
                    </div>

                    <div class="p-4 bg-emerald-50 border border-emerald-100 rounded-xl pt-10 mt-auto">
                        <p class="text-[10px] font-black text-emerald-600 uppercase tracking-widest mb-1">Lead Probability</p>
                        <p class="text-xs text-emerald-800 leading-tight">Data will be used to calculate conversion ratios and sales forecasting.</p>
                    </div>
                </div>
            </div>

            <!-- RIGHT: PROPOSAL DETAILS (60%) -->
            <form @submit.prevent="saveLead" class="md:w-[60%] p-8 flex flex-col bg-white">
                <button type="button" @click="closeModal()" class="absolute top-6 right-6 w-10 h-10 rounded-lg bg-slate-50 flex items-center justify-center text-slate-400 hover:bg-slate-900 hover:text-white transition-all z-10">
                    <i class="fas fa-times"></i>
                </button>

                <div class="grid grid-cols-2 gap-6 mb-6">
                    <!-- Status -->
                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Pipeline Status</label>
                        <select x-model="formData.status"
                            class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary-200 outline-none transition-all text-sm font-bold text-slate-900">
                            <option value="New">New</option>
                            <option value="Contacted">Contacted</option>
                            <option value="Qualified">Qualified</option>
                            <option value="Negotiation">Negotiation</option>
                            <option value="Closed Won">Closed Won</option>
                            <option value="Closed Lost">Closed Lost</option>
                        </select>
                    </div>
                    <!-- Estimated Value -->
                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Estimated Value</label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 font-bold text-sm">₹</span>
                            <input type="number" x-model="formData.estimatedValue" placeholder="0.00"
                                class="w-full pl-9 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary-200 outline-none transition-all text-sm font-bold text-slate-900">
                        </div>
                    </div>
                </div>

                <!-- Source -->
                <div class="space-y-2 mb-6">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Lead Source</label>
                    <input type="text" x-model="formData.source" placeholder="Walk-in, Website, Referral..."
                        class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary-200 outline-none transition-all text-sm font-bold text-slate-900">
                </div>

                <!-- Notes -->
                <div class="space-y-2 flex-1">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Internal Notes</label>
                    <textarea x-model="formData.notes" rows="4" placeholder="Additional details or context..."
                        class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-primary-200 outline-none transition-all text-sm font-medium resize-none h-full max-h-[140px] text-slate-700"></textarea>
                </div>

                <!-- Form Actions -->
                <div class="flex items-center gap-4 mt-8">
                    <button type="button" @click="closeModal()"
                        class="flex-1 px-8 py-3 rounded-xl bg-slate-50 text-slate-600 font-black text-[10px] uppercase tracking-widest hover:bg-slate-100 transition-all border border-slate-200">
                        Discard Changes
                    </button>
                    <button type="submit"
                        class="flex-[2] px-8 py-3 rounded-xl bg-slate-900 text-white font-black text-[10px] uppercase tracking-widest shadow-xl shadow-slate-200 hover:bg-black active:scale-95 transition-all">
                        <span x-text="isEdit ? 'Confirm Update' : 'Initialize Lead'"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/pages/leads.js"></script>