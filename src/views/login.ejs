<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Login - Astr</title>

  <!-- Google Fonts: Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Font Awesome 6 -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

  <!-- Animate.css -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

  <!-- Alpine.js -->
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.3/dist/cdn.min.js"></script>

  <!-- Axios -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

  <!-- Custom API Utility -->
  <script src="/js/utils/api.js"></script>

  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter', '-apple-system', 'BlinkMacSystemFont', 'sans-serif'],
          },
          colors: {
            primary: {
              50: "#f5f3ff",
              100: "#ede9fe",
              200: "#ddd6fe",
              300: "#c4b5fd",
              400: "#a78bfa",
              500: "#8b5cf6",
              600: "#7c3aed",
              700: "#6d28d9",
              800: "#5b21b6",
              900: "#4c1d95",
            },
            slate: {
              50: "#f8fafc",
              100: "#f1f5f9",
              200: "#e2e8f0",
              300: "#cbd5e1",
              400: "#94a3b8",
              500: "#64748b",
              600: "#475569",
              700: "#334155",
              800: "#1e293b",
              900: "#0f172a",
            }
          }
        }
      }
    }
  </script>
</head>

<body class="bg-slate-50 min-h-screen flex items-center justify-center p-6 font-sans">

  <!-- Login Card -->
  <div
    class="w-full max-w-md bg-white border border-slate-200 rounded-[24px] shadow-2xl shadow-slate-200/50 p-10 md:p-12 relative z-10 animate__animated animate__fadeInUp">

    <!-- Branding -->
    <div class="text-center mb-10">
      <div
        class="w-16 h-16 bg-slate-900 rounded-xl flex items-center justify-center mx-auto mb-6 shadow-lg shadow-slate-300 transform transition-transform hover:scale-110 duration-300">
        <i class="fas fa-ghost text-2xl text-white"></i>
      </div>
      <div class="flex items-center justify-center gap-2 mb-3">
        <span
          class="px-2.5 py-0.5 bg-slate-100 text-slate-500 text-[9px] font-black rounded-lg tracking-widest uppercase">System
          Alpha</span>
        <div class="w-1 h-1 rounded-full bg-slate-300"></div>
        <span class="text-[9px] font-black text-slate-400 uppercase tracking-widest">v<%= version %></span>
      </div>
      <h1 class="text-3xl font-bold text-slate-900 tracking-tight mb-3 uppercase">Astr Protocol</h1>
      <p class="text-slate-400 font-medium text-sm leading-relaxed">Authenticate to access the system</p>
    </div>

    <!-- Authentication Form -->
    <form id="loginForm" class="space-y-6" x-data="loginForm()" @submit.prevent="submit">

      <div class="space-y-3">
        <label for="username" class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Username</label>
        <div class="relative group">
          <div
            class="absolute inset-y-0 left-4 flex items-center pointer-events-none text-slate-300 group-focus-within:text-slate-900 transition-colors">
            <i class="fas fa-user text-sm"></i>
          </div>
          <input type="text" id="username" x-model="username" required
            class="block w-full pl-12 pr-4 py-3.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 font-medium placeholder-slate-300 focus:ring-2 focus:ring-primary-200 focus:bg-white focus:border-primary-300 outline-none transition-all"
            placeholder="Enter username">
        </div>
      </div>

      <div class="space-y-3">
        <label for="password" class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Password</label>
        <div class="relative group">
          <div
            class="absolute inset-y-0 left-4 flex items-center pointer-events-none text-slate-300 group-focus-within:text-slate-900 transition-colors">
            <i class="fas fa-lock text-sm"></i>
          </div>
          <input type="password" id="password" x-model="password" required
            class="block w-full pl-12 pr-4 py-3.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 font-medium placeholder-slate-300 focus:ring-2 focus:ring-primary-200 focus:bg-white focus:border-primary-300 outline-none transition-all"
            placeholder="••••••••">
        </div>
      </div>

      <div class="pt-4">
        <button type="submit"
          class="w-full flex items-center justify-center gap-3 py-4 bg-slate-900 text-white rounded-xl text-[9px] font-black uppercase tracking-widest shadow-lg shadow-slate-200 hover:bg-slate-800 active:scale-[0.97] disabled:opacity-50 disabled:cursor-not-allowed transition-all"
          :disabled="loading">
          <span x-show="!loading" class="flex items-center gap-2">
            Sign In
            <i class="fas fa-arrow-right text-[10px] transition-transform group-hover:translate-x-1"></i>
          </span>
          <span x-show="loading" class="flex items-center">
            <i class="fas fa-spinner fa-spin mr-2"></i>
            Verifying...
          </span>
        </button>
      </div>
    </form>

    <!-- Footer -->
    <div class="mt-10 text-center">
      <p class="text-[10px] font-bold text-slate-400 tracking-wide">
        Restricted access. Contact
        <a href="#"
          class="text-slate-900 underline hover:text-primary-600 transition-colors decoration-slate-200 underline-offset-4">support</a>
        if needed
      </p>
    </div>
  </div>

  <!-- Notifications Container -->
  <div class="fixed top-6 right-6 z-[100] space-y-3 pointer-events-none" x-data="{ notifications: [] }"
    @notification.window="notifications.push($event.detail); setTimeout(() => notifications.shift(), 3000)">
    <template x-for="notification in notifications" :key="notification.id">
      <div
        class="pointer-events-auto min-w-[320px] max-w-sm bg-white rounded-xl shadow-lg border border-slate-200 p-4 flex items-start space-x-3 animate__animated animate__fadeInRight">
        <div class="flex-shrink-0 pt-0.5">
          <i x-show="notification.type === 'success'" class="fas fa-check-circle text-emerald-500 text-xl"></i>
          <i x-show="notification.type === 'error'" class="fas fa-exclamation-circle text-rose-500 text-xl"></i>
        </div>
        <div class="flex-1">
          <p class="text-sm font-medium text-slate-900" x-text="notification.message"></p>
        </div>
      </div>
    </template>
  </div>

  <script>
    function loginForm() {
      return {
        username: '',
        password: '',
        loading: false,
        async submit() {
          this.loading = true;
          try {
            // Use the global API utility
            const response = await window.api.post('/employees/login', {
              username: this.username,
              password: this.password
            });

            // Store token and user data
            localStorage.setItem('astr_token', response.data.token);
            localStorage.setItem('astr_user', JSON.stringify(response.data.employee));

            // Show success notification
            window.dispatchEvent(new CustomEvent('notification', {
              detail: { id: Date.now(), message: 'Login successful! Redirecting...', type: 'success' }
            }));

            // Redirect to dashboard
            setTimeout(() => {
              window.location.href = '/dashboard';
            }, 1000);

          } catch (error) {
            console.error('Login error:', error);
            const message = error.response?.data?.message || 'Login failed. Please check your credentials.';
            window.dispatchEvent(new CustomEvent('notification', {
              detail: { id: Date.now(), message: message, type: 'error' }
            }));
          } finally {
            this.loading = false;
          }
        }
      }
    }
  </script>
</body>

</html>