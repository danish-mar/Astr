<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Login - Astr</title>

  <!-- Google Fonts: Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Font Awesome 6 -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

  <!-- Animate.css -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

  <!-- Alpine.js -->
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.3/dist/cdn.min.js"></script>

  <!-- Axios -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

  <!-- Custom API Utility -->
  <script src="/js/utils/api.js"></script>

  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter', '-apple-system', 'BlinkMacSystemFont', 'sans-serif'],
          },
          colors: {
            primary: {
              50: "#f2f8ff",
              100: "#e6f1ff",
              200: "#cce4ff",
              300: "#99c9ff",
              400: "#66adff",
              500: "#007aff", // Apple Blue
              600: "#0062cc",
              700: "#004999",
              800: "#003166",
              900: "#001833",
            },
            gray: {
              50: "#f9fafb",
              100: "#f3f4f6",
              200: "#e5e7eb",
              300: "#d1d5db",
              400: "#9ca3af",
              500: "#6b7280",
              600: "#4b5563",
              700: "#374151",
              800: "#1f2937",
              900: "#111827",
            }
          },
          boxShadow: {
            'ios': '0 4px 20px -5px rgba(0, 0, 0, 0.05)',
            'glass': '0 8px 32px 0 rgba(31, 38, 135, 0.07)',
          }
        }
      }
    }
  </script>

  <style>
    .glass {
      background: rgba(255, 255, 255, 0.75);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.5);
    }
  </style>
</head>

<body class="bg-[#f9fafb] min-h-screen flex items-center justify-center p-6 relative overflow-hidden font-sans">

  <!-- Background Atmospheric Elements -->
  <div
    class="absolute -top-[20%] -left-[10%] w-[60%] h-[60%] bg-blue-100/40 rounded-full blur-[120px] animate__animated animate__pulse animate__infinite animate__slow">
  </div>
  <div
    class="absolute -bottom-[20%] -right-[10%] w-[60%] h-[60%] bg-purple-100/40 rounded-full blur-[120px] animate__animated animate__pulse animate__infinite animate__slow"
    style="animation-delay: 2s"></div>

  <!-- Login Canvas -->
  <div
    class="w-full max-w-[480px] bg-white border border-gray-100 rounded-[48px] shadow-2xl shadow-gray-200/50 p-12 md:p-16 relative z-10 animate__animated animate__fadeInUp">

    <!-- Premium Branding -->
    <div class="text-center mb-12">
      <div
        class="w-20 h-20 bg-gray-900 rounded-[28px] flex items-center justify-center mx-auto mb-8 shadow-2xl shadow-gray-300 transform transition-transform hover:scale-110 duration-500">
        <i class="fas fa-ghost text-3xl text-white"></i>
      </div>
      <div class="flex items-center justify-center gap-2 mb-3">
        <span
          class="px-2.5 py-0.5 bg-gray-100 text-gray-500 text-[9px] font-black rounded-full tracking-widest uppercase">System
          Alpha</span>
        <div class="w-1 h-1 rounded-full bg-gray-300"></div>
        <span class="text-[9px] font-black text-gray-400 uppercase tracking-widest">v2.4.0</span>
      </div>
      <h1 class="text-4xl font-black text-gray-900 tracking-tighter mb-4">Astr Protocol</h1>
      <p class="text-gray-400 font-medium text-lg leading-relaxed px-4">Authenticate your credentials to access the
        operational bridge</p>
    </div>

    <!-- Authentication Form -->
    <form id="loginForm" class="space-y-8" x-data="loginForm()" @submit.prevent="submit">

      <div class="space-y-3">
        <label for="username" class="text-[10px] font-black text-gray-400 uppercase tracking-widest ml-1">Personnel
          Identifier</label>
        <div class="relative group">
          <div
            class="absolute inset-y-0 left-6 flex items-center pointer-events-none text-gray-300 group-focus-within:text-gray-900 transition-colors">
            <i class="fas fa-fingerprint text-sm"></i>
          </div>
          <input type="text" id="username" x-model="username" required
            class="block w-full pl-14 pr-6 py-5 bg-gray-50 border border-transparent rounded-[24px] text-gray-900 font-bold placeholder-gray-300 focus:ring-4 focus:ring-blue-50 focus:bg-white focus:border-blue-100 outline-none transition-all duration-300"
            placeholder="ID / Username">
        </div>
      </div>

      <div class="space-y-3">
        <label for="password" class="text-[10px] font-black text-gray-400 uppercase tracking-widest ml-1">Access
          Cipher</label>
        <div class="relative group">
          <div
            class="absolute inset-y-0 left-6 flex items-center pointer-events-none text-gray-300 group-focus-within:text-gray-900 transition-colors">
            <i class="fas fa-shield-alt text-sm"></i>
          </div>
          <input type="password" id="password" x-model="password" required
            class="block w-full pl-14 pr-6 py-5 bg-gray-50 border border-transparent rounded-[24px] text-gray-900 font-bold placeholder-gray-300 focus:ring-4 focus:ring-blue-50 focus:bg-white focus:border-blue-100 outline-none transition-all duration-300"
            placeholder="••••••••">
        </div>
      </div>

      <div class="pt-4">
        <button type="submit"
          class="w-full flex items-center justify-center gap-4 py-5 bg-gray-900 text-white rounded-[26px] text-xs font-black uppercase tracking-[0.2em] shadow-2xl shadow-gray-200 hover:bg-black active:scale-[0.97] disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-500"
          :disabled="loading">
          <span x-show="!loading" class="flex items-center gap-3">
            Initiate Sequence
            <i class="fas fa-arrow-right text-[10px] transition-transform group-hover:translate-x-1"></i>
          </span>
          <span x-show="loading" class="flex items-center">
            <i class="fas fa-spinner fa-spin mr-3"></i>
            Verifying...
          </span>
        </button>
      </div>
    </form>

    <!-- Dynamic Feedback -->
    <div class="mt-12 text-center">
      <p class="text-[11px] font-bold text-gray-400 tracking-wide">
        Restricted access. In case of disruption,
        <a href="#"
          class="text-gray-900 underline hover:text-blue-600 transition-colors decoration-gray-200 underline-offset-4">contact
          site command</a>
      </p>
    </div>
  </div>

  <!-- Notifications Container (Local for Login) -->
  <div class="fixed top-6 right-6 z-[100] space-y-3 pointer-events-none" x-data="{ notifications: [] }"
    @notification.window="notifications.push($event.detail); setTimeout(() => notifications.shift(), 3000)">
    <template x-for="notification in notifications" :key="notification.id">
      <div
        class="pointer-events-auto min-w-[320px] max-w-sm glass bg-white/90 rounded-2xl shadow-ios p-4 flex items-start space-x-3 border border-white/50 animate__animated animate__fadeInRight">
        <div class="flex-shrink-0 pt-0.5">
          <i x-show="notification.type === 'success'" class="fas fa-check-circle text-green-500 text-xl"></i>
          <i x-show="notification.type === 'error'" class="fas fa-exclamation-circle text-red-500 text-xl"></i>
        </div>
        <div class="flex-1">
          <p class="text-sm font-medium text-gray-900" x-text="notification.message"></p>
        </div>
      </div>
    </template>
  </div>

  <script>
    function loginForm() {
      return {
        username: '',
        password: '',
        loading: false,
        async submit() {
          this.loading = true;
          try {
            // Use the global API utility
            const response = await window.api.post('/employees/login', {
              username: this.username,
              password: this.password
            });

            // Store token and user data
            localStorage.setItem('astr_token', response.data.token);
            localStorage.setItem('astr_user', JSON.stringify(response.data.employee));

            // Show success notification
            window.dispatchEvent(new CustomEvent('notification', {
              detail: { id: Date.now(), message: 'Login successful! Redirecting...', type: 'success' }
            }));

            // Redirect to dashboard
            setTimeout(() => {
              window.location.href = '/dashboard';
            }, 1000);

          } catch (error) {
            console.error('Login error:', error);
            const message = error.response?.data?.message || 'Login failed. Please check your credentials.';
            window.dispatchEvent(new CustomEvent('notification', {
              detail: { id: Date.now(), message: message, type: 'error' }
            }));
          } finally {
            this.loading = false;
          }
        }
      }
    }
  </script>
</body>

</html>