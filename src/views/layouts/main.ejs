  <!-- Alpine.js Data -->
  <script>
    (function () {
      const initStore = () => {
        Alpine.store('app', {
          token: localStorage.getItem('astr_token'),
          user: null,

          init() {
            const userStr = localStorage.getItem('astr_user');
            if (userStr) {
              try {
                this.user = JSON.parse(userStr);
              } catch (e) {
                this.user = { name: 'User', email: '' };
              }
            }

            // Check auth on protected pages
            if (!this.token && !window.location.pathname.includes('/login')) {
              window.location.href = '/login';
            }
          },

          async api(endpoint, method = 'GET', data = null) {
            const config = {
              method,
              url: `/api/v1${endpoint}`,
              headers: {
                'Content-Type': 'application/json',
              }
            };

            if (this.token) {
              config.headers['Authorization'] = `Bearer ${this.token}`;
            }

            if (data) {
              config.data = data;
            }

            try {
              const response = await axios(config);
              return response.data;
            } catch (error) {
              console.error('API Error:', error);
              if (error.response?.status === 401) {
                this.logout();
              }
              throw error;
            }
          },

          logout() {
            localStorage.removeItem('astr_token');
            localStorage.removeItem('astr_user');
            this.token = null;
            this.user = null;
            window.location.href = '/login';
          },

          // Notifications
          notifications: [],
          notify(message, type = 'success') {
            const id = Date.now();
            this.notifications.push({ id, message, type });
            setTimeout(() => {
              this.notifications = this.notifications.filter(n => n.id !== id);
            }, 3000);
          },

          // Confirmation Modal
          confirmModal: {
            show: false,
            title: '',
            message: '',
            callback: null
          },
          confirm(title, message, callback) {
            this.confirmModal = {
              show: true,
              title,
              message,
              callback
            };
          },
          closeConfirm() {
            this.confirmModal.show = false;
            this.confirmModal.callback = null;
          },
          onConfirm() {
            if (this.confirmModal.callback) {
              this.confirmModal.callback();
            }
            this.closeConfirm();
          }
        });
      };

      if (window.Alpine) {
        initStore();
      } else {
        document.addEventListener('alpine:init', initStore);
      }
    })();

    document.addEventListener('alpine:init', () => {
      Alpine.data('appData', () => ({
        sidebarOpen: false,
        
        // Global Search State
        searchQuery: '',
        searchResults: { tickets: [], contacts: [], products: [] },
        isSearching: false,
        showSearchDropdown: false,
        searchDebounce: null,

        // Notifications
        showNotificationsDropdown: false,
        notifications: [
          { id: 1, title: 'New Ticket Assigned', message: 'Lead #LT6W2Q was converted to Ticket #TAG-9921', time: '2M AGO', type: 'info', icon: 'fas fa-ticket-alt', read: false },
          { id: 2, title: 'Payment Confirmed', message: 'Payment for TAG #9281 confirmed by Accountant', time: '1H AGO', type: 'success', icon: 'fas fa-check-circle', read: false },
          { id: 3, title: 'Low Stock Alert', message: 'Samsung Galaxy S23 Ultra is below threshold (2 left)', time: '3H AGO', type: 'warning', icon: 'fas fa-exclamation-triangle', read: true },
          { id: 4, title: 'New System Lead', message: 'Inquiry received for iPhone 15 Pro via Website', time: '5H AGO', type: 'info', icon: 'fas fa-bullseye', read: true }
        ],

        get unreadCount() {
          return this.notifications.filter(n => !n.read).length;
        },

        markAllAsRead() {
          this.notifications.forEach(n => n.read = true);
        },
        menuGroups: [
          {
            title: 'General',
            icon: 'fas fa-th-large',
            items: [
              { label: 'Main Dashboard', href: '/dashboard', icon: 'fas fa-home' }
            ]
          },
          {
            title: 'Repairs & Bills',
            icon: 'fas fa-tools',
            items: [
              { label: 'New Repairs', href: '/service-tickets', icon: 'fas fa-wrench', permission: 'tickets:read' },
              { label: 'Shop Accounts', href: '/accounting', icon: 'fas fa-indian-rupee-sign', permission: 'accounting:read' }
            ]
          },
          {
            title: 'Shop Stock',
            icon: 'fas fa-boxes-stacked',
            items: [
              { label: 'All Items', href: '/products', icon: 'fas fa-box-open', permission: 'products:read' },
              { label: 'Item Groups', href: '/categories', icon: 'fas fa-layer-group', permission: 'products:read' }
            ]
          },
          {
            title: 'Party & Sales',
            icon: 'fas fa-user-group',
            items: [
              { label: 'New Deals', href: '/leads', icon: 'fas fa-star', permission: 'leads:read' },
              { label: 'Party List', href: '/contacts', icon: 'fas fa-address-book', permission: 'contacts:read' }
            ]
          },
          {
            title: 'My Shop',
            icon: 'fas fa-gear',
            items: [
              { label: 'My Workers', href: '/team', icon: 'fas fa-users-gear', permission: 'settings:manage' },
              { label: 'Shop Settings', href: '/settings', icon: 'fas fa-sliders-h', permission: 'settings:manage' }
            ]
          }
        ],

        expandedGroups: [],
        isSidebarCollapsed: false,

        init() {
          // Check localStorage for saved state
          const savedState = localStorage.getItem('sidebarCollapsed');
          if (savedState === 'true') {
            this.isSidebarCollapsed = true;
          }

          // Auto-expand groups containing active items
          this.menuGroups.forEach(group => {
            if (group.items.some(item => this.isActive(item.href))) {
              this.expandedGroups.push(group.title);
            }
          });

          // Check for unauthorized access
          this.checkPagePermission();

          // Global Keyboard Listener for Search
          window.addEventListener('keydown', (e) => {
            // '/' or 'Cmd+K' / 'Ctrl+K'
            if ((e.key === '/' && e.target.tagName !== 'INPUT' && e.target.tagName !== 'TEXTAREA') || 
                ((e.metaKey || e.ctrlKey) && e.key === 'k')) {
              e.preventDefault();
              const searchInput = document.getElementById('globalSearchInput');
              if (searchInput) {
                searchInput.focus();
                this.showSearchDropdown = true;
              }
            }
            if (e.key === 'Escape') {
              this.showSearchDropdown = false;
            }
          });
        },

        checkPagePermission() {
          const currentPath = window.location.pathname;
          // Flatten menu items
          const allItems = this.menuGroups.flatMap(g => g.items);
          const currentItem = allItems.find(item => item.href === currentPath || currentPath.startsWith(item.href + '/'));

          if (currentItem && currentItem.permission && !this.hasPermission(currentItem.permission)) {
            // Wait for store to be ready then redirect
            setTimeout(() => {
              if (!this.hasPermission(currentItem.permission)) {
                window.location.href = '/dashboard';
              }
            }, 500);
          }
        },

        toggleSidebar() {
          this.isSidebarCollapsed = !this.isSidebarCollapsed;
          localStorage.setItem('sidebarCollapsed', this.isSidebarCollapsed);
        },

        toggleGroup(title) {
          if (this.isSidebarCollapsed) {
            this.isSidebarCollapsed = false;
          }
          if (this.expandedGroups.includes(title)) {
            this.expandedGroups = this.expandedGroups.filter(t => t !== title);
          } else {
            this.expandedGroups.push(title);
          }
        },

        get allNavItems() {
          return this.menuGroups.flatMap(group => group.items);
        },

        isActive(path) {
          return window.location.pathname === path || window.location.pathname.startsWith(path + '/');
        },

        hasPermission(permission) {
          if (!permission) return true;
          if (!this.user) return false;
          // Admin/CEO override
          if (this.user.position === 'Admin' || this.user.position === 'CEO') return true;
          return (this.user.permissions || []).includes(permission);
        },

        get user() {
          return this.$store.app.user;
        },

        get token() {
          return this.$store.app.token;
        },

        api(endpoint, method = 'GET', data = null) {
          return this.$store.app.api(endpoint, method, data);
        },

        logout() {
          this.$store.app.logout();
        },

        // Expose notification methods
        get notifications() {
          return this.$store.app.notifications;
        },
        get confirmModal() {
          return this.$store.app.confirmModal;
        },
        closeConfirm() {
          this.$store.app.closeConfirm();
        },
        onConfirm() {
          this.$store.app.onConfirm();
        },

        // Global Search Logic
        async executeSearch() {
          if (!this.searchQuery || this.searchQuery.length < 2) {
            this.searchResults = { tickets: [], contacts: [], products: [] };
            this.showSearchDropdown = false;
            return;
          }

          this.isSearching = true;
          this.showSearchDropdown = true;

          clearTimeout(this.searchDebounce);
          this.searchDebounce = setTimeout(async () => {
            try {
              const response = await this.api(`/search/global?q=${encodeURIComponent(this.searchQuery)}`);
              this.searchResults = response.data;
            } catch (error) {
              console.error('Search error:', error);
            } finally {
              this.isSearching = false;
            }
          }, 300);
        }
      }));
    });
  </script>

