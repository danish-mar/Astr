          <a
            href="/contacts"
            class="flex flex-col items-center space-y-1 px-4 py-2 rounded-lg hover:bg-primary-50 transition-colors group"
          >
            <i
              class="fas fa-address-book text-xl text-gray-600 group-hover:text-primary-600"
            ></i>
            <span
              class="text-xs font-medium text-gray-700 group-hover:text-primary-700"
              >Contacts</span
            >
          </a>
          <a
            href="/categories"
            class="flex flex-col items-center space-y-1 px-4 py-2 rounded-lg hover:bg-primary-50 transition-colors group"
          >
            <i
              class="fas fa-tags text-xl text-gray-600 group-hover:text-primary-600"
            ></i>
            <span
              class="text-xs font-medium text-gray-700 group-hover:text-primary-700"
              >Categories</span
            >
          </a>
          <a
            href="/settings"
            class="flex flex-col items-center space-y-1 px-4 py-2 rounded-lg hover:bg-primary-50 transition-colors group"
          >
            <i
              class="fas fa-cog text-xl text-gray-600 group-hover:text-primary-600"
            ></i>
            <span
              class="text-xs font-medium text-gray-700 group-hover:text-primary-700"
              >Settings</span
            >
          </a>
        </div>
      </div>
    </nav>

    <!-- Alpine.js Data -->
    <script>
      // Create Alpine store for shared data
      document.addEventListener('alpine:init', () => {
        Alpine.store('app', {
          token: localStorage.getItem('astr_token'),
          user: null,
          
          init() {
            const userStr = localStorage.getItem('astr_user');
            if (userStr) {
              try {
                this.user = JSON.parse(userStr);
              } catch (e) {
                this.user = { name: 'User', email: '' };
              }
            }
            
            // Check auth on protected pages
            if (!this.token && !window.location.pathname.includes('/login')) {
              window.location.href = '/login';
            }
          },
          
          async api(endpoint, method = 'GET', data = null) {
            const config = {
              method,
              url: `/api/v1${endpoint}`,
              headers: {
                'Content-Type': 'application/json',
              }
            };
            
            if (this.token) {
              config.headers['Authorization'] = `Bearer ${this.token}`;
            }
            
            if (data) {
              config.data = data;
            }
            
            try {
              const response = await axios(config);
              return response.data;
            } catch (error) {
              console.error('API Error:', error);
              if (error.response?.status === 401) {
                this.logout();
              }
              throw error;
            }
          },
          
          logout() {
            localStorage.removeItem('astr_token');
            localStorage.removeItem('astr_user');
            this.token = null;
            this.user = null;
            window.location.href = '/login';
          }
        });
      });
      
      function appData() {
        return {
          sidebarOpen: false,
          
          get user() {
            return this.$store.app.user;
          },
          
          get token() {
            return this.$store.app.token;
          },
          
          api(endpoint, method = 'GET', data = null) {
            return this.$store.app.api(endpoint, method, data);
          },
          
          logout() {
            this.$store.app.logout();
          }
        }
      }
    </script>


    

  </body>
</html>
