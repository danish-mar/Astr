        <template x-for="item in allNavItems.slice(0, 4)" :key="item.href">
          <a :href="item.href" class="flex flex-col items-center gap-1 transition-all"
            :class="isActive(item.href) ? 'text-gray-900' : 'text-gray-400'">
            <div class="w-10 h-10 rounded-xl flex items-center justify-center transition-all"
              :class="isActive(item.href) ? 'bg-gray-900 text-white shadow-lg shadow-gray-200 scale-110' : 'bg-transparent'">
              <i :class="item.icon" class="text-xs"></i>
            </div>
            <span class="text-[9px] font-bold uppercase tracking-widest" x-text="item.label"></span>
          </a>
        </template>
        <button @click="sidebarOpen = true" class="flex flex-col items-center gap-1 text-gray-400">
          <div class="w-10 h-10 rounded-xl flex items-center justify-center bg-gray-50 text-gray-400">
            <i class="fas fa-ellipsis-h text-xs"></i>
          </div>
          <span class="text-[9px] font-bold uppercase tracking-widest">More</span>
        </button>
      </nav>
    </div>
  </div>

  <!-- Mobile Sidebar Overlay & Menu -->
  <div x-show="sidebarOpen" class="fixed inset-0 z-50 md:hidden" x-cloak>
    <!-- Backdrop -->
    <div x-show="sidebarOpen" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0"
