<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <title>
    <%= title || 'Astr' %>
  </title>

  <!-- Favicon: Dynamic Star SVG -->
  <link rel="icon" type="image/svg+xml"
    href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 576 512'><path fill='%23007aff' d='M259.3 17.8L194 150.2 47.9 171.5c-26.2 3.8-36.7 36.1-17.7 54.6l105.7 103-25 145.5c-4.5 26.3 23.2 46 46.4 33.7L288 439.6l130.7 68.7c23.2 12.2 50.9-7.4 46.4-33.7l-25-145.5 105.7-103c19-18.5 8.5-50.8-17.7-54.6L382 150.2 316.7 17.8c-11.7-23.6-45.6-23.9-57.4 0z'/></svg>">

  <!-- Google Fonts: Inter (Apple-like) -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Font Awesome 6 -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

  <!-- Animate.css -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

  <!-- Alpine.js -->
  <script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/collapse@3.13.3/dist/cdn.min.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.3/dist/cdn.min.js"></script>

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

  <!-- Axios -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

  <!-- Custom API Utility -->
  <script src="/js/utils/api.js"></script>

  <!-- Custom Tailwind Config -->
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter', '-apple-system', 'BlinkMacSystemFont', 'Segoe UI', 'Roboto', 'Helvetica Neue', 'Arial', 'sans-serif'],
          },
          colors: {
            primary: {
              50: "#f2f8ff",
              100: "#e6f1ff",
              200: "#cce4ff",
              300: "#99c9ff",
              400: "#66adff",
              500: "#007aff", // Apple Blue
              600: "#0062cc",
              700: "#004999",
              800: "#003166",
              900: "#001833",
            },
            gray: {
              50: "#f9fafb", // Apple background gray
              100: "#f3f4f6",
              200: "#e5e7eb",
              300: "#d1d5db",
              400: "#9ca3af",
              500: "#6b7280",
              600: "#4b5563",
              700: "#374151",
              800: "#1f2937",
              900: "#111827",
            }
          },
          boxShadow: {
            'ios': '0 4px 20px -5px rgba(0, 0, 0, 0.05)',
            'ios-hover': '0 10px 25px -5px rgba(0, 0, 0, 0.1)',
            'glass': '0 8px 32px 0 rgba(31, 38, 135, 0.07)',
          },
          animation: {
            "slide-up": "slideUp 0.4s cubic-bezier(0.16, 1, 0.3, 1)",
            "slide-down": "slideDown 0.4s cubic-bezier(0.16, 1, 0.3, 1)",
            "fade-in": "fadeIn 0.3s ease-in",
            "scale-in": "scaleIn 0.2s cubic-bezier(0.16, 1, 0.3, 1)",
            "press": "press 0.1s ease-out",
          },
          keyframes: {
            slideUp: {
              "0%": { transform: "translateY(20px)", opacity: "0" },
              "100%": { transform: "translateY(0)", opacity: "1" },
            },
            slideDown: {
              "0%": { transform: "translateY(-20px)", opacity: "0" },
              "100%": { transform: "translateY(0)", opacity: "1" },
            },
            fadeIn: {
              "0%": { opacity: "0" },
              "100%": { opacity: "1" },
            },
            scaleIn: {
              "0%": { transform: "scale(0.95)", opacity: "0" },
              "100%": { transform: "scale(1)", opacity: "1" },
            },
            press: {
              "0%": { transform: "scale(1)" },
              "100%": { transform: "scale(0.96)" },
            }
          },
        },
      },
    };
  </script>

  <style>
    /* Hide scrollbar globally */
    * {
      scrollbar-width: none;
      /* Firefox */
      -ms-overflow-style: none;
      /* IE and Edge */
    }

    /* Hide scrollbar for Chrome, Safari and Opera */
    *::-webkit-scrollbar {
      display: none;
    }

    ::-webkit-scrollbar {
      display: none;
    }

    ::-webkit-scrollbar-track {
      background: transparent;
    }

    ::-webkit-scrollbar-thumb {
      background: #d1d5db;
      border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #9ca3af;
    }

    /* Smooth transitions */
    * {
      transition-property: background-color, border-color, color, fill, stroke, opacity, box-shadow, transform, filter, backdrop-filter;
      transition-duration: 200ms;
      transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Smooth Height Transitions for Submenus */
    [x-cloak] {
      display: none !important;
    }

    .custom-scrollbar::-webkit-scrollbar {
      width: 4px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
      background: transparent;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
      background: #e2e8f0;
      border-radius: 10px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
      background: #cbd5e1;
    }

    /* Glassmorphism utilities */
    .glass {
      background: rgba(255, 255, 255, 0.75);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .glass-dark {
      background: rgba(30, 30, 30, 0.6);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* Tooltip styles */
    .group\/tooltip:hover .group-hover\/tooltip\:opacity-100 {
      opacity: 1;
      transform: translateX(0);
    }

    .group\/tooltip .group-hover\/tooltip\:opacity-100 {
      transform: translateX(-10px);
      transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    /* Sidebar Transition */
    .sidebar-transition {
      transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    body {
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
  </style>
</head>

<body class="bg-gray-50 min-h-screen text-gray-900 font-sans selection:bg-primary-100 selection:text-primary-700"
  x-data="appData" x-cloak>

  <!-- Desktop Layout -->
  <div class="flex h-screen overflow-hidden">

    <!-- Sidebar (Desktop) -->
    <aside
      class="hidden md:flex flex-col m-6 mr-0 rounded-[32px] bg-white border border-gray-100 shadow-sm relative overflow-hidden sidebar-transition"
      :class="isSidebarCollapsed ? 'w-20' : 'w-72'">

      <!-- Sidebar Header -->
      <div class="p-8 pb-4">
        <div class="flex items-center space-x-3 group cursor-pointer" @click="toggleSidebar()">
          <div
            class="w-11 h-11 rounded-2xl bg-gray-900 flex items-center justify-center text-white shadow-lg transition-transform group-hover:scale-105 active:scale-95 flex-shrink-0">
            <i class="fas fa-star text-lg"></i>
          </div>
          <div class="flex flex-col transition-all duration-500 overflow-hidden"
            :class="isSidebarCollapsed ? 'w-0 opacity-0' : 'w-auto opacity-100'">
            <span class="text-xl font-bold tracking-tight text-gray-900 leading-none">Astr</span>
            <span class="text-[9px] font-bold text-gray-400 uppercase tracking-widest mt-1">Management</span>
          </div>
        </div>
      </div>

      <!-- Navigation Matrix -->
      <nav class="flex-1 px-4 py-8 space-y-4 overflow-y-auto custom-scrollbar overflow-x-hidden">
        <template x-for="group in menuGroups" :key="group.title">
          <div class="space-y-1">
            <!-- Category Header / Toggle -->
            <div class="relative group/tooltip">
              <button @click="toggleGroup(group.title)"
                class="w-full flex items-center justify-between px-5 py-2 group/header hover:bg-gray-50/50 rounded-xl transition-all overflow-hidden"
                :class="isSidebarCollapsed ? 'justify-center' : ''">
                <!-- Collapsed Icon -->
                <i x-show="isSidebarCollapsed" :class="group.icon"
                  class="text-xs text-gray-300 group-hover/header:text-gray-600 transition-all"></i>

                <span
                  class="text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em] group-hover/header:text-gray-600 transition-all duration-500 whitespace-nowrap"
                  x-text="group.title"
                  :class="isSidebarCollapsed ? 'w-0 opacity-0 pointer-events-none' : 'w-auto opacity-100'"></span>
                <i class="fas fa-chevron-right text-[10px] text-gray-300 transition-all duration-500" :class="[
                    expandedGroups.includes(group.title) ? 'rotate-90 text-gray-400' : '',
                    isSidebarCollapsed ? 'w-0 opacity-0' : 'w-auto opacity-100'
                  ]"></i>
              </button>

              <!-- Tooltip for Collapsed Category -->
              <div x-show="isSidebarCollapsed"
                class="absolute left-full ml-4 px-3 py-1 bg-gray-900 text-white text-[10px] font-bold uppercase tracking-widest rounded-md opacity-0 group-hover/tooltip:opacity-100 pointer-events-none transition-all z-50 whitespace-nowrap">
                <span x-text="group.title"></span>
              </div>
            </div>

            <!-- Group Items -->
            <div x-show="expandedGroups.includes(group.title) || isSidebarCollapsed" x-collapse class="space-y-1 pt-1">
              <template x-for="item in group.items" :key="item.href">
                <div class="relative group/tooltip">
                  <a :href="item.href"
                    class="flex items-center px-5 py-3 rounded-2xl transition-all duration-300 group/link relative overflow-hidden"
                    :class="[
                      isActive(item.href) ? 'bg-gray-50 text-gray-900 shadow-sm' : 'text-gray-400 hover:text-gray-900 hover:bg-gray-50/50',
                      isSidebarCollapsed ? 'justify-center space-x-0' : 'space-x-3'
