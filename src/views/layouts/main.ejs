<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <title>
    <%= title || 'Astr' %>
  </title>

  <!-- Favicon: Dynamic Star SVG -->
  <link rel="icon" type="image/svg+xml"
    href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 576 512'><path fill='%23007aff' d='M259.3 17.8L194 150.2 47.9 171.5c-26.2 3.8-36.7 36.1-17.7 54.6l105.7 103-25 145.5c-4.5 26.3 23.2 46 46.4 33.7L288 439.6l130.7 68.7c23.2 12.2 50.9-7.4 46.4-33.7l-25-145.5 105.7-103c19-18.5 8.5-50.8-17.7-54.6L382 150.2 316.7 17.8c-11.7-23.6-45.6-23.9-57.4 0z'/></svg>">

  <!-- Google Fonts: Outfit -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Font Awesome 6 -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

  <!-- Animate.css -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

  <!-- Alpine.js -->
  <script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/collapse@3.13.3/dist/cdn.min.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.3/dist/cdn.min.js"></script>

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

  <!-- Axios -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

  <!-- Custom API Utility -->
  <script src="/js/utils/api.js"></script>

  <!-- Custom Tailwind Config -->
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Outfit', 'Inter', 'sans-serif'],
          },
          colors: {
            primary: {
              50: "#f5f3ff",
              100: "#ede9fe",
              200: "#ddd6fe",
              300: "#c4b5fd",
              400: "#a78bfa",
              500: "#7c3aed", // Vibrant Purple
              600: "#6d28d9", // Deep Purple
              700: "#5b21b6",
              800: "#4c1d95",
              900: "#2e1065",
            },
            surface: {
              white: "#FFFFFF",
              soft: "#F9F8FF",
              muted: "#F3F0FF",
            }
          },
          boxShadow: {
            'purple': '0 10px 30px -10px rgba(109, 40, 217, 0.1)',
            'glass': '0 8px 32px 0 rgba(109, 40, 217, 0.05)',
          },
          animation: {
            "slide-up": "slideUp 0.4s cubic-bezier(0.16, 1, 0.3, 1)",
            "slide-down": "slideDown 0.4s cubic-bezier(0.16, 1, 0.3, 1)",
            "fade-in": "fadeIn 0.3s ease-in",
            "scale-in": "scaleIn 0.2s cubic-bezier(0.16, 1, 0.3, 1)",
            "press": "press 0.1s ease-out",
          },
          keyframes: {
            slideUp: {
              "0%": { transform: "translateY(20px)", opacity: "0" },
              "100%": { transform: "translateY(0)", opacity: "1" },
            },
            slideDown: {
              "0%": { transform: "translateY(-20px)", opacity: "0" },
              "100%": { transform: "translateY(0)", opacity: "1" },
            },
            fadeIn: {
              "0%": { opacity: "0" },
              "100%": { opacity: "1" },
            },
            scaleIn: {
              "0%": { transform: "scale(0.95)", opacity: "0" },
              "100%": { transform: "scale(1)", opacity: "1" },
            },
            press: {
              "0%": { transform: "scale(1)" },
              "100%": { transform: "scale(0.96)" },
            }
          },
        },
      },
    };
  </script>

  <style>
    /* Hide scrollbar globally */
    * {
      scrollbar-width: none;
      /* Firefox */
      -ms-overflow-style: none;
      /* IE and Edge */
    }

    /* Hide scrollbar for Chrome, Safari and Opera */
    *::-webkit-scrollbar {
      display: none;
    }

    ::-webkit-scrollbar {
      display: none;
    }

    ::-webkit-scrollbar-track {
      background: transparent;
    }

    ::-webkit-scrollbar-thumb {
      background: #d1d5db;
      border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #9ca3af;
    }

    /* Smooth transitions */
    * {
      transition-property: background-color, border-color, color, fill, stroke, opacity, box-shadow, transform, filter, backdrop-filter;
      transition-duration: 200ms;
      transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Smooth Height Transitions for Submenus */
    [x-cloak] {
      display: none !important;
    }

    .custom-scrollbar::-webkit-scrollbar {
      width: 4px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
      background: transparent;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
      background: #e2e8f0;
      border-radius: 10px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
      background: #cbd5e1;
    }

    /* Glassmorphism utilities */
    .glass {
      background: rgba(255, 255, 255, 0.75);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .glass-dark {
      background: rgba(30, 30, 30, 0.6);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* Tooltip styles */
    .group\/tooltip:hover .group-hover\/tooltip\:opacity-100 {
      opacity: 1;
      transform: translateX(0);
    }

    .group\/tooltip .group-hover\/tooltip\:opacity-100 {
      transform: translateX(-10px);
      transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    /* Sidebar Transition */
    .sidebar-transition {
      transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    body {
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
  </style>
</head>

<body class="bg-white min-h-screen text-gray-900 font-sans selection:bg-primary-100 selection:text-primary-700"
  x-data="appData" x-cloak>

  <!-- Desktop Layout -->
  <div class="flex h-screen bg-slate-50/50">

    <!-- Sidebar (Desktop) -->
    <aside
      class="hidden md:flex flex-col bg-white border-r border-slate-200 sidebar-transition flex-shrink-0 transition-all duration-300"
      :class="isSidebarCollapsed ? 'w-20' : 'w-64'">

      <!-- Sidebar Header -->
      <div class="py-8 border-b border-slate-100/50 transition-all duration-300"
        :class="isSidebarCollapsed ? 'px-4' : 'px-6'">
        <div class="flex items-center gap-3 cursor-pointer" @click="toggleSidebar()">
          <div
            class="w-10 h-10 rounded-lg bg-primary-600 flex items-center justify-center text-white shadow-sm flex-shrink-0">
            <i class="fas fa-shop text-sm"></i>
          </div>
          <div class="flex flex-col transition-all duration-300 overflow-hidden"
            :class="isSidebarCollapsed ? 'w-0 opacity-0' : 'w-auto opacity-100'">
            <span class="text-xl font-bold tracking-tight text-slate-900 leading-none whitespace-nowrap">Astr</span>
            <span class="text-[9px] font-bold text-primary-500 uppercase tracking-widest mt-1 whitespace-nowrap">Shop Manager v<%= version %></span>
          </div>
        </div>
      </div>

      <!-- Navigation -->
      <nav class="flex-1 px-3 py-6 space-y-1 overflow-y-auto custom-scrollbar">
        <template x-for="group in menuGroups" :key="group.title">
          <div class="mb-6">
            <div x-show="!isSidebarCollapsed" class="px-4 mb-2 text-[10px] font-bold text-slate-400 uppercase tracking-widest" x-text="group.title"></div>
            <div class="space-y-1">
              <template x-for="item in group.items" :key="item.href">
                <template x-if="hasPermission(item.permission)">
                  <a :href="item.href"
                    class="flex items-center px-4 py-2.5 rounded-lg transition-all group relative overflow-hidden"
                    :class="[
                      isActive(item.href) ? 'bg-primary-50 text-primary-700' : 'text-slate-500 hover:bg-slate-50 hover:text-slate-900',
                      isSidebarCollapsed ? 'justify-center px-2' : ''
                    ]">
                    <div class="w-6 flex justify-center flex-shrink-0" :class="isActive(item.href) ? 'text-primary-600' : 'text-slate-400 group-hover:text-slate-600'">
                      <i :class="item.icon" class="text-sm"></i>
                    </div>
                    <span x-show="!isSidebarCollapsed" class="ml-3 text-sm font-medium tracking-tight" x-text="item.label"></span>
                    <div x-show="isActive(item.href) && !isSidebarCollapsed" class="absolute right-0 top-1/2 -translate-y-1/2 w-1 h-4 bg-primary-600 rounded-l-full"></div>
                  </a>
                </template>
              </template>
            </div>
          </div>
        </template>
      </nav>

      <!-- Sidebar Footer -->
      <div class="p-4 border-t border-slate-100">
        <button @click="logout()"
          class="w-full flex items-center p-3 rounded-lg text-slate-500 hover:bg-red-50 hover:text-red-600 transition-all"
          :class="isSidebarCollapsed ? 'justify-center px-2' : ''">
          <i class="fas fa-power-off text-sm"></i>
          <span x-show="!isSidebarCollapsed" class="ml-3 text-sm font-medium">Log Out</span>
        </button>
      </div>
    </aside>

    <!-- Main Content Area -->
    <div class="flex-1 flex flex-col h-full overflow-hidden">
      
      <!-- Top Header (Desktop & Mobile) -->
      <header class="h-16 bg-white border-b border-slate-200 flex items-center justify-between px-6 flex-shrink-0 z-20">
        <!-- Search -->
        <div class="relative flex-1 max-w-md hidden md:block" @click.away="showSearchDropdown = false">
          <div class="flex items-center bg-slate-50 rounded-lg px-4 py-2 border border-slate-100 group focus-within:bg-white focus-within:border-primary-200 focus-within:shadow-sm transition-all">
            <i class="fas fa-search text-slate-400 text-sm group-focus-within:text-primary-500" x-show="!isSearching"></i>
            <i class="fas fa-circle-notch fa-spin text-primary-500 text-sm" x-show="isSearching" style="display: none;"></i>
            
            <input type="text" 
              id="globalSearchInput"
              x-model="searchQuery"
              @input="executeSearch()"
              @focus="showSearchDropdown = true"
              @keydown.escape="showSearchDropdown = false"
              placeholder="Search anything..." 
              class="ml-3 bg-transparent border-none outline-none text-sm text-slate-900 w-full placeholder:text-slate-400">
            
            <div class="flex items-center gap-1 px-2 py-1 bg-slate-100 rounded border border-slate-200 text-[10px] font-black text-slate-400 uppercase tracking-tighter" x-show="!searchQuery">
              <span class="text-[8px]">âŒ˜</span>K
            </div>
          </div>

          <!-- Search Dropdown Overlay -->
          <div x-show="showSearchDropdown && (searchQuery.length >= 2)" 
               x-transition:enter="transition ease-out duration-200"
               x-transition:enter-start="opacity-0 translate-y-4"
               x-transition:enter-end="opacity-100 translate-y-0"
               class="absolute top-full left-0 right-0 mt-2 bg-white border border-slate-200 rounded-xl shadow-2xl overflow-hidden z-[100]"
               style="display: none;">
            
            <div class="max-h-[480px] overflow-y-auto custom-scrollbar p-2 space-y-4">
              
              <!-- Tickets Section -->
              <template x-if="searchResults.tickets.length > 0">
                <div>
                  <div class="px-3 py-1 text-[9px] font-black text-slate-400 uppercase tracking-widest bg-slate-50/50 rounded-lg mb-1">Tickets</div>
                  <div class="space-y-0.5">
                    <template x-for="item in searchResults.tickets" :key="item.id">
                      <a :href="item.url" class="flex items-start gap-3 p-3 rounded-lg hover:bg-primary-50 group transition-all">
                        <div class="w-8 h-8 rounded bg-amber-50 text-amber-600 flex items-center justify-center flex-shrink-0">
                          <i class="fas fa-wrench text-xs"></i>
                        </div>
                        <div class="min-w-0">
                          <p class="text-sm font-bold text-slate-900 truncate group-hover:text-primary-700" x-text="item.title"></p>
                          <p class="text-[10px] font-medium text-slate-400 truncate" x-text="item.subtitle"></p>
                        </div>
                      </a>
                    </template>
                  </div>
                </div>
              </template>

              <!-- Contacts Section -->
              <template x-if="searchResults.contacts.length > 0">
                <div>
                  <div class="px-3 py-1 text-[9px] font-black text-slate-400 uppercase tracking-widest bg-slate-50/50 rounded-lg mb-1">Contacts</div>
                  <div class="space-y-0.5">
                    <template x-for="item in searchResults.contacts" :key="item.id">
                      <a :href="item.url" class="flex items-start gap-3 p-3 rounded-lg hover:bg-primary-50 group transition-all">
                        <div class="w-8 h-8 rounded bg-blue-50 text-blue-600 flex items-center justify-center flex-shrink-0">
                          <i class="fas fa-address-book text-xs"></i>
                        </div>
                        <div class="min-w-0">
                          <p class="text-sm font-bold text-slate-900 truncate group-hover:text-primary-700" x-text="item.title"></p>
                          <p class="text-[10px] font-medium text-slate-400 truncate" x-text="item.subtitle"></p>
                        </div>
                      </a>
                    </template>
                  </div>
                </div>
              </template>

              <!-- Products Section -->
              <template x-if="searchResults.products.length > 0">
                <div>
                  <div class="px-3 py-1 text-[9px] font-black text-slate-400 uppercase tracking-widest bg-slate-50/50 rounded-lg mb-1">Products</div>
                  <div class="space-y-0.5">
                    <template x-for="item in searchResults.products" :key="item.id">
                      <a :href="item.url" class="flex items-start gap-3 p-3 rounded-lg hover:bg-primary-50 group transition-all">
                        <div class="w-8 h-8 rounded bg-purple-50 text-purple-600 flex items-center justify-center flex-shrink-0">
                          <i class="fas fa-box text-xs"></i>
                        </div>
                        <div class="min-w-0">
                          <p class="text-sm font-bold text-slate-900 truncate group-hover:text-primary-700" x-text="item.title"></p>
                          <p class="text-[10px] font-medium text-slate-400 truncate" x-text="item.subtitle"></p>
                        </div>
                        <template x-if="item.isSold">
                          <span class="ml-auto px-2 py-0.5 bg-rose-100 text-rose-600 text-[8px] font-black uppercase rounded">Sold</span>
                        </template>
                      </a>
                    </template>
                  </div>
                </div>
              </template>

              <!-- Leads Section -->
              <template x-if="searchResults.leads && searchResults.leads.length > 0">
                <div>
                  <div class="px-3 py-1 text-[9px] font-black text-slate-400 uppercase tracking-widest bg-slate-50/50 rounded-lg mb-1">Leads</div>
                  <div class="space-y-0.5">
                    <template x-for="item in searchResults.leads" :key="item.id">
                      <a :href="item.url" class="flex items-start gap-3 p-3 rounded-lg hover:bg-primary-50 group transition-all">
                        <div class="w-8 h-8 rounded bg-emerald-50 text-emerald-600 flex items-center justify-center flex-shrink-0">
                          <i class="fas fa-bullseye text-xs"></i>
                        </div>
                        <div class="min-w-0">
                          <p class="text-sm font-bold text-slate-900 truncate group-hover:text-primary-700" x-text="item.title"></p>
                          <p class="text-[10px] font-medium text-slate-400 truncate" x-text="item.subtitle"></p>
                        </div>
                        <span :class="{
                          'bg-slate-100 text-slate-600': item.status === 'New',
                          'bg-primary-50 text-primary-600': item.status === 'Contacted' || item.status === 'Qualified',
                          'bg-amber-50 text-amber-600': item.status === 'Negotiation',
                          'bg-emerald-50 text-emerald-600': item.status === 'Closed Won',
                          'bg-rose-50 text-rose-600': item.status === 'Closed Lost',
                        }" class="ml-auto px-2 py-0.5 text-[8px] font-black uppercase rounded" x-text="item.status"></span>
                      </a>
                    </template>
                  </div>
                </div>
              </template>

              <!-- Empty State -->
              <div x-show="!isSearching && searchResults.tickets.length === 0 && searchResults.contacts.length === 0 && searchResults.products.length === 0 && (!searchResults.leads || searchResults.leads.length === 0)" 
                   class="p-8 text-center" style="display: none;">
                <div class="w-12 h-12 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-3">
                  <i class="fas fa-search text-slate-200"></i>
                </div>
                <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">No results found for "<span x-text="searchQuery"></span>"</p>
              </div>

            </div>
            
            <div class="p-3 bg-slate-50 border-t border-slate-100 flex items-center justify-between">
              <div class="flex items-center gap-3">
                <div class="flex items-center gap-1 text-[9px] font-bold text-slate-400">
                  <span class="px-1.5 py-0.5 bg-white border border-slate-200 rounded">ESC</span> to close
                </div>
              </div>
              <div class="text-[9px] font-black text-primary-500 uppercase tracking-widest">Global Search Control</div>
            </div>
          </div>
        </div>
        
        <!-- Mobile Toggle (Mobile Only) -->
        <button @click="sidebarOpen = true" class="md:hidden w-10 h-10 rounded-lg bg-slate-50 border border-slate-100 flex items-center justify-center text-slate-600 transition-all">
          <i class="fas fa-bars-staggered text-sm"></i>
        </button>

        <!-- Right Side: User & Notifications -->
        <div class="flex items-center gap-4">
          <!-- Notification Dropdown -->
          <div class="relative" @click.away="showNotificationsDropdown = false">
            <button @click="showNotificationsDropdown = !showNotificationsDropdown" 
                    class="relative w-10 h-10 rounded-lg hover:bg-slate-50 text-slate-400 hover:text-slate-600 transition-all">
              <i class="fas fa-bell text-sm"></i>
              <span x-show="unreadCount > 0" 
                    class="absolute top-2.5 right-2.5 w-1.5 h-1.5 bg-primary-500 rounded-full border border-white"></span>
            </button>

            <!-- Notifications Dropdown Overlay -->
            <div x-show="showNotificationsDropdown" 
                 x-transition:enter="transition ease-out duration-200"
                 x-transition:enter-start="opacity-0 scale-95 translate-y-2"
                 x-transition:enter-end="opacity-100 scale-100 translate-y-0"
                 class="absolute right-0 mt-2 w-80 bg-white border border-slate-200 rounded-xl shadow-2xl z-[100] overflow-hidden" 
                 style="display: none;">
              
              <div class="p-4 border-b border-slate-100 flex items-center justify-between">
                <div>
                  <h3 class="text-xs font-black text-slate-900 uppercase tracking-widest">Notifications</h3>
                  <p class="text-[9px] font-bold text-slate-400 uppercase tracking-tighter mt-0.5" x-text="unreadCount + ' UNREAD'"></p>
                </div>
                <button @click="markAllAsRead()" class="text-[9px] font-black text-primary-600 uppercase tracking-widest hover:text-primary-700">Mark all as read</button>
              </div>

              <div class="max-h-80 overflow-y-auto custom-scrollbar">
                <template x-if="notifications.length === 0">
                  <div class="p-8 text-center">
                    <i class="fas fa-bell-slash text-slate-200 text-2xl mb-2"></i>
                    <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">No notifications</p>
                  </div>
                </template>
                <template x-for="notif in notifications" :key="notif.id">
                  <div class="p-4 border-b border-slate-50 hover:bg-slate-50 transition-colors cursor-pointer group"
                       :class="{'bg-primary-50/20': !notif.read}">
                    <div class="flex gap-3">
                      <div :class="{
                        'bg-blue-50 text-blue-600': notif.type === 'info',
                        'bg-emerald-50 text-emerald-600': notif.type === 'success',
                        'bg-amber-50 text-amber-600': notif.type === 'warning',
                        'bg-rose-50 text-rose-600': notif.type === 'error'
                      }" class="w-8 h-8 rounded-lg flex items-center justify-center flex-shrink-0">
                        <i :class="notif.icon" class="text-xs"></i>
                      </div>
                      <div class="flex-1 min-w-0">
                        <div class="flex items-center justify-between mb-0.5">
                          <p class="text-[11px] font-bold text-slate-900 truncate" x-text="notif.title"></p>
                          <span class="text-[8px] font-black text-slate-400 uppercase tracking-tighter" x-text="notif.time"></span>
                        </div>
                        <p class="text-[10px] text-slate-500 line-clamp-2 leading-relaxed" x-text="notif.message"></p>
                      </div>
                    </div>
                  </div>
                </template>
              </div>

              <div class="p-3 bg-slate-50 border-t border-slate-100 text-center">
                <a href="#" class="text-[9px] font-black text-slate-400 uppercase tracking-widest hover:text-slate-600 transition-all">View All Activity Log</a>
              </div>
            </div>
          </div>

          <div class="h-6 w-px bg-slate-100"></div>
          <div class="flex items-center gap-3 pl-1">
            <div class="text-right hidden sm:block">
              <p class="text-sm font-bold text-slate-900 leading-none" x-text="user?.name || 'User'"></p>
              <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mt-1" x-text="user?.position || 'Admin'"></p>
            </div>
            <div class="w-10 h-10 rounded-lg bg-primary-50 border border-primary-100 flex items-center justify-center text-primary-600 font-bold text-sm shadow-sm">
              <span x-text="user?.name?.charAt(0) || 'U'"></span>
            </div>
            <i class="fas fa-chevron-down text-[10px] text-slate-300"></i>
          </div>
        </div>
      </header>

      <!-- Content Scroll Area -->
      <main class="flex-1 overflow-y-auto bg-slate-50/30 p-4 md:p-8 pb-24 md:pb-8 custom-scrollbar">
        <div class="max-w-[1600px] mx-auto w-full">
          <%- body %>
        </div>
      </main>

      <!-- Bottom Navigation (Mobile Only) -->
      <nav
        class="md:hidden fixed bottom-0 left-0 right-0 z-40 bg-white/80 backdrop-blur-xl border-t border-gray-100 px-6 py-3 flex items-center justify-between safe-area-bottom">
        <template x-for="item in allNavItems.filter(i => hasPermission(i.permission)).slice(0, 4)" :key="item.href">
          <a :href="item.href" class="flex flex-col items-center gap-1 transition-all"
            :class="isActive(item.href) ? 'text-primary-700' : 'text-gray-400'">
            <div class="w-10 h-10 rounded-xl flex items-center justify-center transition-all"
              :class="isActive(item.href) ? 'bg-primary-600 text-white shadow-purple scale-110' : 'bg-transparent'">
              <i :class="item.icon" class="text-xs"></i>
            </div>
