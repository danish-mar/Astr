                    <div class="w-8 flex justify-center transition-all duration-300 flex-shrink-0"
                      :class="isActive(item.href) ? 'text-gray-900 scale-110' : 'text-gray-300 group-hover/link:text-gray-600 group-hover/link:scale-110'">
                      <i :class="item.icon" class="text-base"></i>
                    </div>
                    <span
                      class="text-sm font-semibold tracking-tight transition-all duration-500 whitespace-nowrap overflow-hidden"
                      x-text="item.label" :class="isSidebarCollapsed ? 'w-0 opacity-0' : 'w-auto opacity-100'"></span>

                    <!-- Subtle Pulse Indicator for active -->
                    <div x-show="isActive(item.href)"
                      class="absolute rounded-full bg-gray-900 shadow-sm transition-all duration-500"
                      :class="isSidebarCollapsed ? 'inset-0 bg-gray-900/5' : 'right-4 w-1.5 h-1.5'">
                    </div>
                  </a>

                  <!-- Tooltip for Collapsed Item -->
                  <div x-show="isSidebarCollapsed"
                    class="absolute left-full ml-4 px-3 py-1 bg-gray-900 text-white text-[10px] font-bold uppercase tracking-widest rounded-md opacity-0 group-hover/tooltip:opacity-100 pointer-events-none transition-all z-50 whitespace-nowrap">
                    <span x-text="item.label"></span>
                  </div>
                </div>
              </template>
            </div>
          </div>
        </template>
      </nav>

      <!-- User Node -->
