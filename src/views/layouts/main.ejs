        </a>
        <a href="/contacts"
          class="flex flex-col items-center space-y-1 px-4 py-2 rounded-lg hover:bg-primary-50 transition-colors group">
          <i class="fas fa-address-book text-xl text-gray-600 group-hover:text-primary-600"></i>
          <span class="text-xs font-medium text-gray-700 group-hover:text-primary-700">Contacts</span>
        </a>
        <a href="/categories"
          class="flex flex-col items-center space-y-1 px-4 py-2 rounded-lg hover:bg-primary-50 transition-colors group">
          <i class="fas fa-tags text-xl text-gray-600 group-hover:text-primary-600"></i>
          <span class="text-xs font-medium text-gray-700 group-hover:text-primary-700">Categories</span>
        </a>
        <a href="/settings"
          class="flex flex-col items-center space-y-1 px-4 py-2 rounded-lg hover:bg-primary-50 transition-colors group">
          <i class="fas fa-cog text-xl text-gray-600 group-hover:text-primary-600"></i>
          <span class="text-xs font-medium text-gray-700 group-hover:text-primary-700">Settings</span>
        </a>
      </div>
    </div>
  </nav>

  <!-- Alpine.js Data -->
  <script>
    // Create Alpine store for shared data
    // Create Alpine store for shared data
    (function () {
      const initStore = () => {
        Alpine.store('app', {
          token: localStorage.getItem('astr_token'),
          user: null,

          init() {
            const userStr = localStorage.getItem('astr_user');
            if (userStr) {
              try {
                this.user = JSON.parse(userStr);
              } catch (e) {
                this.user = { name: 'User', email: '' };
              }
            }

            // Check auth on protected pages
            if (!this.token && !window.location.pathname.includes('/login')) {
              window.location.href = '/login';
            }
          },

          async api(endpoint, method = 'GET', data = null) {
            const config = {
              method,
              url: `/api/v1${endpoint}`,
              headers: {
                'Content-Type': 'application/json',
              }
            };

            if (this.token) {
              config.headers['Authorization'] = `Bearer ${this.token}`;
            }

            if (data) {
              config.data = data;
            }

            try {
              const response = await axios(config);
              return response.data;
            } catch (error) {
              console.error('API Error:', error);
              if (error.response?.status === 401) {
                this.logout();
              }
              throw error;
            }
          },

          logout() {
            localStorage.removeItem('astr_token');
            localStorage.removeItem('astr_user');
            this.token = null;
            this.user = null;
            window.location.href = '/login';
          },

          // Notifications
          notifications: [],
          notify(message, type = 'success') {
            const id = Date.now();
            this.notifications.push({ id, message, type });
            setTimeout(() => {
              this.notifications = this.notifications.filter(n => n.id !== id);
            }, 3000);
          },

          // Confirmation Modal
          confirmModal: {
            show: false,
            title: '',
            message: '',
            callback: null
          },
          confirm(title, message, callback) {
            this.confirmModal = {
              show: true,
              title,
              message,
              callback
            };
          },
          closeConfirm() {
            this.confirmModal.show = false;
            this.confirmModal.callback = null;
          },
          onConfirm() {
            if (this.confirmModal.callback) {
              this.confirmModal.callback();
            }
            this.closeConfirm();
          }
        });
      };

      if (window.Alpine) {
        initStore();
      } else {
        document.addEventListener('alpine:init', initStore);
      }
    })();

    function appData() {
      return {
        sidebarOpen: false,

        get user() {
          return this.$store.app.user;
        },

        get token() {
          return this.$store.app.token;
        },

        api(endpoint, method = 'GET', data = null) {
          return this.$store.app.api(endpoint, method, data);
        },

        logout() {
          this.$store.app.logout();
        },

        // Expose notification methods
        get notifications() {
          return this.$store.app.notifications;
        },
        get confirmModal() {
          return this.$store.app.confirmModal;
        },
        closeConfirm() {
          this.$store.app.closeConfirm();
        },
        onConfirm() {
          this.$store.app.onConfirm();
        }
      }
    }
  </script>




  <%- script %>

    <!-- Notifications Container -->
    <div class="fixed top-4 right-4 z-50 space-y-2 pointer-events-none">
      <template x-for="notification in notifications" :key="notification.id">
        <div x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 translate-y-2"
          x-transition:enter-end="opacity-100 translate-y-0" x-transition:leave="transition ease-in duration-200"
          x-transition:leave-start="opacity-100 translate-y-0" x-transition:leave-end="opacity-0 translate-y-2"
          class="pointer-events-auto min-w-[300px] max-w-sm bg-white/90 backdrop-blur-md rounded-xl shadow-lg border border-gray-100 p-4 flex items-start space-x-3">
          <div class="flex-shrink-0">
            <i x-show="notification.type === 'success'" class="fas fa-check-circle text-green-500 text-xl"></i>
            <i x-show="notification.type === 'error'" class="fas fa-exclamation-circle text-red-500 text-xl"></i>
            <i x-show="notification.type === 'info'" class="fas fa-info-circle text-blue-500 text-xl"></i>
          </div>
          <div class="flex-1 pt-0.5">
            <p class="text-sm font-medium text-gray-900" x-text="notification.message"></p>
          </div>
          <button @click="$store.app.notifications = $store.app.notifications.filter(n => n.id !== notification.id)"
            class="flex-shrink-0 text-gray-400 hover:text-gray-500">
            <i class="fas fa-times"></i>
          </button>
        </div>
      </template>
    </div>

    <!-- iOS Style Confirmation Modal -->
    <div x-show="confirmModal.show" style="display: none;"
      class="fixed inset-0 z-[60] flex items-center justify-center px-4">
      <!-- Backdrop -->
      <div x-show="confirmModal.show" x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-200" x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0" class="absolute inset-0 bg-black/30 backdrop-blur-sm"
        @click="closeConfirm()">
      </div>

      <!-- Modal -->
      <div x-show="confirmModal.show" x-transition:enter="transition cubic-bezier(0.16, 1, 0.3, 1) duration-300"
        x-transition:enter-start="opacity-0 scale-90 translate-y-4"
        x-transition:enter-end="opacity-100 scale-100 translate-y-0"
        x-transition:leave="transition cubic-bezier(0.16, 1, 0.3, 1) duration-200"
        x-transition:leave-start="opacity-100 scale-100 translate-y-0"
        x-transition:leave-end="opacity-0 scale-90 translate-y-4"
        class="relative bg-white/90 backdrop-blur-xl rounded-2xl shadow-2xl w-full max-w-xs overflow-hidden text-center">

        <div class="p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-2" x-text="confirmModal.title"></h3>
          <p class="text-sm text-gray-600" x-text="confirmModal.message"></p>
        </div>

        <div class="grid grid-cols-2 border-t border-gray-200/50 divide-x divide-gray-200/50">
          <button @click="closeConfirm()"
            class="px-4 py-3 text-blue-600 font-medium hover:bg-gray-50 active:bg-gray-100 transition-colors">
            Cancel
          </button>
          <button @click="onConfirm()"
            class="px-4 py-3 text-red-600 font-semibold hover:bg-gray-50 active:bg-gray-100 transition-colors">
            Confirm
          </button>
        </div>
      </div>
    </div>

    <script>
      // Global helper functions
      window.showNotification = (message, type = 'success') => {
        Alpine.store('app').notify(message, type);
      };

      window.showConfirm = (title, message, callback) => {
        Alpine.store('app').confirm(title, message, callback);
      };
    </script>
</body>

