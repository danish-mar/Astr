          <i class="fas fa-home text-xl text-gray-600 group-hover:text-primary-600"></i>
          <span class="text-xs font-medium text-gray-700 group-hover:text-primary-700">Dashboard</span>
        </a>
        <a href="/products"
          class="flex flex-col items-center space-y-1 px-4 py-2 rounded-lg hover:bg-primary-50 transition-colors group">
          <i class="fas fa-box text-xl text-gray-600 group-hover:text-primary-600"></i>
          <span class="text-xs font-medium text-gray-700 group-hover:text-primary-700">Products</span>
        </a>
        <a href="/service-tickets"
          class="flex flex-col items-center space-y-1 px-4 py-2 rounded-lg hover:bg-primary-50 transition-colors group relative">
          <i class="fas fa-ticket text-xl text-gray-600 group-hover:text-primary-600"></i>
          <span class="text-xs font-medium text-gray-700 group-hover:text-primary-700">Tickets</span>
