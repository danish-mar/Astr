# ==============================================
# Astr Application Configuration
# ==============================================

# Application Settings
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ==============================================
# MongoDB Configuration
# ==============================================

# For Local Development (without Docker)
MONGODB_URI=mongodb://root:rootasdf@localhost:6545/astr?authSource=admin

# For Docker Compose (uncomment when using docker-compose)
# MONGODB_URI=mongodb://root:rootasdf@astr-mongo:27017/astr?authSource=admin

# MongoDB Credentials (used by docker-compose for MongoDB container)
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=rootasdf
MONGO_DATABASE=astr

# ==============================================
# MinIO / S3 Configuration
# ==============================================

# For Docker Compose (internal)
# S3_ENDPOINT=http://astr-minio:9000

# For Local Development (external)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=astr_minio_user
S3_SECRET_KEY=astr_minio_password
S3_BUCKET=astr-inventory
S3_PUBLIC_URL=http://localhost:9000/astr-inventory
S3_IMAGE_DIR=products
